
@{
    ViewBag.Title = "ChangePassword";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
<script src="~/Scripts/JS-ChangePassword/ChangePassword.js"></script>
@section featured{

    @using (Html.BeginForm("ChangePassword", "Account", FormMethod.Post))
    {
        <input type="hidden" value="@User.Identity.Name" name="Username" />
        <div class="container" style="margin-top:20px">

            <form id="signupform" class="form-horizontal" role="form">
                <div class="row"><label style="margin-left:10px">Mật khẩu hiện tại</label></div>
                <div style="margin-bottom: 15px" class="input-group col-sm-6">
                    <span class="input-group-addon"><i class="glyphicon glyphicon-cog"></i></span>
                    <input id="passwordold" type="password" class="form-control" placeholder="Mật khẩu cũ" autocomplete="off">
                </div>
                <div class="row" style="margin-bottom: 25px">
                    <div class="col-sm-6">
                        <span id="noteforwrongpass" style="color:#FF0004;"> * Bạn đã nhập sai mật khẩu, vui lòng nhập lại!</span>
                    </div>
                </div>
                <div class="row"><label style="margin-left:10px">Mật khẩu mới</label></div>
                <div style="margin-bottom: 15px" class="input-group col-sm-6">
                    <span class="input-group-addon"><i class="glyphicon glyphicon-cog"></i></span>
                    <input id="password1" type="password" class="form-control" name="Password" placeholder="Mật khẩu mới" autocomplete="off">
                </div>
                <div class="row" style="margin-bottom: 25px">
                    <div class="col-sm-4">
                        <div class="col-sm-6">
                            <span id="8char" class="glyphicon glyphicon-remove" style="color:#FF0004;"></span> Có 8 ký tự<br>
                        </div>
                        <div class="col-sm-6">
                            <span id="ucase" class="glyphicon glyphicon-remove" style="color:#FF0004;"></span> Có chữ in hoa
                        </div>
                        @*<div class="col-sm-6">
                            <span id="lcase" class="glyphicon glyphicon-remove" style="color:#FF0004;"></span> Phải có chữ thường <br>
                        </div>*@
                        <div class="col-sm-6">
                            <span id="num" class="glyphicon glyphicon-remove" style="color:#FF0004;"></span> Có chữ số
                        </div>
                    </div>

                </div>
                <div class="row"><label style="margin-left:10px">Nhập lại mật khẩu</label></div>
                <div style="margin-bottom: 15px" class="input-group col-sm-6">
                    <span class="input-group-addon"><i class="glyphicon glyphicon-cog"></i></span>
                    <input id="password2" type="password" class="form-control" name="password2" placeholder="Xác nhận mật khẩu" autocomplete="off">
                </div>

                <div class="row" style="margin-bottom: 25px">
                    <div class="col-sm-4">
                        <div class="col-sm-6">
                            <span id="pwmatch" class="glyphicon glyphicon-remove" style="color:#FF0004;"></span> Mật khẩu hợp lệ
                        </div>
                    </div>

                </div>
                <div class="col-sm-12 controls">
                    <div class="row">
                        <div class="col-sm-4">
                            <button type="submit" id="Submit" class="btn btn-success ladda-button Submit" data-style="expand-right">Save</button>
                            <a class="btn btn-danger ladda-button" id="btn_Canel" data-style="expand-right">Quay lại</a>
                        </div>
                    </div>
                </div>
            </form>
        </div>

    }
}





