
@{
    ViewBag.Title = "Tin Tức Song Ân";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@model VTSolution.ViewModel.Customer.IntroduceIndexModel
@{
    var about = Helper.GetData();
    ViewBag.Description = about.HomePageDiscription;
    ViewBag.Keywords = about.HomePageKeywords;
    ViewBag.Url = Request.Url.AbsoluteUri;
}
<script src="~/plugin/paging/pagingJS.js"></script>
<script src="~/plugin/paging/pagingJS2.js"></script>

<input type='hidden' id='current_page' />
<input type='hidden' id='show_per_page' />
<input type='hidden' id='current_page1' />
<input type='hidden' id='show_per_page1' />
<div id="main-home">

    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <!-- Nav tabs -->
                <div class="card">
                    <ul class="nav nav-tabs" role="tablist">
                        <li role="presentation" class="active"><a href="#home" aria-controls="home" role="tab" data-toggle="tab"><i class="fa fa-info-circle"></i>  <span>@Resource.Tintucnoibo</span></a></li>

                        <li role="presentation"><a href="#settings" aria-controls="settings" role="tab" data-toggle="tab"><i class="fa fa-newspaper-o"></i>  <span>@Resource.Tintucxahoi</span></a></li>

                    </ul>
                    <!-- Tab panes -->
                    <div class="tab-content">
                        <div role="tabpanel" class="tab-pane active" id="home">
                            <div class="container">
                                <h1 class="breadcrumb">@Resource.Tintucnoibo</h1>
                                <div class="row" id="newstt">
                                    <div class="col-sm-12" id="newslist1">
                                        @foreach (var item in Model.News.Where(t => t.GroupId == 3))
                                        {
                                            <div class="list-songan news">
                                                <div class="row">
                                                    <div class="col-sm-4 col-ms-4 img">
                                                        <img src="@item.ImagePath" />
                                                    </div>
                                                    <div class="col-sm-8 col-ms-8 text">
                                                        <h3><a href="@Url.Action("NewsDetail", "ViewNews" , new {title=Util.GenerateUrl(item.Vi_Title.Trim()), id=item.Id})">@item.Vi_Title</a></h3>
                                                        @item.Vi_Description
                                                    </div><div class="clearfix"></div><div class="more"><a href="@Url.Action("NewsDetail", "ViewNews" , new {title=Util.GenerateUrl(item.Vi_Title.Trim()), id=item.Id})">@Resource.Xemchitiet</a></div>
                                                </div>
                                            </div>

                                        }

                                    </div>
                                    <div class="clearfix"></div>
                                </div>
                            </div>
                            <div class="col-xs-12 col-sm-12 col-md-12" style="text-align: center; margin-top: 10px">
                                <ul class="pagination" id="page_navigation1"></ul>
                            </div>
                        </div>
                        <div role="tabpanel" class="tab-pane" id="settings">

                            <div class="container">
                                <h1 class="breadcrumb">@Resource.Tintucxahoi</h1>
                                <div class="row" id="newstt">
                                    <div class="col-sm-12" id="newslist">
                                        @foreach (var item in Model.News.Where(t=>t.GroupId==4))
                                        {

                                        <div class="list-songan news">
                                            <div class="row">
                                                <div class="col-sm-4 col-ms-4 img">
                                                    <img src="@item.ImagePath" />
                                                </div>
                                                <div class="col-sm-8 col-ms-8 text">
                                                    <h3><a href="@Url.Action("NewsDetail", "ViewNews" , new {title=Util.GenerateUrl(item.Vi_Title.Trim()), id=item.Id})">@item.Vi_Title</a></h3>
                                                    @item.Vi_Description
                                                </div><div class="clearfix"></div><div class="more"><a href="@Url.Action("NewsDetail", "ViewNews" , new {title=Util.GenerateUrl(item.Vi_Title.Trim()), id=item.Id})">@Resource.Xemchitiet</a></div>
                                            </div>
                                        </div>

                                        }

                                    </div>
                                    <div class="clearfix"></div>
                                </div>
                            </div>
                            <div class="col-xs-12 col-sm-12 col-md-12" style="text-align: center; margin-top: 10px">
                                <ul class="pagination" id="page_navigation"></ul>
                            </div>
                        </div>

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<style>
    #newslist1 img, #newslist img {
        width: 100% !important;
    }

    .active1 a {
        background-color: #428bca !important;
        border-color: #428bca !important;
    }
</style>
<script>
    var $ = jQuery.noConflict();
    $(document).ready(function () {

        $("div.bhoechie-tab-menu>div.list-group>a").click(function (e) {
            e.preventDefault();
            $(this).siblings('a.active').removeClass("active");
            $(this).addClass("active");
            var index = $(this).index();
            $("div.bhoechie-tab>div.bhoechie-tab-content").removeClass("active");
            $("div.bhoechie-tab>div.bhoechie-tab-content").eq(index).addClass("active");
        });
    });

</script>

