@model VTSolution.ViewModel.Customer.NewsIndexModel
@{
    ViewBag.Title = Model.News.Vi_Title;
    ViewBag.TitleSEO = Model.News.Vi_MetaTitle;
    ViewBag.Description = Model.News.Vi_MetaDescription;
    ViewBag.Keywords = Model.News.Vi_MetaKeyword;
    ViewBag.Url = Request.Url.AbsoluteUri;
    Layout = "~/Views/Shared/_Layout.cshtml";

}
<div id="main-home">
    <div class="container">
        <div class="col-md-8 col-sm-10 col-xs-12">
            <h3>@Model.News.Vi_Title</h3>
            @Html.Raw(HttpUtility.HtmlDecode(Model.News.Vi_Content))
            <div class="row">
                <div class="fb-comments" data-href="@Request.Url.AbsoluteUri" data-width="100%" data-numposts="5"></div>
            </div>
        </div>
        <div class="col-md-4 col-sm-2 col-xs-12" id="sidebar-right">
            <h3 style="text-align:center">Tin tức liên quan</h3>
            <div id="sidebar">
                <div class="testimonial">
                    <div class="owl-carousel owl-theme owl-responsive-992 owl-loaded" id="testi">
                       @foreach (var item in Model.ListNews)
                       {
                        <div class="item">
                            <a href="@Url.Action("NewsDetail", "ViewNews", new { titleduan = Util.GenerateUrl(item.Vi_Title.Trim()), id = item.Id })">
                                <div class="item-img"><img src="@item.ImagePath" width="100%" alt=""></div>
                                <h3>@item.Vi_Title</h3>
                                <div class="item-desc">
                                    @item.Vi_Description
                                </div>
                            </a>
                          
                        </div>
                       }

                        <div class="owl-controls"><div class="owl-nav"><div class="owl-prev" style="display: none;">prev</div><div class="owl-next" style="display: none;">next</div></div><div class="owl-dots" style="display: none;"></div></div>
                    </div>
                    <div class="testi-nav">
                        <a href="javascript:void(0);" class="prevBtn"><i class="fa fa-angle-left"></i></a>
                        <a href="javascript:void(0);" class="nextBtn"><i class="fa fa-angle-right"></i></a>
                        <a href="@Url.Action("Products","Home")" class="more"> Xem thêm <i class="fa fa-long-arrow-right"></i></a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<style>
    img {
        width: 100%;
    }
    #menu-item-6453 a{
            border-bottom-color: #e21c24 !important;

    }
</style>
<script>
    jQuery('#menu-item-6453').attr("value", "active")
    var o = jQuery("#testi"); o.owlCarousel({ responsiveClass: !0, responsive: { 0: { items: 1 }, 992: { items: 1 } }, dots: !1, loop: !0, margin: 0, nav: !1, autoplay:1 }), jQuery(".nextBtn").click(function () { o.trigger("next.owl.carousel") }), jQuery(".prevBtn").click(function () { o.trigger("prev.owl.carousel") })
</script>
