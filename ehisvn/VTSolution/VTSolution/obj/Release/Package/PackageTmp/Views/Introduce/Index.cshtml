@{
    ViewBag.Title = "Danh Sách";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
@(Html.Kendo().Grid<VTSolution.ViewModel.Manager.IntroduceIndexModel>()
    .Name("grid")
    .Columns(columns =>
    {
       // columns.Bound(p => p.ImageHome).HeaderHtmlAttributes(new { style = "text-align:center" }).Width(200).Title("Hình ảnh").ClientTemplate("<img style='width:100%;'src='#=ImageHome#' />");
        columns.Bound(p => p.GroupName).Title("Thuộc Nhóm").Width(100).HeaderHtmlAttributes(new { style = "text-align:center" });
        columns.Bound(p => p.Vi_Title).Title("Tiêu Đề ").Width(100).HeaderHtmlAttributes(new { style = "text-align:center" });
        columns.Command(command =>
        {
            command.Custom("Edit_Introduces").Text("Sửa").Click("Edit_Introduces");
            command.Destroy().Text("Xóa");
        }).Width(172);
    })
    .ToolBar(toolbar => toolbar.Custom().Text("Thêm mới").Action("Create", "Introduce", new { id = 0 }))
    .Pageable(pageable => pageable
    .Refresh(true)
    .PageSizes(true)
    .ButtonCount(10))
    .Sortable()
    .Scrollable()
    .Resizable(resize => resize.Columns(true))
    .HtmlAttributes(new { style = "height:1000px;" })
    .DataSource(dataSource => dataSource
        .Ajax()
        .PageSize(20)

        .Model(model => model.Id(p => p.Id))

                          .Read(read => read.Action("Introduces_Read", "Introduce"))
                          .Destroy(update => update.Action("Introduces_Destroy", "Introduce"))
    )
)
