@{
    ViewBag.Title = "Danh Sách Dự Án";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
@(Html.Kendo().Grid<VTSolution.ViewModel.Manager.ProjectIndexModel>()
    .Name("grid")
    .Columns(columns =>
    {
        columns.Bound(p => p.Vi_Title).Title("Tiêu Đề ").Width(100).HeaderHtmlAttributes(new { style = "text-align:center" });
    
        columns.Command(command =>
        {
            command.Custom("Edit_Project").Text("Sửa").Click("Edit_Project");
           // command.Edit().Text("Vị Trí");
            command.Destroy().Text("Xóa");
        }).Width(172);
    })
    .ToolBar(toolbar => toolbar.Custom().Text("Thêm mới").Action("Create", "Project", new { id = 0 }))
           .Editable(editable => editable.Mode(GridEditMode.PopUp))
           .Filterable()
    .Pageable(pageable => pageable
    .Refresh(true)
    .PageSizes(true)
    .ButtonCount(10))
    .Sortable()
    .Scrollable()
    .Resizable(resize => resize.Columns(true))
    .HtmlAttributes(new { style = "height:1000px;" })
    .DataSource(dataSource => dataSource
        .Ajax()
        .PageSize(20)

        .Model(model => model.Id(p => p.Id))

                          .Read(read => read.Action("Project_Read", "Project"))
                                  .Update(update => update.Action("Prodject_Update", "Project"))
                                          .Destroy(update => update.Action("Project_Destroy", "Project"))
    )
)
