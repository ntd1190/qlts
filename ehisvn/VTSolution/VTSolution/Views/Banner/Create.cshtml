@model VTSolution.Models.Banner
@using Kendo.Mvc.UI
@{
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
    if (Model.Id != 0)
    {
        ViewBag.Title = "Cập nhật banner";
    }
    else
    {
        ViewBag.Title = "Thêm mới banner";
    }

}

@section featured{
    @using (Html.BeginForm("Create", "Banner"))
    {
        <div class="box box-primary">
            <form role="form">
                @Html.HiddenFor(model => model.Id)
                <div class="box-body">
                    <div class="row">
                        <div class="col-md-6">
                            <div class="col-md-3">
                                <label for="input_link">Hình TV(1400 x 700)</label>
                            </div>
                            <div class="col-md-9">
                                <div class="row">
                                    <button id="btninput_link">Chọn Hình</button>
                                </div>
                                <div class="row image">
                                    @if (Model.ImagePath != null)
                                    {
                                        <div class="thaihoa">
                                            <img id="ImagePath" class="hoadeptrai" name="ImagePath" src='@Model.ImagePath' style="width: 150px;height: 100px;" />
                                            <input type="hidden" name="ImagePath" class="PTH" id="multi12" value="@Model.ImagePath" /><a onclick="clickne(this);" class="glyphicon glyphicon-remove hidden-cus"></a>
                                        </div>
                                    }
                                </div>
                            </div>
                        </div>
                    </div>
                    <br />
                    <div class="row">
                        <div class="col-md-6">
                            <div class="col-md-3">
                                <label for="Title">Link</label>
                            </div>
                            <div class="col-md-9">
                                @Html.TextAreaFor(model => model.Link, new { id = "Title", @class = "form-control" })
                            </div>
                        </div>
                        <div class="col-md-6"></div>
                    </div>
                    <br />
                    <div class="row">
                        <div class="col-md-6">
                            <div class="col-md-3">
                                <label for="input_link">Hình TA(1400 x 700)</label>
                            </div>
                            <div class="col-md-9">
                                <div class="row">
                                    <button id="btninput_link1">Chọn Hình</button>
                                </div>
                                <div class="row image2">
                                    @if (Model.ImagePath != null)
                                    {
                                        <div class="thaihoa">
                                            <img id="ImagePath2" class="hoadeptrai" name="ImagePath2" src='@Model.ImagePath2' style="width: 150px;height: 100px;" />
                                            <input type="hidden" name="ImagePath2" class="PTH" id="multi12" value="@Model.ImagePath2" /><a onclick="clickne(this);" class="glyphicon glyphicon-remove hidden-cus"></a>
                                        </div>
                                    }
                                </div>
                            </div>
                        </div>
                    </div>
                    <br />
                    <div class="row">
                        <div class="col-md-12">
                            @Html.CheckBoxFor(model => model.IsLydo) <label for="Title">Hình Lý Do Chọn</label>
                            <br />
                            @Html.CheckBoxFor(model => model.IsReason) <label for="Title">Hình Sự Khác Biệt</label>
                            <br />
                            @Html.CheckBoxFor(model => model.IsPartner) <label for="Title">Hình Khách Hàng</label>
                            <br />
                            @Html.CheckBoxFor(model => model.IsLearn) <label for="Title">Learn</label>
                            <br />
                            @Html.CheckBoxFor(model => model.IsWork) <label for="Title">Work</label>
                            <br />
                            @Html.CheckBoxFor(model => model.IsPlay)  <label for="Title">Play</label>
                        </div>
                        @*<div class="col-md-4">
                                <label for="Title">Nhập Số</label>
                                @Html.TextBoxFor(model => model.Number)
                            </div>*@
                    </div>
                    <br />
                    <br />
                    <div class="row">
                        <div class="col-md-6">
                            <div class="col-md-3">
                                <label for="Title">Link TA</label>
                            </div>
                            <div class="col-md-9">
                                @Html.TextAreaFor(model => model.Link2, new { id = "Title", @class = "form-control" })
                            </div>
                        </div>
                        <div class="col-md-6"></div>
                    </div>
                    <br />
                    <div class="box-footer">
                        <div class="row">
                            <div class="col-md-4">
                                <button type="submit" id="Submit" class="btn btn-primary ladda-button Submit" data-style="expand-right">Cập nhật</button>
                                <a class="btn btn-danger ladda-button" id="btn_Canel" href="/vi/Banner/Index" data-style="expand-right">Quay lại</a>
                            </div>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    }
}
<script>
    $('#btninput_link').on('click', function () {

        $('.image .thaihoa').find('input').each(function () {
            $(this).remove();
        });
        $('.image .thaihoa').find('img').each(function () {
            $(this).remove();
        });
        window.open('/TinyFileManager.NET/dialog.aspx?profile=notinymce', 'demo', 'toolbar=0,location=0,status=0,menubar=0,scrollbars=yes,resizable=1,width=900,height=600');
        return false;
    })

    $('#btninput_link1').on('click', function () {

        $('.image2 .thaihoa').find('input').each(function () {
            $(this).remove();
        });
        $('.image2 .thaihoa').find('img').each(function () {
            $(this).remove();
        });
        window.open('/TinyFileManager.NET/dialog.aspx?profile=notinymce3', 'demo', 'toolbar=0,location=0,status=0,menubar=0,scrollbars=yes,resizable=1,width=900,height=600');
        return false;
    })
    function clickne(e) {
        var x = $(e).parent();
        x.remove();
    }
</script>

<style>
    .image img {
        width: 100px;
        height: 100px;
    }
</style>



