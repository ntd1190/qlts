
@{
    ViewBag.Title = "Danh Sách Khách Hàng";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
@(Html.Kendo().Grid<VTSolution.ViewModel.Manager.PositionIndexModel>()
    .Name("grid")
    .Columns(columns =>
    {
        columns.Bound(p => p.Name).Title("Tên Vị Trí").Width(100).HeaderHtmlAttributes(new { style = "text-align:center" });
        columns.Command(command =>
        {
            command.Custom("Edit_Position").Text("Sửa").Click("Edit_Position");
            command.Destroy().Text("Xóa");
        }).Width(172);
    })
    .ToolBar(toolbar => toolbar.Custom().Text("Thêm mới").Action("Create", "Position", new { id = 0 }))
    .Pageable(pageable => pageable
    .Refresh(true)
    .PageSizes(true)
    .ButtonCount(10))
    .Sortable()
    .Scrollable()
    .Resizable(resize => resize.Columns(true))
    .HtmlAttributes(new { style = "height:1000px;" })
    .DataSource(dataSource => dataSource
        .Ajax()
        .PageSize(20)

        .Model(model => model.Id(p => p.Id))

                              .Read(read => read.Action("Position_Read", "Position"))
                              .Destroy(update => update.Action("Position_Destroy", "Position"))
    )
)



