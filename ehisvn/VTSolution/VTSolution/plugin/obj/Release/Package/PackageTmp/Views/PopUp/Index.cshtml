@{
    ViewBag.Title = "Hinh Popup";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}



@(Html.Kendo().Grid<VTSolution.ViewModel.Manager.AboutUsIndexModel>()
    .Name("grid")
    .Columns(columns =>
    {
        columns.Bound(p => p.ImagePath).HeaderHtmlAttributes(new { style = "text-align:center" }).Width(350).Title("Hình ảnh").ClientTemplate("<img style='width:100%;'src='#=ImagePath#' />");
        columns.Command(command =>
        {
            command.Custom("Edit_PopUp").Text("Sửa").Click("Edit_PopUp");
            //command.Destroy().Text("Xóa");
        }).Width(172);
    })
        //.ToolBar(toolbar => toolbar.Custom().Text("Thêm mới").Action("Create", "PopUp", new { id = 0 }))
    .Pageable(pageable => pageable
    .Refresh(true)
    .PageSizes(true)
    .ButtonCount(10))
    .Sortable()
    .Scrollable()
    .Resizable(resize => resize.Columns(true))
    .HtmlAttributes(new { style = "height:1000px;" })
    .DataSource(dataSource => dataSource
        .Ajax()
        .PageSize(20)

        .Model(model => model.Id(p => p.Id))

                          .Read(read => read.Action("PopUp_Read", "PopUp"))
                                    
    )
)
