@model VTSolution.ViewModel.Customer.ProjectIndexModel
@{
    if (Model.Project.Vi_MetaTitle == null)
    {
        ViewBag.Title = Model.Project.Vi_Title.ToUpper();
    }
    else
    {
        ViewBag.Title = Model.Project.Vi_MetaTitle.ToUpper();
    }
    ViewBag.Description = Model.Project.Vi_MetaDescription;
    ViewBag.Keywords = Model.Project.Vi_MetaKeyword;
    ViewBag.Url = Request.Url.AbsoluteUri;
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container" id="news-details-page">
    <!--BACKGROUND-->
    <div class="bg-page" style="width: 1517px; height: 665px; opacity: 1;">
        <div class="color-bg">
            <img src="@Helper.GetBanner().ImagePath" alt="Background - Tin tức và sự kiện" style="width: 1517px; height: 829.083px; left: 0px; top: auto; bottom: 0px;">
        </div>
    </div>
    <!--BACKGROUND -->
    <!--CENTER-->
    <div class="center" style="opacity: 1;">
        <div class="content-page news-full">
            <div class="colum-box-news-details">

                <div class="colum-box-news">
                    <div class="scrollE" tabindex="0">
                        <div class="news-content">
                            <div class="news-tab" style="opacity: 1;">
                                <div class="detail-news">
                                    <div class="news-text">
                                        <h1>@Model.Project.Vi_Title</h1>
                                        @Html.Raw(HttpUtility.HtmlDecode(Model.Project.Vi_Content))
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!--CENTER-->
    <!--BOTTOM-->
    @Html.Partial("../ViewPartial/_Footer")
    <!--BOTTOM-->

</div>
<script>
    $(document).ready(function () {
        $('.duan').addClass('current');
    })
</script>