@{
    ViewBag.Title = "Danh Sách Nhóm ";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}



@(Html.Kendo().Grid<VTSolution.ViewModel.Manager.GroupIntroduceIndexModel>()
    .Name("grid")
    .Columns(columns =>
    {
        columns.Bound(p => p.Id).Title("Mã Nhóm").Width(100).HeaderHtmlAttributes(new { style = "text-align:center" });
        columns.Bound(p => p.Name).Title("Tên Nhóm").Width(100).HeaderHtmlAttributes(new { style = "text-align:center" });
        columns.Command(command =>
        {
            command.Custom("Edit_GroupIntroduce").Text("Sửa").Click("Edit_GroupIntroduce");
            command.Destroy().Text("Xóa");
        }).Width(172);
    })
            .ToolBar(toolbar => toolbar.Custom().Text("Thêm mới").Action("Create", "GroupIntroduce", new { id = 0 }))
            .Filterable()
    .Pageable(pageable => pageable
    .Refresh(true)
    .PageSizes(true)
    .ButtonCount(10))
    .Sortable()
    .Scrollable()
    .Resizable(resize => resize.Columns(true))
    .HtmlAttributes(new { style = "height:1000px;" })
    .DataSource(dataSource => dataSource
        .Ajax()
        .PageSize(20)

        .Model(model => model.Id(p => p.Id))

                                  .Read(read => read.Action("GroupIntroduce_Read", "GroupIntroduce"))
                                              .Destroy(update => update.Action("GroupIntroduce_Destroy", "GroupIntroduce"))
    )
)




