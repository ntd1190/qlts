
@{
    ViewBag.Title = "Danh Sách Đối Tác";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}



@(Html.Kendo().Grid<VTSolution.ViewModel.Manager.BannerIndexModel>()
    .Name("grid")
    .Columns(columns =>
    {
        columns.Bound(p => p.ImagePath).HeaderHtmlAttributes(new { style = "text-align:center" }).Width(350).Title("Hình ảnh").ClientTemplate("<img style='width:150px;height:150px;'src='#=ImagePath#' />");
        columns.Bound(p => p.Link).Title("Link").Width(100).HeaderHtmlAttributes(new { style = "text-align:center" });
       
        columns.Command(command =>
        {
            command.Custom("Edit_Partner").Text("Sửa").Click("Edit_Partner");
          
            command.Destroy().Text("Xóa");
        }).Width(172);
    })
    .ToolBar(toolbar => toolbar.Custom().Text("Thêm mới").Action("Create", "Partner", new { id = 0 }))
    .Editable(editable => editable.Mode(GridEditMode.PopUp))
    .Pageable(pageable => pageable
    .Refresh(true)
    .PageSizes(true)
    .ButtonCount(10))
    .Sortable()
    .Scrollable()
    .Resizable(resize => resize.Columns(true))
    .HtmlAttributes(new { style = "height:1000px;" })
    .DataSource(dataSource => dataSource
        .Ajax()
        .PageSize(20)

        .Model(model => model.Id(p => p.Id))

                          .Read(read => read.Action("Partner_Read", "Partner"))
                                   
                                      .Destroy(update => update.Action("Partner_Destroy", "Partner"))
    )
)
