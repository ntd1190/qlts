@{
    ViewBag.Title = "Thông tin văn phòng công ty";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}



@(Html.Kendo().Grid<VTSolution.ViewModel.Manager.AddressIndexModel>()
    .Name("grid")
    .Columns(columns =>
    {
        columns.Bound(p => p.Vi_Name).Title("Tên ").Width(100).HeaderHtmlAttributes(new { style = "text-align:center" });
        columns.Bound(p => p.Eng_Name).Title("Tên Tiếng Anh").Width(100).HeaderHtmlAttributes(new { style = "text-align:center" });
        columns.Bound(p => p.Mail).Title("Email").Width(100).HeaderHtmlAttributes(new { style = "text-align:center" });
        columns.Bound(p => p.Phone).Title("HotLine").Width(100).HeaderHtmlAttributes(new { style = "text-align:center" });
        columns.Command(command =>
        {
            command.Custom("Edit_Address").Text("Sửa").Click("Edit_Address");
        }).Width(172);
    })
        .ToolBar(toolbar => toolbar.Custom().Text("Thêm mới").Action("Create", "Address", new { id = 0 }))
    .Pageable(pageable => pageable
    .Refresh(true)
    .PageSizes(true)
    .ButtonCount(10))
    .Sortable()
    .Scrollable()
    .Filterable()
    .Resizable(resize => resize.Columns(true))
    .HtmlAttributes(new { style = "height:1000px;" })
    .DataSource(dataSource => dataSource
        .Ajax()
        .PageSize(20)

        .Model(model => model.Id(p => p.Id))

                              .Read(read => read.Action("Address_Read", "Address"))
                                   .Destroy(update => update.Action("File_Destroy", "Address"))
    )
)
