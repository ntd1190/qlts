@model VTSolution.ViewModel.Customer.HomeIndexModel
@{
    var about = Helper.GetData();
    ViewBag.Title = about.HomePageTitle;
    ViewBag.Description = about.HomePageDiscription;
    ViewBag.Keywords = about.HomePageKeywords;
    ViewBag.Url = Request.Url.AbsoluteUri;
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<script src="~/Scripts/Angia-Js/jssor.slider.min.js"></script>
<script src="~/Scripts/Angia-Js/JssorSlider2.js"></script>
<link href="~/Content/Boostrap/bootstrap.css" rel="stylesheet" />
<script src="~/Scripts/Boostrap/bootstrap.min.js"></script>
<!-- Jssor Slider Begin -->
<!-- To move inline styles to css file/block, please specify a class name for each element. -->
<div class="container">
    <div class="bg-page">
        @*<div class="home-bee">*@
        <div id="slider1_container" style="margin: 0 auto;position: absolute;left: 0px;overflow: hidden;z-index:100">
            <!-- Loading Screen -->
            <div u="loading" style="position: absolute; top: 0px; left: 0px;">
                <div style="filter: alpha(opacity=70); opacity: 0.7; position: absolute; display: block;
                                                                                                                                                                                                                                                              top: 0px; left: 0px; width: 100%; height: 100%;">
                </div>
                <div style="position: absolute; display: block; background: url(/Images/Angia-icon/loading.gif) no-repeat center center;
                                                                                                                                                                                                                                                                                                                                                      top: 0px; left: 0px; width: 100%; height: 100%;">
                </div>
            </div>
            <!-- Slides Container -->
            <div u="slides" class="jssor-bee" style="cursor: move; position: absolute; left: 0px; top: 0px;
                                                                                                                                                                                                                                                                                                                                                                                                                                              overflow: hidden;">
                @foreach (var item in Model.ListBanner.Where(t => t.Isbanner))
                {
                    <div>
                        <a href="@item.Link" target="_blank">
                            <img u="image" src="@item.ImagePath" alt="@item.Name" />
                        </a>
                    </div>
                }
                <!-- Arrow Left -->
                <span u="arrowleft" class="prevslide ">
                </span>
                <!-- Arrow Right -->
                <span u="arrowright" class="nextslide ">
                </span>
            </div>

            <!--#endregion Arrow Navigator Skin End -->
        </div>
        
        @*</div>*@
    </div>
    
    @Html.Partial("../ViewPartial/_Footer1")
    <!--BOTTOM-->

</div>

