<style>
    .nicescroll-rails {
        display: none !important;
    }

    .imgcontent img {
        width: 100% !important;
    }

    .imgxs img {
        width: 100% !important;
    }
</style>
<link href="~/Scripts/lightslider/lightslider.css" rel="stylesheet" />
<script src="~/Scripts/lightslider/lightslider.js"></script>
<script>
    $(document).ready(function () {
        $("#content-slider").lightSlider({
            loop: true,
            item: 6,
            slideMove: 6,
            minSlider: 1,
            maxSlider: 6,
            responsive: [
            {
                breakpoint: 800,
                settings: {
                    item: 3,
                    slideMove: 1,
                    slideMargin: 6,
                }
            },
            {
                breakpoint: 480,
                settings: {
                    item: 1,
                    slideMove: 1
                }
            }
            ]
        });

    });
</script>