@{
    ViewBag.Title = "Danh Sách Chi Tiết ";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}



@(Html.Kendo().Grid<VTSolution.ViewModel.Manager.UtilitiesIndexModel>()
    .Name("grid")
    .Columns(columns =>
    {
        columns.Bound(p => p.Id).Title("Mã").Width(100).HeaderHtmlAttributes(new { style = "text-align:center" });
        columns.Bound(p => p.Name).Title("Tên").Width(100).HeaderHtmlAttributes(new { style = "text-align:center" });

        columns.Command(command =>
        {
            command.Custom("Edit_DetailProject").Text("Sửa").Click("Edit_DetailProject");
            command.Destroy().Text("Xóa");
        }).Width(172);
    })
        .ToolBar(toolbar => toolbar.Custom().Text("Thêm mới").Action("Create", "DetailProject", new { id = 0 }))
              .Editable(editable => editable.Mode(GridEditMode.PopUp))
    .Pageable(pageable => pageable
    .Refresh(true)
    .PageSizes(true)
    .ButtonCount(10))
    .Sortable()
    .Scrollable()
    .Resizable(resize => resize.Columns(true))
    .HtmlAttributes(new { style = "height:1000px;" })
    .DataSource(dataSource => dataSource
        .Ajax()
        .PageSize(20)

        .Model(model => model.Id(p => p.Id))

                          .Read(read => read.Action("DetailProject_Read", "DetailProject"))
                          .Destroy(update => update.Action("DetailProject_Destroy", "DetailProject"))
    )
)




