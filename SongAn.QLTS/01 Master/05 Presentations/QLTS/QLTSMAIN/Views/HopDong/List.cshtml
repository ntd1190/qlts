
@{
    ViewBag.Title = "Hợp đồng";
}
<div class="container-fluid">

    <div ng-controller="HopDongListCtrl as ctrl" class="panel panel-default" keyboard="ctrl.keys" ng-init="ctrl.onInitView({userInfo: @ViewBag.userInfo})">
        <div class="panel-heading">
            <div class="panel-title clearfix">
                <span><i class="fa fa-fw fa-star-o"></i>Hợp đồng</span>
                <div class="pull-right">
                    <form class="form-inline">
                        <div class="form-group form-group-sm">
                            <div class="input-group input-group-sm">
                                <input class="form-control" id="txtsearch" ng-model="ctrl.data.searchString" ng-keypress="$event.keyCode===13?ctrl.action.getPage():0" autofocus />
                                <span class="input-group-btn">
                                    <button class="btn btn-sm btn-primary" ng-click="ctrl.action.getPage()"><i class="fa fa-fw fa-search"></i>Tìm kiếm (F3)</button>

                                </span>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>


        <div class="panel-body">
            <h3 class="text-center no-margin">Danh sách Hợp đồng</h3>
        </div>
        <div class="table-container panel-body">
            <table st-table="ctrl.data.HopDongListDisplay" st-pipe="ctrl.action.getPage" class="table table-bordered table-condensed table-responsive table-hover ">
                <thead class="bg-default text-primary">
                    <tr>
                        <th class="text-center" style="width: 50px;">Chọn</th>
                        <th class="text-center" style="width: 100px;">Số hợp đồng</th>
                        <th class="text-center" style="width: 120px">Ngày hợp đồng</th>
                        <th class="text-center" style="width: 200px">Tên nhà thầu</th>
                        <th class="text-center" style="width: 120px">Đại diện</th>
                        <th class="text-center" style="width: 100px">Giá trị HĐ</th>
                        <th class="text-center" style="width: 200px">Nôi dung</th>
                        <th class="text-center" style="width: 120px">Người tạo</th>
                        <th class="text-center" style="width: 120px">Ngày tạo</th>
                    </tr>
                </thead>
                <tbody>
                    <tr ng-if="ctrl.status.isLoading">
                        <td colspan="100" class="text-center">
                            <i class="fa fa-fw fa-spin fa-spinner"></i>
                        </td>
                    </tr>
                    <tr ng-repeat="HopDong in ctrl.data.HopDongListDisplay" ng-class="(HopDong.isSelected==true)?'info':''">
                        <td st-select-row="HopDong" st-select-mode="multiple" class="text-center"><i class="fa fa-fw text-primary" ng-class="(HopDong.isSelected==true)?'fa-check-square-o':'fa-square-o'"></i></td>
                        <td><a ng-bind="HopDong.SoHopDong" ng-click="ctrl.action.edit(HopDong.HopDongId)" href="javascript:void(0);"></a></td>
                        <td><span> {{ HopDong.NgayHopDong | date : 'dd/MM/yyyy HH:mm'}} </span></td>
                        <td><span ng-bind="HopDong.TenNhaThau"></span></td>
                        <td><span ng-bind="HopDong.DaiDien"></span></td>
                        <td class="text-right"><span ng-bind="HopDong.GiaTriHopDong|number"></span></td>
                        <td><span ng-bind="HopDong.NoiDung"></span></td>
                        <td><span ng-bind="HopDong.TenNguoiTao"></span></td>
                        <td><span> {{ HopDong.NgayTao | date : 'dd/MM/yyyy HH:mm'}} </span></td>
                    </tr>
                </tbody>
                <tfoot>
                    <tr>
                        <td colspan="100" class="text-center">
                            <div st-pagination="" st-items-by-page="10" st-template="~/Scripts/angular/shared/smart-table/template/pagination.custom.html"></div>
                        </td>
                    </tr>
                </tfoot>
            </table>
        </div>
        <div class="panel-footer">
            <button class="btn btn-sm btn-primary" ng-if="ctrl.data.showButtonNew" ng-click="ctrl.action.add()"><i class="fa fa-plus"></i> Mới (F2)</button>&nbsp;&nbsp;&nbsp;
            <button class="btn btn-sm btn-danger" ng-if="ctrl.data.showButtonXoaChon" ng-click="ctrl.action.deleteSelected()"><i class="fa fa-trash-o"></i> Xóa chọn</button>
        </div>
    </div>

</div>
<div ng-controller="HopDongEditCtrl as ctrl" class="panel panel-primary ui-draggable collapse fade" id="HopDongEditPopup" keyboard="ctrl.keys" ng-init="ctrl.onInitView({userInfo: @ViewBag.userInfo})">
    <div class="panel-heading ui-draggable-handle">
        <h2 class="panel-title">
            <span>Thông tin Hợp đồng</span>
            <a class="btn btn-xs btn-primary pull-right" data-toggle="collapse" data-target="#HopDongEditPopup" ng-click="ctrl.action.close()">
                <i class="fa fa-remove"></i>
            </a>
            <i class="fa fa-fw fa-pulse text-primary pull-right fa-spinner" ng-if="ctrl.status.isLoading"></i>
        </h2>
    </div>
    <div style="width: 600px; padding-top: 15px;padding-right: 50px;">
        <form class="form-horizontal">
            <div class="row form-group form-group-sm" ng-class="(ctrl.validate.SoHopDong)?'has-error':''">
                <label class="control-label col-sm-3">Số hợp đồng</label>
                <div class="col-sm-9">
                    <input class="form-control" id="txtSoHopDong" type="text" ng-model="ctrl.data.objHopDong.SoHopDong" required ng-keypress="ctrl.action.keyPress(ctrl.data.objHopDong.SoHopDong,'txtSoHopDong','txtNgayHopDong',$event)" />
                </div>
            </div>

            <div class="row form-group form-group-sm" ng-class="(ctrl.validate.NgayHopDong)?'has-error':''">
                <label class="control-label col-sm-3">Ngày hợp đồng</label>
                <div class="col-sm-9">
                    <input type="text" id="txtNgayHopDong" class="form-control datetimepicker date" placeholder="dd/mm/yyyy" ng-model="ctrl.data.objHopDong.NgayHopDong" ng-keypress="ctrl.action.keyPress(ctrl.data.objHopDong.NgayHopDong,'txtNgayHopDong','txtTenNhaThau',$event)" />
                </div>
            </div>
            <div class="row form-group form-group-sm">
                <label class="control-label col-sm-3">Tên nhà thầu</label>
                <div class="col-sm-9">
                    <input class="form-control" type="text" id="txtTenNhaThau" ng-model="ctrl.data.objHopDong.TenNhaThau" ng-keypress="ctrl.action.keyPress(ctrl.data.objHopDong.TenNhaThau,'txtTenNhaThau','txtDaiDien',$event)" />
                </div>
            </div>
            <div class="row form-group form-group-sm">
                <label class="control-label col-sm-3">Đại diện</label>
                <div class="col-sm-9">
                    <input class="form-control" type="text" id="txtDaiDien" ng-model="ctrl.data.objHopDong.DaiDien" ng-keypress="ctrl.action.keyPress(ctrl.data.objHopDong.DaiDien,'txtDaiDien','txtGiaTriHopDong',$event)" />
                </div>
            </div>
            <div class="row form-group form-group-sm">
                <label class="control-label col-sm-3">Giá trị hợp đồng</label>
                <div class="col-sm-9">
                    <input class="form-control" type="text" id="txtGiaTriHopDong" ng-model="ctrl.data.objHopDong.GiaTriHopDong" ng-keypress="ctrl.action.keyPress(ctrl.data.objHopDong.GiaTriHopDong,'txtGiaTriHopDong','txtNoiDung',$event)" />
                </div>
            </div>
            <div class="row form-group form-group-sm">
                <label class="control-label col-sm-3">Nội dung</label>
                <div class="col-sm-9">
                    <input class="form-control" type="text" id="txtNoiDung" ng-model="ctrl.data.objHopDong.NoiDung" ng-keypress="ctrl.action.keyPress(ctrl.data.objHopDong.NoiDung,'txtNoiDung','txtGhiChu',$event)" />
                </div>
            </div>
            <div class="row form-group form-group-sm">
                <label class="control-label col-sm-3">File đính kèm</label>
                <div class="col-sm-9">
                    <input type="file" class="form-control" file-bind="ctrl.data.file" accept="*" />
                    <a href="@(Url.Content("~/content/upload/")){{ctrl.data.objHopDong.FileDinhKem}}" target="_blank" ng-if="ctrl.data.objHopDong.FileDinhKem">Xem</a>
                </div>
            </div>
        </form>
    </div>
    <div class="panel-footer">
        <button type="button" class="btn btn-sm btn-primary" id="btnluu" ng-if="ctrl.data.showButtonSave" ng-click="ctrl.action.save()"><i class="fa fa-save"></i> Lưu (F8)</button>&nbsp;&nbsp;&nbsp;
        <button type="button" class="btn btn-sm btn-default" ng-click="ctrl.action.refresh()">Thiết lập lại</button>&nbsp;&nbsp;&nbsp;
        <button type="button" class="btn btn-sm btn-default" ng-click="ctrl.action.close()">Đóng</button>
    </div>
</div>

@section ImportStyles{}
@section SetupStyles{}
@section ImportScripts{}
@section SetupScripts{}
@section ImportAngular{
    <script src="~/Scripts/angular/HopDong/service/HopDongService.js"></script>
    <script src="~/Scripts/angular/HopDong/controller/HopDongListCtrl.js"></script>
    <script src="~/Scripts/angular/HopDong/controller/HopDongEditCtrl.js"></script>
}




