@{
    ViewBag.Title = "Sử dụng";
}

<div class="container-fluid">
    <div class="panel panel-default" style="margin-bottom:-1px" ng-controller="SuDungFilterCtrl as ctrl" keyboard="ctrl.keys" ng-init="ctrl.onInitView({userInfo: @ViewBag.userInfo})">
        <div class="panel-heading clearfix">
            <span class="panel-title"><i class="fa fa-fw fa-star-o"></i>Sử dụng</span>
            <div class="btn-group btn-group-sm pull-right">
                <a class="btn btn-primary" data-toggle="collapse" data-target="#SearchCollapse"><i class="fa fa-fw fa-search"></i> Tìm kiếm (F3)</a>
                <a class="btn btn-warning" data-toggle="collapse" data-target="#TuyChonCotPopup"><i class="fa fa-fw fa-cog"></i> Tùy chọn</a>
            </div>
        </div>
        <div class="collapse fade" id="SearchCollapse">
            <div class="panel-body">
                <form class="form-horizontal">
                    <div class="row form-group form-group-sm">
                        <label class="control-label col-sm-2">Ngày</label>
                        <div class="form-inline col-sm-9">
                            <input type="text" id="tungay" class="form-control datetimepicker date" placeholder="dd/mm/yyyy" ng-model="ctrl.data.startDate" /> ~
                            <input type="text" id="denngay" class="form-control datetimepicker date" placeholder="dd/mm/yyyy" ng-model="ctrl.data.endDate" />
                        </div>
                    </div>

                </form>
            </div>
            <div class="panel-footer">
                <a class="btn btn-sm btn-primary" ng-click="ctrl.action.search()">Tìm kiếm (F8)</a>&nbsp;&nbsp;&nbsp;
                <a class="btn btn-sm btn-default" ng-click="ctrl.action.reset()">Thiết lập lại</a>&nbsp;&nbsp;&nbsp;
            </div>
        </div>
    </div>

    <div ng-controller="SuDungListCtrl as ctrl" class="panel panel-default" keyboard="ctrl.keys" ng-init="ctrl.onInitView({userInfo: @ViewBag.userInfo,linkUrl:'@(Url.Content("~/"))'})">
        <div class="panel-heading">
            <span ng-if="ctrl.data.showButtonNew">
                <a class="btn btn-sm btn-primary" href="~/SuDung/edit?id=0">Mới (F2)</a>&nbsp;&nbsp;&nbsp;
            </span>
            <button class="btn btn-sm btn-danger" ng-if="ctrl.data.showButtonXoaChon" ng-click="ctrl.action.deleteSelected()"><i class="fa fa-trash-o"></i> Xóa chọn</button>
        </div>
        <div class="table-container  panel-body">
            <table st-table="ctrl.data.SuDungListDisplay" st-pipe="ctrl.action.getPage" class="table table-bordered table-condensed table-responsive table-hover ">
                <thead class="bg-default text-primary">
                    <tr>
                        <th class="text-center" style="width: 40px;">Chọn</th>
                        @*<th class="text-center" style="width: 40px;">STT</th>*@
                        <th class="text-center" ng-repeat="cot in ctrl.data.listCot|filter:ctrl.action.checkCot">
                            <span ng-bind="::cot.TenCot"></span>
                        </th>

                    </tr>

                </thead>
                <tbody>
                    <tr ng-if="ctrl.status.isLoading">
                        <td colspan="100" class="text-center">
                            <i class="fa fa-fw fa-spin fa-spinner"></i>
                        </td>
                    </tr>
                    <tr ng-repeat="SuDung in ctrl.data.SuDungListDisplay" ng-click="ctrl.action.getPageDetail(SuDung.SuDungId)" id="row_{{SuDung.SuDungId}}" ng-class="(SuDung.isSelected==true)?'info':''">
                        <td st-select-row="SuDung" st-select-mode="multiple" class="text-center"><i class="fa fa-fw text-primary" ng-class="(SuDung.isSelected==true)?'fa-check-square-o':'fa-square-o'"></i></td>
                        @*<td class="text-center">{{$index + 1}}</td>*@
                        <td ng-repeat="cot in ctrl.data.listCot|filter:ctrl.action.checkCot" ng-switch="cot.MaCot">
                            <a ng-switch-when="TenKyLap" href="~/SuDung/edit?id={{SuDung.SuDungId}}">{{ SuDung.TenKyLap}}</a>
                            <span ng-switch-when="NoiDung" style="display:block;min-width:350px">{{ SuDung.NoiDung}}</span>
                            <span ng-switch-when="NgayTao">{{ SuDung.NgayTao | date : 'dd/MM/yyyy'}}</span>
                            <span ng-switch-default ng-bind="::SuDung[cot.MaCot]"></span>
                        </td>

                    </tr>
                </tbody>
                <tfoot>
                    <tr>
                        <td colspan="100" class="text-center">
                            <div st-pagination="" st-items-by-page="10" st-template="~/Scripts/angular/shared/smart-table/template/pagination.custom.html"></div>
                        </td>
                    </tr>
                </tfoot>
            </table>
        </div>

        <div class="panel-heading">
            <span>Thông tin chi tiết</span>
        </div>

        <div class="table-responsive  panel-body">
            <table st-table="ctrl.data.SuDungChiTietListDisplay" style="border: 1px solid #ddd;" class="table table-bordered table-condensed table-responsive table-hover ">
                <thead class="bg-default text-primary">
                    <tr>
                        <th class="text-center" style="min-width: 40px;vertical-align:middle">STT</th>
                        <th class="text-center" style="min-width: 250px;vertical-align:middle">Tên tài sản</th>
                        <th class="text-center" style="min-width: 150px;vertical-align:middle">Bộ phận</th>
                        <th class="text-center" style="min-width: 150px;vertical-align:middle">Cán bộ</th>
                        <th class="text-center" style="min-width: 124px;vertical-align:middle">Số sản phẩm PV</th>
                        <th class="text-center" style="min-width: 134px;vertical-align:middle">ĐVT sản phẩm PV</th>
                        <th class="text-center" style="min-width: 124px;vertical-align:middle">Tổng số NVL SD</th>
                        <th class="text-center" style="min-width: 100px;vertical-align:middle">ĐVT NVLSD</th>
                        <th class="text-center" style="min-width: 200px;vertical-align:middle">Ghi chú</th>

                    </tr>
                </thead>
                <tbody>
                    <tr ng-if="ctrl.status.isLoading">
                        <td colspan="100" class="text-center">
                            <i class="fa fa-fw fa-spin fa-spinner"></i>
                        </td>
                    </tr>
                    <tr ng-repeat="SuDungChiTiet in ctrl.data.SuDungChiTietListDisplay" ng-class="(SuDungChiTiet.isSelected==true)?'info':''">
                        <td class="text-center">{{$index + 1}}</td>
                        <td><span ng-bind="SuDungChiTiet.TenTaiSan"></span></td>
                        <td><span ng-bind="SuDungChiTiet.TenPhongBan"></span></td>
                        <td><span ng-bind="SuDungChiTiet.TenNhanVien"></span></td>
                        <td class="text-right"><span ng-bind="SuDungChiTiet.SoSanPhamPhucVu|number"></span></td>
                        <td class="text-left"><span ng-bind="SuDungChiTiet.DonViTinhSanPham"></span></td>
                        <td class="text-right"><span ng-bind="SuDungChiTiet.SoNguyenLieuSuDung|number"></span></td>
                        <td class="text-left"><span ng-bind="SuDungChiTiet.DonViTinhNguyenLieu"></span></td>
                        <td><span ng-bind="SuDungChiTiet.GhiChu"></span></td>
                    </tr>
                </tbody>
                <tfoot>
                    <tr>
                        <td colspan="100">
                            <p class="text-danger">Tổng số : {{ctrl.data.TongSo}}</p>
                        </td>
                    </tr>
                </tfoot>
            </table>
        </div>

    </div>

    <!-- popup danh sách tùy chọn cột -->
    <div class="panel panel-primary ui-draggable collapse fade" id="TuyChonCotPopup" ng-controller="TuyChonCotListCtrl as ctrl" ng-init="ctrl.onInitView({userInfo: @ViewBag.userInfo,controllerId:'TuyChonCotPopup',MaForm:'FL0026'})">
        <div class="panel-heading ui-draggable-handle">
            <div class="panel-title">
                <span>Tùy chọn cột</span>
                <a class="btn btn-xs btn-primary pull-right" data-toggle="collapse" data-target="#TuyChonCotPopup"><i class="fa fa-remove"></i></a>
            </div>
        </div>
        <div class="table-responsive" style="width: 400px; height: auto;" ng-if="ctrl.data.showList">
            <table class="table table-bordered table-condensed table-hover table-striped" st-table="ctrl.data.listCot">
                <thead>
                    <tr>
                        <th style="width: 65px;">Hiện/ẩn</th>
                        <th>Tên cột</th>
                        <th>Độ rộng</th>
                    </tr>
                </thead>
                <tbody style="height:100px;">
                    <tr ng-repeat="cot in ctrl.data.listCot" ng-class="(cot.isSelected==true)?'info':''" ng-init="cot.isSelected=cot.HienThiYN">
                        <td st-select-row="cot" st-select-mode="multiple" class="text-center"><i class="fa fa-fw text-primary" ng-class="(cot.isSelected==true)?'fa-check-square-o':'fa-square-o'"></i></td>
                        <td><span ng-bind="cot.TenCot"></span></td>
                        <td><span ng-bind="cot.DoRong"></span></td>
                    </tr>
                </tbody>
                <tfoot>
                    <tr>
                        <td colspan="100" class="text-center">
                            <div st-pagination="" st-items-by-page="10" st-template="~/Scripts/angular/shared/smart-table/template/pagination.custom.html"></div>
                        </td>
                    </tr>
                </tfoot>
            </table>
        </div>
        <div class="panel-footer">
            <a class="btn btn-sm btn-primary" ng-click="ctrl.action.apDung()">Áp dụng</a>
            <a class="btn btn-sm btn-default" data-toggle="collapse" data-target="#TuyChonCotPopup">Đóng</a>
        </div>
    </div>
    <!-- / popup danh sách tùy chọn cột -->
</div>


@section ImportStyles{}
