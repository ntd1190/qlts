    <script src="~/Scripts/angular/DeNghiTrangCap/controller/DeNghiTrangCapListCtrl.js"></script>
    <script src="~/Scripts/angular/DeNghiTrangCap/service/DeNghiTrangCapService.js"></script>
    <script src="~/Scripts/angular/DeNghiTrangCap/controller/DenNghiTrangCapFilterCtrl.js"></script>
    <script src="~/Scripts/angular/DeNghiTrangCap/controller/DeNghiTrangCapEditCtrl.js"></script>
    <script src="~/Scripts/angular/app/models/keyCodes.js"></script>
    <script src="~/Scripts/angular/shared/directive/keyboard.directive.js"></script>
    @{Html.RenderPartial("~/views/PhongBan/cboPhongBan.cshtml", new ViewDataDictionary { { "ImportAngular", true } });}
    @{Html.RenderPartial("~/views/PhongBan/Combobox.cshtml", new ViewDataDictionary { { "ImportAngular", true } });}
    @{Html.RenderPartial("~/views/LoaiTaiSan/cboLoaiTaiSan.cshtml", new ViewDataDictionary { { "ImportAngular", true } });}
}




