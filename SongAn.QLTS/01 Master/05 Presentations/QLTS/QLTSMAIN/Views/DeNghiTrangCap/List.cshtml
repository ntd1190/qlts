
@{
    ViewBag.Title = "Đề nghị trang cấp";
}
<div class="container-fluid">

    <div class="panel panel-default" style="margin-bottom:-1px" ng-controller="DenNghiTrangCapFilterCtrl as ctrl" keyboard="ctrl.keys" ng-init="ctrl.onInitView({userInfo: @ViewBag.userInfo})">
        <div class="panel-heading clearfix">
            <span class="panel-title"><i class="fa fa-fw fa-star-o"></i>Đề nghị trang cấp</span>
            <div class="btn-group btn-group-sm pull-right">
                <a class="btn btn-primary" data-toggle="collapse" data-target="#SearchCollapse"><i class="fa fa-fw fa-search"></i> Tìm kiếm (F3)</a>
                <a class="btn btn-warning" data-toggle="collapse" data-target="#TuyChonCotPopup"><i class="fa fa-fw fa-cog"></i> Tùy chọn</a>
            </div>
        </div>
        <div class="collapse fade" id="SearchCollapse">
            <div class="panel-body">
                <form class="form-horizontal">
                    <div class="row form-group form-group-sm">
                        <label class="control-label col-sm-2">Ngày</label>
                        <div class="form-inline col-sm-9">
                            <input type="text" id="tungay" class="form-control datetimepicker date" placeholder="dd/mm/yyyy" ng-model="ctrl.data.startDate" /> ~
                            <input type="text" id="denngay" class="form-control datetimepicker date" placeholder="dd/mm/yyyy" ng-model="ctrl.data.endDate" />
                        </div>
                    </div>
                    <div class="row form-group form-group-sm">
                        <label class="control-label col-sm-2">Bộ phận</label>
                        <div class="col-sm-9">
                             @{Html.RenderPartial("~/views/PhongBan/Combobox.cshtml", new ViewDataDictionary { { "Html", true }, { "onInitView", "{controllerId:'DenNghiTrangCapFilterCtrl',NameId:'cbxPhongBan',userInfo:" + ViewBag.UserInfo + "}" } });}
                        </div>
                    </div>

                </form>
            </div>
            <div class="panel-footer">
                <a class="btn btn-sm btn-primary" ng-click="ctrl.action.search()">Tìm kiếm (F8)</a>&nbsp;&nbsp;&nbsp;
                <a class="btn btn-sm btn-default" ng-click="ctrl.action.reset()">Thiết lập lại</a>&nbsp;&nbsp;&nbsp;
            </div>
        </div>
    </div>

    <div ng-controller="DenNghiTrangCapListCtrl as ctrl" class="panel panel-default" keyboard="ctrl.keys" ng-init="ctrl.onInitView({userInfo: @ViewBag.userInfo,linkUrl:'@(Url.Content("~/"))'})">
        <div class="panel-heading">
            <span ng-if="ctrl.data.showButtonNew">
                <a class="btn btn-sm btn-primary" href="~/denghitrangcap/edit?id=0">Mới (F2)</a>&nbsp;&nbsp;&nbsp;
            </span>
            @*<button class="btn btn-sm btn-primary" ng-if="ctrl.data.showButtonNew" href="~/denghitrangcap/edit?id=0">Mới (F2)</button>&nbsp;&nbsp;&nbsp;*@
            <button class="btn btn-sm btn-default" ng-if="ctrl.data.showButtonXoaChon" ng-click="ctrl.action.deleteSelected()">Xóa chọn</button>
        </div>
        <div class="table-responsive panel-body">
            <table st-table="ctrl.data.DenNghiTrangCapListDisplay" st-pipe="ctrl.action.getPage" class="table table-bordered table-condensed table-responsive table-hover ">
                <thead class="bg-default text-primary">
                    <tr>
                        <th class="text-center" style="width: 40px;">Chọn</th>
                        @*<th class="text-center" style="width: 80px;" st-sort="SoPhieu">Số phiếu</th>
                        <th class="text-center" style="width: 120px;" st-sort="Ngay">Ngày lập</th>
                        <th class="text-center" style="width: 150px;" st-sort="TenPhongBan">Bộ phận đề nghị</th>
                        <th class="text-center" st-sort="NoiDung">Nội dung đề nghị</th>*@
                        <th class="text-center" st-sort="{{cot.MaCot}}" ng-repeat="cot in ctrl.data.listCot|filter:ctrl.action.checkCot">
                            <span ng-bind="::cot.TenCot"></span>
                        </th>

                    </tr>
                    @*<tr class="filters">
                        <th style="width: 50px;"></th>
                        <th class="form-group form-group-sm"><input type="text" class="form-control" placeholder="" ></th>
                        <th class="form-group form-group-sm"><input type="text" class="form-control" placeholder="" ></th>
                        <th>
                            @{Html.RenderPartial("~/views/PhongBan/Combobox.cshtml", new ViewDataDictionary { { "Html", true }, { "onInitView", "{controllerId:'DeNghiTrangCapListCtrl',NameId:'cbxPhongBan',userInfo:" + ViewBag.UserInfo + "}" } });}
                        </th>
                        <th class="form-group form-group-sm"><input type="text" class="form-control" placeholder="" ></th>
                    </tr>*@
                </thead>
                <tbody>
                    <tr ng-if="ctrl.status.isLoading">
                        <td colspan="100" class="text-center">
                            <i class="fa fa-fw fa-spin fa-spinner"></i>
                        </td>
                    </tr>
                    @*<tr ng-repeat="DenNghiTrangCap in ctrl.data.DenNghiTrangCapListDisplay" ng-click="ctrl.action.getPageDetail(DenNghiTrangCap.DeNghiId)" ng-class="(DenNghiTrangCap.isSelected==true)?'info':''">
                        <td st-select-row="DenNghiTrangCap" st-select-mode="multiple" class="text-center"><i class="fa fa-fw text-primary" ng-class="(DenNghiTrangCap.isSelected==true)?'fa-check-square-o':'fa-square-o'"></i></td>
                        <td><span ng-bind="DenNghiTrangCap.SoPhieu"></span></td>
                        <td class="text-center"><span> {{ DenNghiTrangCap.Ngay | date : 'dd/MM/yyyy'}} </span></td>
                        <td><span ng-bind="DenNghiTrangCap.TenPhongBan"></span></td>
                        <td><span ng-bind="DenNghiTrangCap.NoiDung"></span></td>

                    </tr>*@
                    <tr ng-repeat="DenNghiTrangCap in ctrl.data.DenNghiTrangCapListDisplay" ng-click="ctrl.action.getPageDetail(DenNghiTrangCap.DeNghiId)" id="row_{{DenNghiTrangCap.DeNghiId}}" ng-class="(DenNghiTrangCap.isSelected==true)?'info':''">
                        <td st-select-row="DenNghiTrangCap" st-select-mode="multiple" class="text-center"><i class="fa fa-fw text-primary" ng-class="(DenNghiTrangCap.isSelected==true)?'fa-check-square-o':'fa-square-o'"></i></td>
                        <td ng-repeat="cot in ctrl.data.listCot|filter:ctrl.action.checkCot" ng-switch="cot.MaCot">
                            <a ng-switch-when="SoPhieu" href="~/denghitrangcap/edit?id={{DenNghiTrangCap.DeNghiId}}">{{ DenNghiTrangCap.SoPhieu}}</a>
                            <span ng-switch-when="Ngay">{{ DenNghiTrangCap.Ngay | date : 'dd/MM/yyyy'}}</span>
                            <span ng-switch-when="NgayTao">{{ DenNghiTrangCap.NgayTao | date : 'dd/MM/yyyy'}}</span>
                            <span ng-switch-default ng-bind="::DenNghiTrangCap[cot.MaCot]"></span>
                        </td>

                    </tr>
                </tbody>
                <tfoot>
                    <tr>
                        <td colspan="100" class="text-center">
                            <div st-pagination="" st-items-by-page="10" st-template="~/Scripts/angular/shared/smart-table/template/pagination.custom.html"></div>
                        </td>
                    </tr>
                </tfoot>
            </table>
        </div>
        
        <div class="panel-heading">
           <span>Thông tin chi tiết</span>
        </div>
        
        <div class="table-responsive panel-body">
            <table st-table="ctrl.data.DenNghiTrangCapChiTietListDisplay" class="table table-bordered table-condensed table-responsive table-hover ">
                <thead class="bg-default text-primary">
                    <tr>
                        <th class="text-center" style="min-width: 50px;vertical-align:middle">STT</th>
                        <th class="text-center" style="min-width: 250px;vertical-align:middle" >Tên tài sản</th>
                        <th class="text-center" style="min-width: 150px;vertical-align:middle">Loại tài sản</th>
                        <th class="text-center" style="min-width: 200px;vertical-align:middle" >Mô tả đặc điểm</th>
                        <th class="text-center" style="min-width: 100px;vertical-align:middle" >Số lượng</th>
                        <th class="text-center" style="min-width: 70px;vertical-align:middle" >ĐVT</th>
                        <th class="text-center" style="min-width: 100px;vertical-align:middle" >Phương thức</th>
                        <th class="text-center" style="min-width: 100px;vertical-align:middle" >Dự toán</th>
                        <th class="text-center" style="min-width: 160px;vertical-align:middle" >Dự toán được duyệt</th>
                        <th class="text-center" style="min-width: 100px;vertical-align:middle" >Ngày đề nghị</th>
                    </tr>
                </thead>
                <tbody>
                    <tr ng-if="ctrl.status.isLoading">
                        <td colspan="100" class="text-center">
                            <i class="fa fa-fw fa-spin fa-spinner"></i>
                        </td>
                    </tr>
                    <tr ng-repeat="DenNghiTrangCapChiTiet in ctrl.data.DenNghiTrangCapChiTietListDisplay" ng-class="(DenNghiTrangCapChiTiet.isSelected==true)?'info':''">
                        <td class="text-center">{{$index + 1}}</td>
                        <td><span ng-bind="DenNghiTrangCapChiTiet.TenTaiSan"></span></td>
                        <td><span ng-bind="DenNghiTrangCapChiTiet.TenLoai"></span></td>
                        <td><span ng-bind="DenNghiTrangCapChiTiet.Mota"></span></td>
                        <td class="text-right"><span ng-bind="DenNghiTrangCapChiTiet.SoLuong|number"></span></td>
                        <td><span ng-bind="DenNghiTrangCapChiTiet.DonViTinh"></span></td>
                        <td><span ng-bind="DenNghiTrangCapChiTiet.TenPhuongThuc"></span></td>
                        <td class="text-right"><span ng-bind="DenNghiTrangCapChiTiet.DuToan|number"></span></td>
                        <td class="text-right"><span ng-bind="DenNghiTrangCapChiTiet.DuToanDuocDuyet|number"></span></td>
                        <td class="text-center"><span>{{ DenNghiTrangCapChiTiet.NgayDeNghi | date : 'dd/MM/yyyy'}}</span></td>
                    </tr>
                </tbody>
                <tfoot>
                    <tr>
                        <td colspan="100">
                            <p class="text-danger">Tổng số : {{ctrl.data.TongSo}}</p>
                        </td>
                    </tr>
                </tfoot>
            </table>
        </div>
        
    </div>

  
    <!-- popup danh sách tùy chọn cột -->
    <div class="panel panel-primary ui-draggable collapse fade" id="TuyChonCotPopup" ng-controller="TuyChonCotListCtrl as ctrl" ng-init="ctrl.onInitView({controllerId:'TuyChonCotPopup',MaForm:'FL0018'})">
        <div class="panel-heading ui-draggable-handle">
            <div class="panel-title">
                <span>Tùy chọn cột</span>
                <a class="btn btn-xs btn-primary pull-right" data-toggle="collapse" data-target="#TuyChonCotPopup"><i class="fa fa-remove"></i></a>
            </div>
        </div>
        <div class="table-responsive" style="width: 400px; height: auto;" ng-if="ctrl.data.showList">
            <table class="table table-bordered table-condensed table-hover table-striped" st-table="ctrl.data.listCot">
                <thead>
                    <tr>
                        <th style="width: 65px;">Hiện/ẩn</th>
                        <th>Tên cột</th>
                        <th>Độ rộng</th>
                    </tr>
                </thead>
                <tbody style="height:100px;">
                    <tr ng-repeat="cot in ctrl.data.listCot" ng-class="(cot.isSelected==true)?'info':''" ng-init="cot.isSelected=cot.HienThiYN">
                        <td st-select-row="cot" st-select-mode="multiple" class="text-center"><i class="fa fa-fw text-primary" ng-class="(cot.isSelected==true)?'fa-check-square-o':'fa-square-o'"></i></td>
                        <td><span ng-bind="cot.TenCot"></span></td>
                        <td><span ng-bind="cot.DoRong"></span></td>
                    </tr>
                </tbody>
                <tfoot>
                    <tr>
                        <td colspan="100" class="text-center">
                            <div st-pagination="" st-items-by-page="10" st-template="~/Scripts/angular/shared/smart-table/template/pagination.custom.html"></div>
                        </td>
                    </tr>
                </tfoot>
            </table>
        </div>
        <div class="panel-footer">
            <a class="btn btn-sm btn-primary" ng-click="ctrl.action.apDung()">Áp dụng</a>
            <a class="btn btn-sm btn-default" data-toggle="collapse" data-target="#TuyChonCotPopup">Đóng</a>
        </div>
    </div>
    <!-- / popup danh sách tùy chọn cột -->


</div>


@section ImportStyles{}
@section SetupStyles{
    <style type="text/css">
        .st-sort-ascent:before {
            content: '\25B2';
        }

        .st-sort-descent:before {
            content: '\25BC';
        }

        .select-page {
            width: 50px;
            text-align: center;
        }

        .pagination li a input {
            padding: 0;
            margin: -5px 0;
        }
    </style>
    <link href="~/lib/bootstrap/css/loadingPage.css" rel="stylesheet" />
}
@section ImportScripts{}
@section SetupScripts{}
@section ImportAngular{
    <script src="~/Scripts/angular/DeNghiTrangCap/controller/DeNghiTrangCapListCtrl.js"></script>
    <script src="~/Scripts/angular/DeNghiTrangCap/service/DeNghiTrangCapService.js"></script>
    <script src="~/Scripts/angular/DeNghiTrangCap/controller/DenNghiTrangCapFilterCtrl.js"></script>
    <script src="~/Scripts/angular/DeNghiTrangCap/controller/DeNghiTrangCapEditCtrl.js"></script>
<script src="~/Scripts/angular/TuyChonFormCot/controller/TuyChonCotListCtrl.js"></script>
<script src="~/Scripts/angular/TuyChonFormCot/service/TuyChonCotService.js"></script>
    <script src="~/Scripts/angular/app/models/keyCodes.js"></script>
    <script src="~/Scripts/angular/shared/directive/keyboard.directive.js"></script>
    @{Html.RenderPartial("~/views/PhongBan/Combobox.cshtml", new ViewDataDictionary { { "ImportAngular", true } });}
}




