
@{
    ViewBag.Title = "Biên bản kiểm kê";
}

<div class="container-fluid">

    <div class="panel panel-default" style="margin-bottom:-1px" ng-controller="BienBanKiemKeFilterCtrl as ctrl" keyboard="ctrl.keys" ng-init="ctrl.onInitView({userInfo: @ViewBag.userInfo})">
        <div class="panel-heading clearfix">
            <span class="panel-title"><i class="fa fa-fw fa-star-o"></i>Biên bản kiểm kê</span>
            <div class="btn-group btn-group-sm pull-right">
                <a class="btn btn-primary" data-toggle="collapse" data-target="#SearchCollapse"><i class="fa fa-fw fa-search"></i> Tìm kiếm (F3)</a>
                <a class="btn btn-warning" data-toggle="collapse" data-target="#TuyChonCotPopup"><i class="fa fa-fw fa-cog"></i> Tùy chọn</a>
            </div>
        </div>
        <div class="collapse fade" id="SearchCollapse">
            <div class="panel-body">
                <form class="form-horizontal">
                    <div class="row form-group form-group-sm">
                        <label class="control-label col-sm-2">Ngày</label>
                        <div class="form-inline col-sm-9">
                            <input type="text" id="tungay" class="form-control datetimepicker date" placeholder="dd/mm/yyyy" ng-model="ctrl.data.startDate" /> ~
                            <input type="text" id="denngay" class="form-control datetimepicker date" placeholder="dd/mm/yyyy" ng-model="ctrl.data.endDate" />
                        </div>
                    </div>

                    <div class="row form-group form-group-sm">
                        <label class="control-label col-sm-2">Số chứng từ</label>
                        <div class="col-sm-9">
                            <input type="text" id="soChungTu" class="form-control" placeholder="Số chứng từ" ng-model="ctrl.data.soChungTu" />
                        </div>
                    </div>

                </form>
            </div>
            <div class="panel-footer">
                <a class="btn btn-sm btn-primary" ng-click="ctrl.action.search()">Tìm kiếm (F8)</a>&nbsp;&nbsp;&nbsp;
                <a class="btn btn-sm btn-default" ng-click="ctrl.action.reset()">Thiết lập lại</a>&nbsp;&nbsp;&nbsp;
            </div>
        </div>
    </div>

    <div ng-controller="BienBanKiemKeListCtrl as ctrl" class="panel panel-default" keyboard="ctrl.keys" ng-init="ctrl.onInitView({userInfo: @ViewBag.userInfo,linkUrl:'@(Url.Content("~/"))'})">
        <div class="panel-heading">
            <span ng-if="ctrl.data.showButtonNew">
                <a class="btn btn-sm btn-primary" href="~/BienBanKiemKe/edit?id=0"><i class="fa fa-plus"></i> Mới (F2)</a>&nbsp;&nbsp;&nbsp;
            </span>
            <button class="btn btn-sm btn-danger" ng-if="ctrl.data.showButtonXoaChon" ng-click="ctrl.action.deleteSelected()"><i class="fa fa-trash-o"></i> Xóa chọn</button>
        </div>
        <div class="table-container  panel-body">
            <table st-table="ctrl.data.BienBanKiemKeListDisplay" st-pipe="ctrl.action.getPage" class="table table-bordered table-condensed table-responsive table-hover ">
                <thead class="bg-default text-primary">
                    <tr>
                        <th class="text-center" style="width: 40px;">Chọn</th>
                        <th class="text-center" style="width: 40px;">STT</th>
                        <th class="text-center" st-sort="{{cot.MaCot}}" ng-repeat="cot in ctrl.data.listCot|filter:ctrl.action.checkCot" ng-switch="cot.MaCot">
                            <span ng-switch-when="SoChungTu" style="min-width:100px; display:block" ng-bind="cot.TenCot"></span>
                            <span ng-switch-when="TenBoPhan" style="min-width:100px; display:block" ng-bind="cot.TenCot"></span>
                            <span ng-switch-when="NgayChungTu" style="min-width:120px; display:block" ng-bind="cot.TenCot"></span>
                            <span ng-switch-when="NgayKiemKe" style="min-width:120px; display:block" ng-bind="cot.TenCot"></span>
                            <span ng-switch-when="GhiChu" style="min-width:250px; display:block" ng-bind="cot.TenCot"></span>
                            <span ng-switch-default style="min-width:100px;display:block" ng-bind="::cot.TenCot"></span>
                        </th>

                    </tr>

                </thead>
                <tbody>
                    <tr ng-if="ctrl.status.isLoading">
                        <td colspan="100" class="text-center">
                            <i class="fa fa-fw fa-spin fa-spinner"></i>
                        </td>
                    </tr>
                    <tr ng-repeat="BienBanKiemKe in ctrl.data.BienBanKiemKeListDisplay" ng-click="ctrl.action.getPageDetail(BienBanKiemKe.BienBanKiemKeId)" id="row_{{BienBanKiemKe.BienBanKiemKeId}}" ng-class="(BienBanKiemKe.isSelected==true)?'info':''">
                        <td st-select-row="BienBanKiemKe" st-select-mode="multiple" class="text-center"><i class="fa fa-fw text-primary" ng-class="(BienBanKiemKe.isSelected==true)?'fa-check-square-o':'fa-square-o'"></i></td>
                        <td style="width: 40px;" class="text-center">{{$index + 1}}</td>
                        <td ng-repeat="cot in ctrl.data.listCot|filter:ctrl.action.checkCot" ng-switch="cot.MaCot">
                            <a ng-switch-when="SoChungTu" href="~/BienBanKiemKe/edit?id={{BienBanKiemKe.BienBanKiemKeId}}">{{ BienBanKiemKe.SoChungTu}}</a>
                            <span ng-switch-when="NgayChungTu">{{ BienBanKiemKe.NgayChungTu | date : 'dd/MM/yyyy'}}</span>
                            <span ng-switch-when="NgayKiemKe">{{ BienBanKiemKe.NgayKiemKe | date : 'dd/MM/yyyy'}}</span>
                            <span ng-switch-when="NgayTao">{{ BienBanKiemKe.NgayTao | date : 'dd/MM/yyyy'}}</span>
                            <span ng-switch-default ng-bind="::BienBanKiemKe[cot.MaCot]"></span>
                        </td>

                    </tr>
                </tbody>
                <tfoot>
                    <tr>
                        <td colspan="100" class="text-center">
                            <div st-pagination="" st-items-by-page="10" st-template="~/Scripts/angular/shared/smart-table/template/pagination.custom.html"></div>
                        </td>
                    </tr>
                </tfoot>
            </table>
        </div>

        <div class="panel-heading">
            <span>Thông tin chi tiết</span>
        </div>

        <div class="table-responsive  panel-body">
            <table st-table="ctrl.data.BienBanKiemKeChiTietListDisplay" style="border: 1px solid #ddd;" class="table table-bordered table-condensed table-responsive table-hover ">
                <thead class="bg-default text-primary">
                    <tr>
                        <th class="text-center" style="min-width: 50px; vertical-align:middle" rowspan="2">STT</th>
                        <th class="text-center" style="min-width: 90px; vertical-align:middle" rowspan="2">Mã tài sản</th>
                        <th class="text-center" style="min-width: 250px; vertical-align:middle" rowspan="2">Tên tài sản</th>
                        <th class="text-center" style="min-width: 200px; vertical-align:middle" rowspan="2">Bộ phận</th>
                        <th class="text-center" style="vertical-align:middle" colspan="3">Theo sổ kế toán</th>
                        <th class="text-center" style="vertical-align:middle" colspan="3">Theo kiểm kê</th>
                        <th class="text-center" style="vertical-align:middle" colspan="3">Chênh lệch</th>
                    </tr>
                    <tr>
                        <th class="text-center" style="min-width: 90px; vertical-align:middle">Số lượng</th>
                        <th class="text-center" style="min-width: 90px; vertical-align:middle">Nguyên giá</th>
                        <th class="text-center" style="min-width: 120px; vertical-align:middle">Giá trị còn lại</th>
                        <th class="text-center" style="min-width: 90px; vertical-align:middle">Số lượng <span class="text-danger">*</span></th>
                        <th class="text-center" style="min-width: 90px; vertical-align:middle">Nguyên giá</th>
                        <th class="text-center" style="min-width: 120px; vertical-align:middle">Giá trị còn lại</th>
                        <th class="text-center" style="min-width: 90px; vertical-align:middle">Số lượng</th>
                        <th class="text-center" style="min-width: 90px; vertical-align:middle">Nguyên giá</th>
                        <th class="text-center" style="min-width: 120px; vertical-align:middle">Giá trị còn lại</th>
                    </tr>
                </thead>
                <tbody>
                    <tr ng-if="ctrl.status.isLoading">
                        <td colspan="100" class="text-center">
                            <i class="fa fa-fw fa-spin fa-spinner"></i>
                        </td>
                    </tr>
                    <tr ng-repeat="KiemKeChiTiet in ctrl.data.BienBanKiemKeChiTietListDisplay" ng-class="(KiemKeChiTiet.isSelected==true)?'info':''">
                        <td class="text-center">{{$index + 1}}</td>
                        <td>
                            <!--Ma tai san-->
                            <span class="text-left " ng-bind="KiemKeChiTiet.MaTaiSan" />
                        </td>
                        <td>
                            <!--ten tai san-->
                            <span class="text-left " ng-bind="KiemKeChiTiet.TenTaiSan" />
                        </td>
                        <td>
                            <!--bộ phan su dung-->
                            <span class="text-left " ng-bind="KiemKeChiTiet.TenPhongBan" />
                        </td>
                        <td class="text-right">
                            <!--so luong kt-->
                            <span class="text-left " ng-bind="KiemKeChiTiet.SoLuong|number" />
                        </td>
                        <td class="text-right">
                            <!--nguyen gia kt-->
                            <span class="text-left " ng-bind="(+KiemKeChiTiet.SoLuong*KiemKeChiTiet.NguyenGia)|number" />
                        </td>
                        <td class="text-right">
                            <!--gia tri con lai kt-->
                            <span class="text-left " ng-bind="(+KiemKeChiTiet.GiaTriConLai*KiemKeChiTiet.SoLuong)|number" />
                        </td>
                        <td class="text-right">
                            <!--SO LUONG kiem ke------------------------------------>
                            <span class="text-right" ng-bind="KiemKeChiTiet.SoLuongKiemKe|number" />
                        </td>
                        <td class="text-right">
                            <!--nguyen gia kiem ke-->
                            <span class="text-left " ng-bind="(+KiemKeChiTiet.SoLuongKiemKe*KiemKeChiTiet.NguyenGia)|number" />
                        </td>
                        <td class="text-right">
                            <!--gia tri con lai kiem ke-->
                            <span class="text-left " ng-bind="(+KiemKeChiTiet.SoLuongKiemKe*KiemKeChiTiet.GiaTriConLai)|number" />
                        </td>
                        <td class="text-right">
                            <!--so luong chech lech-->
                            <span class="text-left " ng-bind="(+KiemKeChiTiet.SoLuongKiemKe-KiemKeChiTiet.SoLuong)|number" />
                        </td>
                        <td class="text-right">
                            <!--nguyen gia chech lech-->
                            <span class="text-left " ng-bind="(+KiemKeChiTiet.SoLuongKiemKe-KiemKeChiTiet.SoLuong)*KiemKeChiTiet.NguyenGia|number" />
                        </td>
                        <td class="text-right">
                            <!--gia tri con lai chech lech-->
                            <span class="text-left " ng-bind="(+KiemKeChiTiet.SoLuongKiemKe-KiemKeChiTiet.SoLuong)*KiemKeChiTiet.GiaTriConLai|number" />
                        </td>
                    </tr>
                </tbody>
                <tfoot>
                    <tr>
                        <td colspan="4">
                            <p class="text-danger">Tổng số : {{ctrl.data.TongSo}}</p>
                        </td>
                        <td><p class="text-danger text-right">{{ctrl.data.BienBanKiemKeChiTietListDisplay|sumOfValue:'SoLuong'|number}}</p></td>
                        <td></td>
                        <td></td>
                        <td><p class="text-danger text-right">{{ctrl.data.BienBanKiemKeChiTietListDisplay|sumOfValue:'SoLuongKiemKe'|number}}</p></td>
                        <td></td>
                        <td></td>
                        <td><p class="text-danger text-right">{{ctrl.data.BienBanKiemKeChiTietListDisplay|sumOfValue2x:'SoLuongKiemKe':'SoLuong'|number}}</p></td>
                        <td></td>
                        <td></td>
                    </tr>
                </tfoot>
            </table>
        </div>

    </div>

    <!-- popup danh sách tùy chọn cột -->
    <div class="panel panel-primary ui-draggable collapse fade" id="TuyChonCotPopup" ng-controller="TuyChonCotListCtrl as ctrl" ng-init="ctrl.onInitView({userInfo: @ViewBag.userInfo,controllerId:'TuyChonCotPopup',MaForm:'FL0024'})">
        <div class="panel-heading ui-draggable-handle">
            <div class="panel-title">
                <span>Tùy chọn cột</span>
                <a class="btn btn-xs btn-primary pull-right" data-toggle="collapse" data-target="#TuyChonCotPopup"><i class="fa fa-remove"></i></a>
            </div>
        </div>
        <div class="table-responsive" style="width: 400px; height: auto;" ng-if="ctrl.data.showList">
            <table class="table table-bordered table-condensed table-hover table-striped" st-table="ctrl.data.listCot">
                <thead>
                    <tr>
                        <th style="width: 65px;">Hiện/ẩn</th>
                        <th>Tên cột</th>
                        <th>Độ rộng</th>
                    </tr>
                </thead>
                <tbody style="height:100px;">
                    <tr ng-repeat="cot in ctrl.data.listCot" ng-class="(cot.isSelected==true)?'info':''" ng-init="cot.isSelected=cot.HienThiYN">
                        <td st-select-row="cot" st-select-mode="multiple" class="text-center"><i class="fa fa-fw text-primary" ng-class="(cot.isSelected==true)?'fa-check-square-o':'fa-square-o'"></i></td>
                        <td><span ng-bind="cot.TenCot"></span></td>
                        <td><span ng-bind="cot.DoRong"></span></td>
                    </tr>
                </tbody>
                <tfoot>
                    <tr>
                        <td colspan="100" class="text-center">
                            <div st-pagination="" st-items-by-page="10" st-template="~/Scripts/angular/shared/smart-table/template/pagination.custom.html"></div>
                        </td>
                    </tr>
                </tfoot>
            </table>
        </div>
        <div class="panel-footer">
            <a class="btn btn-sm btn-primary" ng-click="ctrl.action.apDung()">Áp dụng</a>
            <a class="btn btn-sm btn-default" data-toggle="collapse" data-target="#TuyChonCotPopup">Đóng</a>
        </div>
    </div>
    <!-- / popup danh sách tùy chọn cột -->
</div>


@section ImportStyles{}
@section SetupStyles{}
@section ImportScripts{}
@section SetupScripts{}
@section ImportAngular{
    <script src="~/Scripts/angular/BienBanKiemKe/controller/KiemKeListCtrl.js"></script>
    <script src="~/Scripts/angular/BienBanKiemKe/controller/KiemKeFilterCtrl.js"></script>
    <script src="~/Scripts/angular/BienBanKiemKe/service/KiemKeService.js"></script>
    <script src="~/Scripts/angular/BienBanKiemKe/controller/KiemKeEditCtrl.js"></script>
    <script src="~/Scripts/angular/TuyChonFormCot/controller/TuyChonCotListCtrl.js"></script>
    <script src="~/Scripts/angular/TuyChonFormCot/service/TuyChonCotService.js"></script>
    @{Html.RenderPartial("~/views/PhongBan/Combobox.cshtml", new ViewDataDictionary { { "ImportAngular", true } });}
}
