
@{
    ViewBag.Title = "Loại tài sản";
}
<div class="container-fluid">

    <div ng-controller="LoaiTaiSanListCtrl as ctrl" class="panel panel-default" keyboard="ctrl.keys" ng-init="ctrl.onInitView({userInfo: @ViewBag.userInfo})">
        <div class="panel-heading">
            <div class="panel-title clearfix">
                <span><i class="fa fa-fw fa-star-o"></i>Loại tài sản</span>
                <div class="pull-right">
                    <form class="form-inline">
                        <div class="form-group form-group-sm">
                            <div class="input-group input-group-sm">
                                <input class="form-control" id="txtsearch" ng-model="ctrl.data.searchString" ng-keypress="$event.keyCode===13?ctrl.action.getPage():0" autofocus />
                                <span class="input-group-btn">
                                    <button class="btn btn-sm btn-primary" ng-click="ctrl.action.getPage()"><i class="fa fa-fw fa-search"></i>Tìm kiếm (F3)</button>

                                </span>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>


        <div class="panel-body">
            <h3 class="text-center no-margin">Danh sách Loại tài sản</h3>
        </div>
        <div class="table-container panel-body">
            <table st-table="ctrl.data.LoaiTaiSanListDisplay" st-pipe="ctrl.action.getPage" class="table table-bordered table-condensed table-responsive table-hover ">
                <thead class="bg-default text-primary">
                    <tr>
                        <th class="text-center" style="width: 50px;">Chọn</th>
                        <th class="text-center" style="width: 100px;" st-sort="MaLoai">Mã</th>
                        <th class="text-center" st-sort="TenLoai">Tên</th>
                        <th class="text-center" style="width: 150px" st-sort="TenNhom">Nhóm tài sản</th>
                        <th class="text-center" style="width: 200px" st-sort="GhiChu">Ghi chú</th>
                        <th class="text-center" style="width: 120px" st-sort="NguoiTao">Người tạo</th>
                        <th class="text-center" style="width: 120px" st-sort="NgayTao">Ngày tạo</th>
                    </tr>
                </thead>
                <tbody>
                    <tr ng-if="ctrl.status.isLoading">
                        <td colspan="100" class="text-center">
                            <i class="fa fa-fw fa-spin fa-spinner"></i>
                        </td>
                    </tr>
                    <tr ng-repeat="LoaiTaiSan in ctrl.data.LoaiTaiSanListDisplay" ng-class="(LoaiTaiSan.isSelected==true)?'info':''">
                        <td st-select-row="LoaiTaiSan" st-select-mode="multiple" class="text-center"><i class="fa fa-fw text-primary" ng-class="(LoaiTaiSan.isSelected==true)?'fa-check-square-o':'fa-square-o'"></i></td>
                        <td><a ng-bind="LoaiTaiSan.MaLoai" ng-click="ctrl.action.edit(LoaiTaiSan.LoaiId)" href="javascript:void(0);"></a></td>
                        <td><a ng-bind="LoaiTaiSan.TenLoai" ng-click="ctrl.action.edit(LoaiTaiSan.LoaiId)" href="javascript:void(0);"></a></td>
                        <td><span ng-bind="LoaiTaiSan.TenNhom"></span></td>
                        <td><span ng-bind="LoaiTaiSan.GhiChu"></span></td>
                        <td><span ng-bind="LoaiTaiSan.HoTen"></span></td>
                        <td><span> {{ LoaiTaiSan.NgayTao | date : 'dd/MM/yyyy HH:mm'}} </span></td>

                    </tr>
                </tbody>
                <tfoot>
                    <tr>
                        <td colspan="100" class="text-center">
                            <div st-pagination="" st-items-by-page="10" st-template="~/Scripts/angular/shared/smart-table/template/pagination.custom.html"></div>
                        </td>
                    </tr>
                </tfoot>
            </table>
            </div>
            <div class="panel-footer">
                <button class="btn btn-sm btn-primary" ng-if="ctrl.data.showButtonNew" ng-click="ctrl.action.add()"><i class="fa fa-plus"></i> Mới (F2)</button>&nbsp;&nbsp;&nbsp;
                <button class="btn btn-sm btn-danger" ng-if="ctrl.data.showButtonXoaChon" ng-click="ctrl.action.deleteSelected()"><i class="fa fa-trash-o"></i> Xóa chọn</button>
            </div>
        </div>

</div>
<div ng-controller="LoaiTaiSanEditCtrl as ctrl" class="panel panel-primary ui-draggable collapse fade" id="LoaiTaiSanEditPopup" keyboard="ctrl.keys" ng-init="ctrl.onInitView({userInfo: @ViewBag.userInfo})">
    <div class="panel-heading ui-draggable-handle">
        <h2 class="panel-title">
            <span>Thông tin Loại tài sản</span>
            <a class="btn btn-xs btn-primary pull-right" data-toggle="collapse" data-target="#LoaiTaiSanEditPopup" ng-click="ctrl.action.close()">
                <i class="fa fa-remove"></i>
            </a>
            <i class="fa fa-fw fa-pulse text-primary pull-right fa-spinner" ng-if="ctrl.status.isLoading"></i>
        </h2>
    </div>
    <div style="width: 600px; padding-top: 15px;padding-right: 50px;">
        <form class="form-horizontal">
            <div class="row form-group form-group-sm" ng-class="(ctrl.validate.MaLoai)?'has-error':''">
                <label class="control-label col-sm-3">Mã Loại tài sản</label>
                <div class="col-sm-9">
                    <input class="form-control" id="txtMa" type="text" ng-model="ctrl.data.objLoaiTaiSan.MaLoai" required ng-keypress="ctrl.action.keyPress(ctrl.data.objLoaiTaiSan.MaLoai,'txtMa','txtTen',$event)" />
                </div>
            </div>

            <div class="row form-group form-group-sm" ng-class="(ctrl.validate.TenLoai)?'has-error':''">
                <label class="control-label col-sm-3">Tên Loại tài sản</label>
                <div class="col-sm-9">
                    <input class="form-control" type="text" id="txtTen" ng-model="ctrl.data.objLoaiTaiSan.TenLoai" required ng-keypress="ctrl.action.keyPress(ctrl.data.objLoaiTaiSan.TenLoai,'txtTen','cbxNhomTaiSan',$event)" />
                </div>
            </div>

            <div class="row form-group form-group-sm" ng-class="(ctrl.validate.NhomTaiSan)?'has-error':''">
                <label class="control-label col-sm-3">Nhóm tài sản</label>
                <div class="col-sm-9">
                    @{Html.RenderPartial("~/views/NhomTaiSan/Combobox.cshtml", new ViewDataDictionary { { "Html", true }, { "onInitView", "{controllerId:'LoaiTaiSanEditCtrl',NameId:'cbxNhomTaiSan',userInfo:" + ViewBag.UserInfo + "}" } });}
                </div>
            </div>
            <div class="row form-group form-group-sm">
                <label class="control-label col-sm-3">Ghi chú</label>
                <div class="col-sm-9">
                    <textarea rows="2" class="form-control" type="text" id="txtGhiChu" ng-model="ctrl.data.objLoaiTaiSan.GhiChu" ng-keypress="ctrl.action.keyPress(ctrl.data.objLoaiTaiSan.GhiChu,'txtGhiChu','btnluu',$event)"></textarea>
                </div>
            </div>
        </form>
    </div>
    <div class="panel-footer">
        <button type="button" class="btn btn-sm btn-primary" id="btnluu" ng-if="ctrl.data.showButtonSave" ng-click="ctrl.action.save()"><i class="fa fa-save"></i> Lưu (F8)</button>&nbsp;&nbsp;&nbsp;
        <button type="button" class="btn btn-sm btn-default" ng-click="ctrl.action.refresh()">Thiết lập lại</button>&nbsp;&nbsp;&nbsp;
        <button type="button" class="btn btn-sm btn-default" ng-click="ctrl.action.close()">Đóng</button>
    </div>
</div>

@section ImportStyles{}
@section SetupStyles{
    <style type="text/css">
        .st-sort-ascent:before {
            content: '\25B2';
        }

        .st-sort-descent:before {
            content: '\25BC';
        }

        .select-page {
            width: 50px;
            text-align: center;
        }

        .pagination li a input {
            padding: 0;
            margin: -5px 0;
        }
    </style>
}
@section ImportScripts{}
@section SetupScripts{}
@section ImportAngular{
    <script src="~/Scripts/angular/LoaiTaiSan/service/LoaiTaiSanService.js"></script>
    <script src="~/Scripts/angular/LoaiTaiSan/controller/LoaiTaiSanListCtrl.js"></script>
    <script src="~/Scripts/angular/LoaiTaiSan/controller/LoaiTaiSanEditCtrl.js"></script>
    <script src="~/Scripts/angular/app/models/keyCodes.js"></script>
    <script src="~/Scripts/angular/shared/directive/keyboard.directive.js"></script>
    @{Html.RenderPartial("~/views/NhomTaiSan/Combobox.cshtml", new ViewDataDictionary { { "ImportAngular", true } });}
}




