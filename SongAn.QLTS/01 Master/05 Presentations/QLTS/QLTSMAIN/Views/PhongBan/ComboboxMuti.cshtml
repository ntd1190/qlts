
@if (ViewBag.Html != null && (bool)ViewBag.Html == true)
{
    <div ng-controller="PhongBanCombobox as ctrl"  ng-init="ctrl.onInitView(@(ViewBag.onInitView))">
        <ui-select  id="{{ctrl.NameId}}"  ng-model="ctrl.data.PhongBan.selected" multiple ng-change="ctrl.action.OnClickSelect()"  theme="bootstrap" title="Chọn phòng ban">
            <ui-select-match >{{$item.TenPhongBan}}</ui-select-match>
            <ui-select-choices repeat="item in ctrl.data.PhongBanListDisplay | filter: $select.search">
                <div ng-bind-html="item.TenPhongBan | highlight: $select.search"></div>
            </ui-select-choices>
        </ui-select>

    </div>

<link href="~/lib/Select/Select.css" rel="stylesheet" />
}
else if (ViewBag.ImportStyles != null && (bool)ViewBag.ImportStyles == true) { }
else if (ViewBag.SetupStyles != null && (bool)ViewBag.SetupStyles == true) { }
else if (ViewBag.ImportScripts != null && (bool)ViewBag.ImportScripts == true) { }
else if (ViewBag.SetupScripts != null && (bool)ViewBag.SetupScripts == true) { }
else if (ViewBag.ImportAngular != null && (bool)ViewBag.ImportAngular == true)
{
    <script src="~/Scripts/angular/PhongBan/controller/ComboboxMuti.js"></script>
    <script src="~/Scripts/angular/PhongBan/service/PhongBanService.js"></script>
}







