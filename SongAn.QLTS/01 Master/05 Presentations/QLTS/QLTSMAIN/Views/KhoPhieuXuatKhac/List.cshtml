@{
    ViewBag.Title = "Phiếu xuất kho";
}
<div class="container-fluid">
    <div class="panel panel-default" style="margin-bottom:-1px" ng-controller="KhoPhieuXuatFilterCtrl as ctrl" keyboard="ctrl.keys" ng-init="ctrl.onInitView({userInfo: @ViewBag.userInfo})">
        <div class="panel-heading clearfix">
            <span class="panel-title"><i class="fa fa-fw fa-star-o"></i>Phiếu xuất kho</span>
            <div class="btn-group btn-group-sm pull-right">
                <a class="btn btn-primary" data-toggle="collapse" data-target="#SearchCollapse"><i class="fa fa-fw fa-search"></i> Tìm kiếm (F3)</a>
                <a class="btn btn-warning" data-toggle="collapse" data-target="#TuyChonCotPopup"><i class="fa fa-fw fa-cog"></i> Tùy chọn</a>
            </div>
        </div>
        <div class="collapse fade" id="SearchCollapse">
            <div class="panel-body">
                <form class="form-horizontal">
                    <div class="row form-group form-group-sm">
                        <label class="control-label col-sm-2">Ngày</label>
                        <div class="form-inline col-sm-9">
                            <input type="text" id="tungay" class="form-control datetimepicker date" placeholder="dd/mm/yyyy" ng-model="ctrl.data.startDate" /> ~
                            <input type="text" id="denngay" class="form-control datetimepicker date" placeholder="dd/mm/yyyy" ng-model="ctrl.data.endDate" />
                        </div>
                    </div>
                    <div class="row form-group form-group-sm">
                        <label class="control-label col-sm-2">Kho</label>
                        <div class="col-sm-9">
                            <cbo-kho-tai-san id="cbxKho" data-function-code="CN0044" data-khotaisanid="ctrl.data.khoTaiSanId" data-multiple="true" data-config="{userInfo:@(ViewBag.userInfo)}" template-url="~/khotaisan/showview?viewname=cboKhoTaiSan"></cbo-kho-tai-san>
                        </div>
                    </div>
                </form>
            </div>
            <div class="panel-footer">
                <a class="btn btn-sm btn-primary" ng-click="ctrl.action.search()">Tìm kiếm (F8)</a>&nbsp;&nbsp;&nbsp;
                <a class="btn btn-sm btn-default" ng-click="ctrl.action.reset()">Thiết lập lại</a>&nbsp;&nbsp;&nbsp;
            </div>
        </div>
    </div>
    <!--end filter-->

    <div ng-controller="KhoPhieuXuatListCtrl as ctrl" class="panel panel-default" keyboard="ctrl.keys" ng-init="ctrl.onInitView({userInfo: @ViewBag.userInfo,linkUrl:'@(Url.Content("~/"))'})">
        <div class="panel-heading">
            <span ng-if="ctrl.action.checkQuyenTacVu('N')">
                <a class="btn btn-sm btn-primary" href="~/KhoPhieuXuatKhac/edit/0"><i class="fa fa-plus"></i> Mới (F2)</a>&nbsp;&nbsp;&nbsp;
            </span>
            <span ng-if="ctrl.action.checkQuyenTacVu('D')">
                <button class="btn btn-sm btn-danger" ng-click="ctrl.action.removePhieuXuat()"><i class="fa fa-trash-o"></i> Xóa chọn</button>
            </span>
        </div>
        <div class="table-container  panel-body">
            <table st-table="ctrl.data.listKhoPhieuXuat" st-pipe="ctrl.action.getPage" class="table table-bordered table-condensed table-responsive table-hover ">
                <thead class="bg-default text-primary">
                    <tr>
                        <th class="text-center" style="width: 40px;">Chọn</th>
                        <th class="text-center" ng-repeat="cot in ctrl.data.listCotPhieuXuat|filter:ctrl.action.checkCot" st-sort="{{cot.MaCot}}">
                            <span ng-bind="cot.TenCot"></span>
                        </th>
                    </tr>
                </thead>
                <tbody>
                    <tr ng-if="ctrl.status.isLoading">
                        <td colspan="100" class="text-center">
                            <i class="fa fa-fw fa-spin fa-spinner"></i>
                        </td>
                    </tr>
                    <tr ng-repeat="KhoPhieuXuat in ctrl.data.listKhoPhieuXuat" ng-click="ctrl.action.xemChiTiet(KhoPhieuXuat)" st-select-row="KhoPhieuXuat" ng-class="(KhoPhieuXuat.isSelected==true)?'info':''">
                        <td class="text-center text-primary" ng-click="ctrl.action.autoCheckAll()">
                            <i class="fa fa-fw" ng-class="(KhoPhieuXuat.isSelected==true)?'fa-check-square-o':'fa-square-o'"></i>
                        </td>
                        <td ng-repeat="cot in ctrl.data.listCotPhieuXuat|filter:ctrl.action.checkCot" ng-switch="cot.MaCot">
                            <a ng-switch-when="SoPhieu" href="~/KhoPhieuXuatKhac/edit/{{KhoPhieuXuat.KhoPhieuXuatId}}" ng-bind="KhoPhieuXuat.SoPhieu"></a>
                            <div class="text-center" ng-switch-when="NgayXuat,NgayTao" ng-switch-when-separator="," ng-bind="KhoPhieuXuat.NgayXuat | date : 'dd/MM/yyyy'"></div>
                            <span ng-switch-default ng-bind="KhoPhieuXuat[cot.MaCot]"></span>
                        </td>
                    </tr>
                </tbody>
                <tfoot>
                    <tr>
                        <td colspan="100" class="text-center">
                            <div st-pagination="" st-items-by-page="10" st-template="~/Scripts/angular/shared/smart-table/template/pagination.custom.html"></div>
                        </td>
                    </tr>
                </tfoot>
            </table>
        </div>

        <div class="panel-heading">
            <span>Thông tin chi tiết</span>
        </div>

        <div class="table-responsive  panel-body">
            <table st-table="ctrl.data.listChiTiet" style="border: 1px solid #ddd;" class="table table-bordered table-condensed table-hover">
                <thead class="bg-default text-primary">
                    <tr>
                        <th class="text-center" style="min-width: 40px;vertical-align:middle">STT</th>
                        <th class="text-center" style="min-width: 250px;vertical-align:middle">Tên tài sản</th>
                        <th class="text-center" style="min-width: 70px;vertical-align:middle">ĐVT</th>
                        <th class="text-center" style="min-width: 80px;vertical-align:middle">Date</th>
                        <th class="text-center" style="min-width: 80px;vertical-align:middle">Lô SX</th>
                        <th class="text-center" style="min-width: 90px;vertical-align:middle">Số lượng</th>
                        <th class="text-center" style="min-width: 100px;vertical-align:middle">Đơn giá</th>
                        <th class="text-center" style="min-width: 120px;vertical-align:middle">Số tiền</th>
                        <th class="text-center" style="min-width: 120px;vertical-align:middle">Tổng tiền</th>

                    </tr>
                </thead>
                <tbody>
                    <tr ng-if="ctrl.status.isLoading">
                        <td colspan="100" class="text-center">
                            <i class="fa fa-fw fa-spin fa-spinner"></i>
                        </td>
                    </tr>
                    <tr ng-repeat="KhoPhieuXuatChiTiet in ctrl.data.listChiTiet" ng-class="(KhoPhieuXuatChiTiet.isSelected==true)?'info':''">
                        <td class="text-center">{{$index + 1}}</td>
                        <td><span ng-bind="KhoPhieuXuatChiTiet.TenTaiSan"></span></td>
                        <td><span ng-bind="KhoPhieuXuatChiTiet.DonViTinh"></span></td>
                        <td><span ng-bind="KhoPhieuXuatChiTiet.HangDung"></span></td>
                        <td><span ng-bind="KhoPhieuXuatChiTiet.LoSanXuat"></span></td>
                        <td class="text-right"><span ng-bind="KhoPhieuXuatChiTiet.SoLuong|number"></span></td>
                        <td class="text-right"><span ng-bind="KhoPhieuXuatChiTiet.DonGia|number"></span></td>
                        <td class="text-right"><span ng-bind="(+KhoPhieuXuatChiTiet.SoLuong*KhoPhieuXuatChiTiet.DonGia)|number"></span></td>
                        <td class="text-right"><span ng-bind="(+KhoPhieuXuatChiTiet.SoLuong*KhoPhieuXuatChiTiet.DonGia + KhoPhieuXuatChiTiet.TienThue)|number"></span></td>
                    </tr>
                </tbody>
                <tfoot>
                    <tr>
                        <td colspan="100">
                            <p class="text-danger">Tổng số : <span ng-bind="ctrl.data.listChiTiet[0].MAXCNT"></span></p>
                        </td>
                    </tr>
                </tfoot>
            </table>
        </div>

    </div>


    <!-- popup danh sách tùy chọn cột -->
    <div class="panel panel-primary ui-draggable collapse fade" id="TuyChonCotPopup" ng-controller="TuyChonCotListCtrl as ctrl" ng-init="ctrl.onInitView({userInfo: @ViewBag.userInfo,controllerId:'TuyChonCotPopup',MaForm:'FL0033'})">
        <div class="panel-heading ui-draggable-handle">
            <div class="panel-title">
                <span>Tùy chọn cột</span>
                <a class="btn btn-xs btn-primary pull-right" data-toggle="collapse" data-target="#TuyChonCotPopup"><i class="fa fa-remove"></i></a>
            </div>
        </div>
        <div class="table-responsive" style="width: 400px; height: auto;" ng-if="ctrl.data.showList">
            <table class="table table-bordered table-condensed table-hover table-striped" st-table="ctrl.data.listCot">
                <thead>
                    <tr>
                        <th style="width: 65px;">Hiện/ẩn</th>
                        <th>Tên cột</th>
                        <th>Độ rộng</th>
                    </tr>
                </thead>
                <tbody style="height:100px;">
                    <tr ng-repeat="cot in ctrl.data.listCot" ng-class="(cot.isSelected==true)?'info':''" ng-init="cot.isSelected=cot.HienThiYN">
                        <td st-select-row="cot" st-select-mode="multiple" class="text-center"><i class="fa fa-fw text-primary" ng-class="(cot.isSelected==true)?'fa-check-square-o':'fa-square-o'"></i></td>
                        <td><span ng-bind="cot.TenCot"></span></td>
                        <td><span ng-bind="cot.DoRong"></span></td>
                    </tr>
                </tbody>
                <tfoot>
                    <tr>
                        <td colspan="100" class="text-center">
                            <div st-pagination="" st-items-by-page="10" st-template="~/Scripts/angular/shared/smart-table/template/pagination.custom.html"></div>
                        </td>
                    </tr>
                </tfoot>
            </table>
        </div>
        <div class="panel-footer">
            <a class="btn btn-sm btn-primary" ng-click="ctrl.action.apDung()">Áp dụng</a>
            <a class="btn btn-sm btn-default" data-toggle="collapse" data-target="#TuyChonCotPopup">Đóng</a>
        </div>
    </div>
    <!-- / popup danh sách tùy chọn cột -->
</div>

@section ImportStyles{}
@section SetupStyles{}
@section ImportScripts{}
@section SetupScripts{}
@section ImportAngular{
    <script src="~/Scripts/angular/KhoPhieuXuatKhac/controller/KhoPhieuXuatListCtrl.js"></script>
    <script src="~/Scripts/angular/KhoPhieuXuatKhac/controller/KhoPhieuXuatFilterCtrl.js"></script>
    <script src="~/Scripts/angular/KhoPhieuXuatKhac/service/KhoPhieuXuatService.js"></script>
    <script src="~/Scripts/angular/TuyChonFormCot/controller/TuyChonCotListCtrl.js"></script>
    <script src="~/Scripts/angular/TuyChonFormCot/service/TuyChonCotService.js"></script>
    @{Html.RenderPartial("~/views/KhoTaiSan/cboKhoTaiSan.cshtml", new ViewDataDictionary { { "ImportAngular", true } });}
}
