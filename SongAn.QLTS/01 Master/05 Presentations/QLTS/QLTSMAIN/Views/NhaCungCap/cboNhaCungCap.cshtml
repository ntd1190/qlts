
@if (ViewBag.Html != null && (bool)ViewBag.Html == true)
{
    <ui-select ng-model="ctrl.data.NhaCungCap" data-ng-disabled="disabled" on-select="ctrl.action.onSelected($item, $model)" theme="bootstrap" id="{{ctrl.NameId}}">
        <ui-select-match placeholder="{{$select.selected.TenNhaCungCap || 'Nhà cung cấp'}}">{{$select.selected.TenNhaCungCap}}</ui-select-match>
        <ui-select-choices repeat="item in ctrl.data.NhaCungCapListDisplay | filter: $select.search" refresh="ctrl.action.search($select)" refresh-delay="200" position="down">
            <div ng-if="!item.NhaCungCapId">.</div>
            <div ng-if="item.NhaCungCapId">
                <span class="text-danger" ng-bind-html="item.MaNhaCungCap | highlight: $select.search"></span>: <span ng-bind-html="item.TenNhaCungCap | highlight: $select.search"></span>
            </div>
        </ui-select-choices>
    </ui-select>

}
else if (ViewBag.ImportStyles != null && (bool)ViewBag.ImportStyles == true)
{
}
else if (ViewBag.SetupStyles != null && (bool)ViewBag.SetupStyles == true) { }
else if (ViewBag.ImportScripts != null && (bool)ViewBag.ImportScripts == true) { }
else if (ViewBag.SetupScripts != null && (bool)ViewBag.SetupScripts == true) { }
else if (ViewBag.ImportAngular != null && (bool)ViewBag.ImportAngular == true)
{
    <script src="~/Scripts/angular/NhaCungCap/directive/cboNhaCungCap.js"></script>
    <script src="~/Scripts/angular/NhaCungCap/service/NhaCungCapService.js"></script>
}
