
@if (ViewBag.Html != null && (bool)ViewBag.Html == true)
{
    <ui-select ng-model="ctrl.data.HangSanXuat"
               data-ng-disabled="disabled" on-select="ctrl.action.onSelected()" theme="bootstrap" id="{{ctrl.NameId}}">
        <ui-select-match placeholder="{{$select.selected.TenHangSanXuat || 'Chọn hãng sản xuất'}}">{{$select.selected.TenHangSanXuat}}</ui-select-match>
        <ui-select-choices repeat="item in ctrl.data.HangSanXuatListDisplay | filter: $select.search" @*refresh="ctrl.action.search($select)" refresh-delay="500"*@ position="down">
            <span ng-bind-html="item.TenHangSanXuat | highlight: $select.search"></span>
        </ui-select-choices>
    </ui-select>
}
else if (ViewBag.ImportStyles != null && (bool)ViewBag.ImportStyles == true)
{
}
else if (ViewBag.SetupStyles != null && (bool)ViewBag.SetupStyles == true) { }
else if (ViewBag.ImportScripts != null && (bool)ViewBag.ImportScripts == true) { }
else if (ViewBag.SetupScripts != null && (bool)ViewBag.SetupScripts == true) { }
else if (ViewBag.ImportAngular != null && (bool)ViewBag.ImportAngular == true)
{
    <script src="~/Scripts/angular/HangSanXuat/directive/cboHangSanXuat.js"></script>
    <script src="~/Scripts/angular/HangSanXuat/service/HangSanXuatService.js"></script>
}
