
@{
    ViewBag.Title = "Duyệt báo cáo";
}
<div class="container-fluid">

    <div class="panel panel-default" style="margin-bottom:-1px" ng-controller="DuyetBaoCaoFilterCtrl as ctrl" keyboard="ctrl.keys" ng-init="ctrl.onInitView({userInfo: @ViewBag.userInfo})">
        <div class="panel-heading clearfix">
            <span class="panel-title"><i class="fa fa-fw fa-star-o"></i>Duyệt báo cáo</span>
            <div class="btn-group btn-group-sm pull-right">
                <a class="btn btn-primary" data-toggle="collapse" data-target="#SearchCollapse"><i class="fa fa-fw fa-search"></i> Tìm kiếm (F3)</a>
            </div>
        </div>
        <div class="collapse fade" id="SearchCollapse">
            <div class="panel-body">
                <form class="form-horizontal">
                    <div class="row form-group form-group-sm">
                        <label class="control-label col-sm-2">Ngày</label>
                        <div class="form-inline col-sm-9">
                            <input type="text" id="tungay" class="form-control datetimepicker date" placeholder="dd/mm/yyyy" ng-model="ctrl.data.startDate" /> ~
                            <input type="text" id="denngay" class="form-control datetimepicker date" placeholder="dd/mm/yyyy" ng-model="ctrl.data.endDate" />
                        </div>
                    </div>
                    <div class="row form-group form-group-sm">
                        <label class="control-label col-sm-2">Bộ phận</label>
                        <div class="col-sm-9">
                            @{Html.RenderPartial("~/views/PhongBan/ComboboxMuti.cshtml", new ViewDataDictionary { { "Html", true }, { "onInitView", "{controllerId:'DuyetBaoCaoFilterCtrl',NameId:'cbxPhongBan',userInfo:" + ViewBag.UserInfo + "}" } });}
                        </div>
                    </div>

                </form>
            </div>
            <div class="panel-footer">
                <a class="btn btn-sm btn-primary" ng-click="ctrl.action.search()">Tìm kiếm (F8)</a>&nbsp;&nbsp;&nbsp;
                <a class="btn btn-sm btn-default" ng-click="ctrl.action.reset()">Thiết lập lại</a>&nbsp;&nbsp;&nbsp;
            </div>
        </div>
    </div>

    <div ng-controller="DuyetBaoCaoListCtrl as ctrl" class="panel panel-default" keyboard="ctrl.keys" ng-init="ctrl.onInitView({userInfo: @ViewBag.userInfo,linkUrl:'@(Url.Content("~/"))'})">
        <div class="panel-heading" style="height: 51px;">
            <span ng-if="ctrl.data.showButtonDuyet && ctrl.data.RowChecked">
                <a class="btn btn-sm btn-primary" ng-click="ctrl.action.DongY()"><i class="fa fa-check" aria-hidden="true"></i> Duyệt</a>&nbsp;&nbsp;&nbsp;
            </span>
            <button ng-if="ctrl.data.showButtonDuyet && ctrl.data.RowChecked" class="btn btn-sm btn-default" ng-click="ctrl.action.OpenTuChoi()">Từ chối</button>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;

            <div style="float:right">
                <label class="radio-inline">
                    <input style="margin-right: 5px;" type="radio" ng-checked="true" ng-click="ctrl.action.GetPageByDuyetId('0')" value="1" name="Loai" class="ng-pristine ng-untouched ng-valid ng-not-empty"><span>Chưa duyệt</span>
                </label>
                <label class="radio-inline">
                    <input style="margin-right: 5px;" type="radio" value="2" name="Loai" ng-click="ctrl.action.GetPageByDuyetId('1,2')" class="ng-pristine ng-untouched ng-valid ng-not-empty"><span>Đã duyệt</span>
                </label>
                <label class="radio-inline">
                    <input style="margin-right: 5px;" type="radio" value="3" name="Loai" ng-click="ctrl.action.GetPageByDuyetId('')" class="ng-pristine ng-untouched ng-valid ng-not-empty"><span>Tất cả</span>
                </label>
            </div>
        </div>
        <div class="table-containe panel-body">
            <table st-table="ctrl.data.DuyetBaoCaoListDisplay" st-pipe="ctrl.action.getPage" class="table table-bordered table-condensed table-responsive table-hover ">
                <thead class="bg-default text-primary">
                    <tr>
                        <th class="text-center" style="width: 40px;">Chọn</th>
                        <th class="text-center" style="width: 150px;">Cơ sở báo cáo</th>
                        <th class="text-center" style="width: 150px;">Kỳ báo cáo</th>
                        <th class="text-center">Diễn giải</th>
                        <th class="text-center" style="width: 100px;">Ngày gửi</th>
                        <th class="text-center" style="width: 130px;">Người gửi</th>
                        <th class="text-center" style="width: 150px;">Trạng thái</th>
                    </tr>
                </thead>
                <tbody>
                    <tr ng-if="ctrl.status.isLoading">
                        <td colspan="100" class="text-center">
                            <i class="fa fa-fw fa-spin fa-spinner"></i>
                        </td>
                    </tr>

                    <tr ng-repeat="DuyetBaoCao in ctrl.data.DuyetBaoCaoListDisplay" ng-click="ctrl.action.getPageDetail(DuyetBaoCao.LapBaoCaoId)" id="row_{{DuyetBaoCao.LapBaoCaoId}}" ng-class="(DuyetBaoCao.isSelected==true)?'info':''">
                        <td st-select-row="DuyetBaoCao" st-select-mode="single" ng-click="ctrl.action.CheckRow(DuyetBaoCao.DuyetId!='0'?false:true)" class="text-center"><i class="fa fa-fw text-primary" ng-class="(DuyetBaoCao.isSelected==true)?'fa-check-square-o':'fa-square-o'"></i></td>
                        <td>
                            <span ng-bind="DuyetBaoCao.TenCoSo"></span>
                        </td>
                        <td>
                            <span ng-bind="DuyetBaoCao.TenKyBaoCao"></span>
                        </td>
                        <td>
                            <span ng-bind="DuyetBaoCao.DienGiai"></span>
                        </td>
                        <td>
                            <span>{{ DuyetBaoCao.NgayGui | date : 'dd/MM/yyyy'}}</span>
                        </td>
                        <td>
                            <span ng-bind="DuyetBaoCao.HoTen"></span>
                        </td>
                        <td ng-if="DuyetBaoCao.DuyetId==0" style="padding-left: 1%;">
                            <span class="form-control label label-warning" ng-if="DuyetBaoCao.GuiCapTren==1">Đã gửi - Chờ duyệt</span>
                            <span class="form-control label label-default" ng-if="DuyetBaoCao.GuiCapTren!=1">Chưa gửi</span>

                        </td>
                        <td ng-if="DuyetBaoCao.DuyetId==1" style="padding-left: 1%;">
                            <span class="form-control label label-success" ng-if="DuyetBaoCao.DuyetId==1" ng-bind="DuyetBaoCao.TrangThai"></span>
                        </td>
                        <td ng-if="DuyetBaoCao.DuyetId==2" style="padding-left: 1%;">
                            <span class="form-control label label-danger" ng-if="DuyetBaoCao.DuyetId==2" ng-bind="DuyetBaoCao.TrangThai"></span> <i class="fa fa-question-circle-o" ng-if="DuyetBaoCao.NoiDungDuyet ? true:false" aria-hidden="true" data-placement="left" title="{{DuyetBaoCao.NoiDungDuyet}}"></i>
                        </td>
                    </tr>
                </tbody>
                <tfoot>
                    <tr>
                        <td colspan="100" class="text-center">
                            <div st-pagination="" st-items-by-page="10" st-template="~/Scripts/angular/shared/smart-table/template/pagination.custom.html"></div>
                        </td>
                    </tr>
                </tfoot>
            </table>
        </div>

        <div class="panel-heading">
            <span>Thông tin chi tiết</span>
        </div>

        <div class="table-responsive panel-body">
            <table st-table="ctrl.data.DuyetBaoCaoChiTietListDisplay" style="border: 1px solid #ddd;" class="table table-bordered table-condensed table-responsive table-hover ">
                <thead class="bg-default text-primary">
                    <tr>
                        <th class="text-center" style="min-width: 150px;vertical-align:middle">Chức năng</th>
                        <th class="text-center" style="min-width: 50px;vertical-align:middle">STT</th>
                        <th class="text-center" style="min-width: 100px;vertical-align:middle">Xem báo cáo</th>
                        <th class="text-center" style="min-width: 300px;vertical-align:middle">Tên báo cáo</th>
                        <th class="text-center" style="min-width: 200px;vertical-align:middle">Ý kiến đơn vị quản lý</th>
                    </tr>
                </thead>
                <tbody>
                    <tr ng-if="ctrl.status.isLoading">
                        <td colspan="100" class="text-center">
                            <i class="fa fa-fw fa-spin fa-spinner"></i>
                        </td>
                    </tr>
                    <tr ng-repeat="DuyetBaoCaoChiTiet in ctrl.data.DuyetBaoCaoChiTietListDisplay" ng-class="(DuyetBaoCaoChiTiet.isSelected==true)?'info':''">
                        <td class="text-center" style="vertical-align:middle">
                            <div class="btn-group btn-group-circle" ng-if="(DuyetBaoCaoChiTiet.DuyetId==1||DuyetBaoCaoChiTiet.DuyetId==2) ? false:true">
                                <button type="button" class="btn btn-primary btn-sm" ng-click="ctrl.action.DongYChiTiet(DuyetBaoCaoChiTiet)">Duyệt</button>
                                <button type="button" class="btn btn-default btn-sm" ng-click="ctrl.action.OpenTuChoiChiTiet(DuyetBaoCaoChiTiet)">Từ chối</button>
                            </div>
                            <div ng-if="DuyetBaoCaoChiTiet.DuyetId==1 ? true:false">
                                <span class="form-control label label-success">Đồng ý</span>
                            </div>
                            <div ng-if="DuyetBaoCaoChiTiet.DuyetId==2 ? true:false">
                                <span class="form-control label label-danger">Từ chối</span>
                            </div>
                        </td>
                        <td class="text-center">{{$index + 1}}</td>
                        <td class="text-center"><a href="javascript:void(0);" ng-click="ctrl.action.XemBaoCao(DuyetBaoCaoChiTiet)">Xem</a></td>
                        <td ng-bind="DuyetBaoCaoChiTiet.TenBaoCao"></td>
                        <td ng-bind="DuyetBaoCaoChiTiet.NoiDungDuyet"></td>

                    </tr>
                </tbody>
                <tfoot>
                    <tr>
                        <td colspan="100">
                            <p class="text-danger">Tổng số : {{ctrl.data.TongSo}}</p>
                        </td>
                    </tr>
                </tfoot>
            </table>
        </div>
        <div class="panel panel-primary ui-draggable fade collapse" id="TuChoiPopup" aria-expanded="true">
            <div class="panel-heading ui-draggable-handle">
                <div class="panel-title">
                    <span>Thông tin từ chối</span>
                    <a class="btn btn-xs btn-primary pull-right" data-toggle="collapse" data-target="#TuChoiPopup" ng-click="ctrl.action.Close()" aria-expanded="true">
                        <i class="fa fa-fw fa-remove">
                        </i>
                    </a>
                </div>
            </div>
            <div class="panel-body" style="width: 500px;">
                <form class="form-horizontal ng-pristine ng-valid ng-valid-required">

                    <!-- Input row Ngày-->
                    <div class="row form-group form-group-sm">
                        <label class="control-label col-sm-2">Ngày</label>
                        <div class="form-inline col-sm-9">
                            <input type="text" id="tungayedit" class="form-control datetimepicker date ng-pristine ng-untouched ng-valid ng-not-empty" placeholder="dd/mm/yyyy" ng-model="ctrl.data.objTuChoi.Ngay">

                        </div>
                    </div>
                    <!-- Input row Lý do -->
                    <div class="row form-group form-group-sm">
                        <label class="control-label col-sm-2">Lý do</label>
                        <div class="col-sm-10">
                            <textarea id="txtLyDo" rows="2" class="form-control ng-pristine ng-untouched ng-valid ng-empty" ng-model="ctrl.data.objTuChoi.LyDo"></textarea>
                        </div>
                    </div>
                </form>
            </div>
            <div class="panel-footer">
                <button type="submit" class="btn btn-sm btn-primary ng-scope" ng-click="ctrl.action.TuChoi()"> <i class="fa fa-floppy-o" aria-hidden="true"></i> Lưu</button>&nbsp;&nbsp;&nbsp;

                <a class="btn btn-sm btn-default" ng-click="ctrl.action.Close()" aria-expanded="true">Đóng</a>

            </div>
        </div>
        <div class="panel panel-primary ui-draggable fade collapse" id="TuChoiPopupChiTiet" aria-expanded="true">
            <div class="panel-heading ui-draggable-handle">
                <div class="panel-title">
                    <span>Thông tin từ chối chi tiết</span>
                    <a class="btn btn-xs btn-primary pull-right" data-toggle="collapse" data-target="#TuChoiPopupChiTiet" ng-click="ctrl.action.CloseChiTiet()" aria-expanded="true">
                        <i class="fa fa-fw fa-remove">
                        </i>
                    </a>
                </div>
            </div>
            <div class="panel-body" style="width: 500px;">
                <form class="form-horizontal ng-pristine ng-valid ng-valid-required">

                    <!-- Input row Ngày-->
                    <div class="row form-group form-group-sm">
                        <label class="control-label col-sm-2">Ngày</label>
                        <div class="form-inline col-sm-9">
                            <input type="text" id="tungayedit" class="form-control datetimepicker date ng-pristine ng-untouched ng-valid ng-not-empty" placeholder="dd/mm/yyyy" ng-model="ctrl.data.objTuChoiChiTiet.Ngay">

                        </div>
                    </div>
                    <!-- Input row Lý do -->
                    <div class="row form-group form-group-sm">
                        <label class="control-label col-sm-2">Lý do</label>
                        <div class="col-sm-10">
                            <textarea id="txtLyDoChiTiet" rows="2" class="form-control ng-pristine ng-untouched ng-valid ng-empty" ng-model="ctrl.data.objTuChoiChiTiet.LyDo"></textarea>
                        </div>
                    </div>
                </form>
            </div>
            <div class="panel-footer">
                <button type="submit" class="btn btn-sm btn-primary ng-scope" ng-click="ctrl.action.TuChoiChiTiet()"> <i class="fa fa-floppy-o" aria-hidden="true"></i> Lưu</button>&nbsp;&nbsp;&nbsp;

                <a class="btn btn-sm btn-default" ng-click="ctrl.action.CloseChiTiet()" aria-expanded="true">Đóng</a>

            </div>
        </div>

    </div>
</div>
<div class="modal fade bs-example-modal-full" id="reportmodal" style="z-index:2000" data-backdrop="static" data-keyboard="false">
    <div class="modal-dialog modal-full" style="margin: 0px; width:90%">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <h4 class="modal-title" id="myLargeModalLabel">Xem báo cáo</h4>
            </div>
            <div class="modal-body">
                <iframe src="" width="100%" height="1000px"></iframe>
            </div>
        </div>
    </div>
</div>

@section ImportStyles{}
@section SetupStyles{
    <style type="text/css">
        .st-sort-ascent:before {
            content: '\25B2';
        }

        .st-sort-descent:before {
            content: '\25BC';
        }

        .select-page {
            width: 50px;
            text-align: center;
        }

        .pagination li a input {
            padding: 0;
            margin: -5px 0;
        }

        .label {
            font-size: 90% !important;
        }
    </style>
    <link href="~/lib/bootstrap/css/loadingPage.css" rel="stylesheet" />
}
@section ImportScripts{}
@section SetupScripts{}
@section ImportAngular{
    <script src="~/Scripts/angular/DuyetBaoCao/controller/DuyetBaoCaoListCtrl.js"></script>
    <script src="~/Scripts/angular/DuyetBaoCao/service/DuyetBaoCaoService.js"></script>
    <script src="~/Scripts/angular/DuyetBaoCao/controller/DuyetBaoCaoFilterCtrl.js"></script>
    <script src="~/Scripts/angular/app/models/keyCodes.js"></script>
    <script src="~/Scripts/angular/shared/directive/keyboard.directive.js"></script>
    @{Html.RenderPartial("~/views/PhongBan/ComboboxMuti.cshtml", new ViewDataDictionary { { "ImportAngular", true } });}
}




