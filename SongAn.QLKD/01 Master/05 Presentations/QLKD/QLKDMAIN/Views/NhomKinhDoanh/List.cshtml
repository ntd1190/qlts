
@{
    ViewBag.Title = "Danh sách địa bàn";
    ViewBag.userInfo = ViewBag.userInfo ?? "{}";
}
@if (ViewBag.Html != null && (bool)ViewBag.Html == true)
{
    <div class="container-fluid" ng-init="ctrl.onInitView({userInfo:@(ViewBag.userInfo)})" keyboard="ctrl.keys">
        <div class="panel panel-default" id="NhomKinhDoanhList">
           
                <div class="panel-heading">
                    <div class="panel-title clearfix">
                        <span class="panel-title"><i class="fa fa-fw fa-star-o"></i>Nhóm kinh doanh</span>
                        <div class="pull-right">
                            <form class="form-inline ng-pristine ng-valid">
                                <div class="form-group form-group-sm">
                                    <div class="input-group input-group-sm">
                                        <input class="form-control ng-pristine ng-valid ng-empty ng-touched" id="txtsearch" ng-model="ctrl.data.searchString" ng-keypress="$event.keyCode===13?ctrl.action.getPage():0" autofocus="">
                                        <span class="input-group-btn">
                                            <button type="submit" class="btn btn-primary" href="javascript:void(0)" ng-click="ctrl.action.search()"><i class="fa fa-fw fa-search"></i>Tìm kiếm (F3)</button>

                                        </span>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
             
            <div class="panel-body">
                <h3 class="text-center no-margin">Danh sách nhóm kinh doanh</h3>
            </div>
            <div class="table-container panel-body" st-table="ctrl.data.listNhomKinhDoanh" st-pipe="ctrl.action.getPage">
                <table class="table table-bordered table-condensed table-hover table-striped" style="min-width:800px;">
                    <thead class="text-primary">
                        <tr>
                            <th class="text-center" style="width:35px;" ng-click="ctrl.action.checkAll()">
                                <i class="fa fa-fw" ng-class="ctrl.status.isSelectedAll ? 'fa-check-square-o':'fa-square-o'"></i>
                            </th>
                            <th class="text-center" st-sort="{{cot.MaCot}}" style="width:{{cot.DoRong}}px;" ng-repeat="cot in ctrl.data.listCot|filter:cot.HienThiYN">
                                <span ng-bind="cot.TenCot"></span>
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr ng-if="ctrl.status.isLoading">
                            <td colspan="100" class="text-center">
                                <i class="fa fa-fw fa-spinner fa-spin"></i>
                            </td>
                        </tr>
                        <tr ng-repeat="row in ctrl.data.listNhomKinhDoanh">
                            <td class="text-center text-primary" st-select-row="row" st-select-mode="multiple" ng-click="ctrl.action.autoCheckAll()">
                                <i class="fa fa-fw" ng-class="row.isSelected ? 'fa-check-square-o':'fa-square-o'"></i>
                            </td>
                            <td ng-repeat="cot in ctrl.data.listCot|filter:cot.HienThiYN" ng-switch="cot.MaCot">
                                <a href="javascript:void(0)" ng-click="ctrl.action.edit(row.NhomKinhDoanhId)"
                                   ng-switch-when="MaNhomKinhDoanh,TenNhomKinhDoanh" ng-switch-when-separator="," ng-bind="row[cot.MaCot]"></a>
                                <div class="text-center" ng-switch-when="NgayTao" ng-switch-when-separator="," ng-bind="row[cot.MaCot]|date:'dd/MM/yyyy'"></div>
                                <span ng-switch-default ng-bind="row[cot.MaCot]"></span>
                            </td>
                        </tr>
                    </tbody>
                    <tfoot>
                        <tr>
                            <td colspan="100" class="text-center">
                                <div st-pagination="" st-items-by-page="10" st-template="~/Scripts/angular/shared/smart-table/template/pagination.custom.html"></div>
                            </td>
                        </tr>
                    </tfoot>
                </table>
            </div>

            <div class="panel-footer">
                <span ng-if="ctrl.action.checkQuyenTacVu('N')">
                    <a class="btn btn-sm btn-primary" href="javascript:void(0)" ng-click="ctrl.action.edit(0)"><i class="fa fa-fw fa-plus"></i>Mới (F2)</a>
                </span>&nbsp;&nbsp;&nbsp;
                <span ng-if="ctrl.action.checkQuyenTacVu('D')">
                    <a class="btn btn-sm btn-danger" href="javascript:void(0)" ng-click="ctrl.action.deleteList()"><i class="fa fa-fw fa-trash-o"></i>Xóa chọn</a>&nbsp;&nbsp;&nbsp;
                </span>
            </div>
        </div>
    </div><!-- /.container-fluid -->

    <div class="panel panel-primary ui-draggable collapse fade" id="NhomKinhDoanhEditPopup">
        <div class="panel-heading ui-draggable-handle clearfix">
            <span class="panel-title">Nhóm kinh doanh</span>
            <a class="btn btn-xs btn-primary pull-right" data-toggle="collapse" data-target="#NhomKinhDoanhEditPopup"><i class="fa fa-fw fa-remove"></i></a>
        </div>
        <div class="panel-body" style="width: 600px;">
            <form class="form-horizontal">
                <div class="row form-group form-group-sm" ng-class="ctrl.error.NhomKinhDoanh_MaNhomKinhDoanh?'has-error':''">
                    <label class="control-label col-sm-3">Mã nhóm</label>
                    <div class="col-sm-9">
                        <input class="form-control" type="text" ng-model="ctrl.data.NhomKinhDoanh.MaNhomKinhDoanh" autofocus
                               ng-keydown="ctrl.action.keyPress($event)" data-name="NhomKinhDoanh_MaNhomKinhDoanh" data-next="NhomKinhDoanh_TenNhomKinhDoanh" />
                    </div>
                </div>
                <div class="row form-group form-group-sm" ng-class="ctrl.error.NhomKinhDoanh_TenNhomKinhDoanh?'has-error':''">
                    <label class="control-label col-sm-3">Tên nhóm</label>
                    <div class="col-sm-9">
                        <input class="form-control" type="text" ng-model="ctrl.data.NhomKinhDoanh.TenNhomKinhDoanh"
                               ng-keydown="ctrl.action.keyPress($event)" data-name="NhomKinhDoanh_TenNhomKinhDoanh" data-next="NhomKinhDoanh_QuanLy" />
                    </div>
                </div>
                <div class="row form-group form-group-sm" ng-class="ctrl.error.NhomKinhDoanh_QuanLy?'has-error':''">
                    <label class="control-label col-sm-3">Quản lý</label>
                    <div class="col-sm-9">
                        <cbo-nhan-vien-by-phong-ban id="cbxNhanVien{{$index}}" data-name="NhomKinhDoanh_QuanLy" phongbanid="53" data-value="ctrl.data.NhomKinhDoanh.QuanLy" data-config="{userInfo:@(ViewBag.userInfo)}" template-url="~/nhanvien/showcombobox?viewname=cbonhanvienbyphongban"></cbo-nhan-vien-by-phong-ban>
                    </div>
                </div>
                <div class="row form-group form-group-sm" ng-class="ctrl.error.NhomKinhDoanh_SoLuongNhanVien?'has-error':''">
                    <label class="control-label col-sm-3">Số lượng NV</label>
                    <div class="col-sm-9">
                        <input class="form-control" type="number" ng-model="ctrl.data.NhomKinhDoanh.SoLuongNhanVien"
                               ng-keydown="ctrl.action.keyPress($event)" data-name="NhomKinhDoanh_SoLuongNhanVien" data-next="btnSave"/>
                    </div>
                </div>
            </form>
        </div>
        <div class="panel-footer">
            <button type="button" data-name="btnSave" ng-if="ctrl.action.checkQuyenTacVuEdit('N')||ctrl.action.checkQuyenTacVuEdit('M')" class="btn btn-sm btn-primary ng-scope" id="btnluu"  ng-click="ctrl.action.save()"><i class="fa fa-save"></i> Lưu (F8)</button>&nbsp;&nbsp;&nbsp;
            <button type="button" class="btn btn-sm btn-default" ng-click="ctrl.action.edit(ctrl.data.NhomKinhDoanh.NhomKinhDoanhId)">Thiết lập lại</button>&nbsp;&nbsp;&nbsp;
            <a class="btn btn-sm btn-default" data-toggle="collapse" data-target="#NhomKinhDoanhEditPopup">Đóng</a>
        </div>

    </div>

    <div ui-view></div>
}
else if (ViewBag.ImportStyles != null && (bool)ViewBag.ImportStyles == true) { }
else if (ViewBag.SetupStyles != null && (bool)ViewBag.SetupStyles == true) { }
else if (ViewBag.ImportScripts != null && (bool)ViewBag.ImportScripts == true) { }
else if (ViewBag.SetupScripts != null && (bool)ViewBag.SetupScripts == true) { }
else if (ViewBag.ImportAngular != null && (bool)ViewBag.ImportAngular == true) { }
