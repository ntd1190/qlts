
@{
    ViewBag.Title = "List";
    ViewBag.userInfo = ViewBag.userInfo ?? "{}";
}

@if (ViewBag.Html != null && (bool)ViewBag.Html == true)
{
    <div class="container-fluid" ng-init="ctrl.onInitView({userInfo: @ViewBag.userInfo,linkUrl:'@(Url.Content("~/"))'})" keyboard="ctrl.keys">
        <div class="panel panel-default">
            <div class="panel-heading">
                <div class="panel-title clearfix">
                    <span><i class="fa fa-fw fa-star-o"></i>Khách hàng</span>
                    <div class="btn-group btn-group-sm pull-right">
                        @*<form class="form-inline ng-pristine ng-valid">
                            <div class="form-group form-group-sm">
                                <div class="input-group input-group-sm">
                                    <input class="form-control ng-pristine ng-valid ng-empty ng-touched" id="txtsearch" ng-model="ctrl.data.searchString" ng-keypress="$event.keyCode===13?ctrl.action.getPage():0" autofocus="">
                                    <span class="input-group-btn">
                                        <button class="btn btn-sm btn-primary" ng-click="ctrl.action.getPage()"><i class="fa fa-fw fa-search"></i>Tìm kiếm (F3)</button>

                                    </span>
                                </div>
                            </div>
                        </form>*@
                        <a class="btn btn-primary" data-toggle="collapse" data-target="#SearchCollapse"><i class="fa fa-fw fa-search"></i> Tìm kiếm (F3)</a>
                        <a class="btn btn-warning" data-toggle="collapse" data-target="#TuyChonCotPopup"><i class="fa fa-fw fa-cog"></i> Tùy chọn</a>
                    </div>
                </div>
            </div>

            <div class="collapse fade" id="SearchCollapse">
                <div class="panel-body">
                    <form class="form-horizontal">
                        <div class="row form-group form-group-sm">
                            <label class="control-label col-sm-2">Nhóm khách hàng</label>
                            <div class="col-sm-9">
                                <cbo-nhom-khach-hang id="cbxNhomKhachHang" data-function-code="KD0002" data-value="ctrl.data.searchNhomKhachHangId" data-config="{userInfo:@(ViewBag.userInfo)}" template-url="~/nhomkhachhang/showcombobox?viewname=cbonhomkhachhang"></cbo-nhom-khach-hang>
                            </div>
                        </div>
                        <div class="row form-group form-group-sm">
                            <label class="control-label col-sm-2">Tìm kiếm nhanh</label>
                            <div class="col-sm-9">
                                <input class="form-control ng-pristine ng-valid ng-empty ng-touched" id="txtsearch" ng-model="ctrl.data.searchString" ng-keypress="$event.keyCode===13?ctrl.action.getPage():0" autofocus="">
                            </div>
                        </div>

                    </form>
                </div>
                <div class="panel-footer">
                    <a class="btn btn-sm btn-primary" ng-click="ctrl.action.getPage()">Tìm kiếm (F8)</a>&nbsp;&nbsp;&nbsp;
                    <a class="btn btn-sm btn-default" ng-click="ctrl.action.reset()">Thiết lập lại</a>&nbsp;&nbsp;&nbsp;
                </div>
            </div>
            <!---->
            @*<div class="panel-body">
                <h3 class="text-center no-margin">Danh sách khách hàng</h3>
            </div>*@
            <div class="panel-heading">
                <span ng-if="ctrl.data.showButtonNew">
                    <a class="btn btn-sm btn-primary" href="#!/khachhang/edit/0"><i class="fa fa-plus"></i> Mới (F2)</a>&nbsp;&nbsp;&nbsp;
                </span>
                <button class="btn btn-sm btn-danger" ng-if="ctrl.data.showButtonXoaChon" ng-click="ctrl.action.deleteSelected()"><i class="fa fa-trash-o"></i> Xóa chọn</button>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
            </div>
            <div class="table-container panel-body">
                <table class="table table-bordered table-condensed  table-hover " st-table="ctrl.data.listKhachHang" st-pipe="ctrl.action.getPage">
                    <thead class="bg-default text-primary">
                        <tr>
                            <th class="text-center" style="width:35px;" ng-click="ctrl.action.checkAll()">
                                <i class="fa fa-fw" ng-class="ctrl.status.isSelectedAll ? 'fa-check-square-o':'fa-square-o'"></i>
                            </th>
                            <th class="text-center"
                                style="width:{{cot.DoRong}}px;"
                                st-sort="{{cot.MaCot}}"
                                ng-repeat="cot in ctrl.data.listCot|filter:ctrl.action.checkCot">
                                <span ng-bind="cot.TenCot"></span>
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr ng-if="ctrl.data.error.code>0">
                            <td colspan="100" class="text-center danger" ng-bind="ctrl.data.error.message"></td>
                        </tr>
                        <tr ng-repeat="KhachHang in ctrl.data.listKhachHang" ng-click="ctrl.action.getPageDetail(KhachHang.KhachHangId)" id="row_{{KhachHang.KhachHangId}}">
                            <td class="text-center text-primary" st-select-row="KhachHang" st-select-mode="multiple" ng-click="ctrl.action.autoCheckAll()">
                                <i class="fa fa-fw" ng-class="KhachHang.isSelected ? 'fa-check-square-o':'fa-square-o'"></i>
                            </td>
                            <td ng-repeat="cot in ctrl.data.listCot|filter:ctrl.action.checkCot" ng-switch="cot.MaCot">
                                <a ng-switch-when="MaKhachHang,TenKhachHang" ng-switch-when-separator="," href="#!/khachhang/edit/{{KhachHang.KhachHangId}}" ng-bind="KhachHang[cot.MaCot]"></a>
                                <span ng-switch-when="NgaySinh,NgayTao" ng-switch-when-separator=",">{{ KhachHang.NgaySinh | date : 'dd/MM/yyyy'}}</span>
                                <span ng-switch-default ng-bind="KhachHang[cot.MaCot]"></span>
                            </td>
                        </tr>
                    </tbody>
                    <tfoot>
                        <tr>
                            <td colspan="100" class="text-center hidden-print">
                                <div st-pagination="" st-items-by-page="10" st-template="~/Scripts/angular/shared/smart-table/template/pagination.custom.html"></div>
                            </td>
                        </tr>
                    </tfoot>
                </table>
            </div>
            <div class="panel-heading">
                <span>Thông tin chi tiết</span>
            </div>
            <div class="table-container  panel-body">
                <table st-table="ctrl.data.KhachHangChiTietListDisplay" style="border: 1px solid #ddd;" class="table table-bordered table-condensed table-responsive table-hover ">
                    <thead class="bg-default text-primary">
                        <tr>
                            <th class="text-center" style="min-width: 100px;vertical-align:middle">Người phụ trách</th>
                            <th class="text-center" style="min-width: 200px;vertical-align:middle">Tính cách</th>
                            <th class="text-center" style="min-width: 200px;vertical-align:middle">Sở thích</th>
                            <th class="text-center" style="min-width: 200px;vertical-align:middle">Thói quen</th>
                            <th class="text-center" style="min-width: 200px;vertical-align:middle">Ghi chú</th>

                        </tr>
                    </thead>
                    <tbody>
                        <tr ng-if="ctrl.status.isLoading">
                            <td colspan="100" class="text-center">
                                <i class="fa fa-fw fa-spin fa-spinner"></i>
                            </td>
                        </tr>
                        <tr ng-repeat="KhachHangChitiet in ctrl.data.KhachHangChiTietListDisplay" ng-class="(KhachHangChitiet.isSelected==true)?'info':''">
                            <td><span ng-bind="KhachHangChitiet.NguoiPhuTrach"></span></td>
                            <td><span ng-bind="KhachHangChitiet.TinhCach"></span></td>
                            <td><span ng-bind="KhachHangChitiet.SoThich"></span></td>
                            <td><span ng-bind="KhachHangChitiet.ThoiQuen"></span></td>
                            <td><span ng-bind="KhachHangChitiet.GhiChu"></span></td>
                        </tr>
                    </tbody>
                    <tfoot>
                        <tr>
                            
                        </tr>
                    </tfoot>
                </table>
            </div>
        </div>

        <tuy-chon-cot-list maform="FD0001"
                           config="{ctrlId:'TuyChonCotPopup'}"
                           on-confirm="ctrl.action.getListCot(data)"
                           template-url="~/tuychoncot/showcombobox?viewname=TuyChonCotList"></tuy-chon-cot-list>
    </div>
    <div ui-view></div>
}
else if (ViewBag.ImportStyles != null && (bool)ViewBag.ImportStyles == true) { }
else if (ViewBag.SetupStyles != null && (bool)ViewBag.SetupStyles == true)
{
}
else if (ViewBag.ImportScripts != null && (bool)ViewBag.ImportScripts == true) { }
else if (ViewBag.SetupScripts != null && (bool)ViewBag.SetupScripts == true) { }
else if (ViewBag.ImportAngular != null && (bool)ViewBag.ImportAngular == true) { }
