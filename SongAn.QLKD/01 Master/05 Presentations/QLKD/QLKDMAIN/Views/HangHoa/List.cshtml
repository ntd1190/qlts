
@{
    ViewBag.Title = "Hàng hóa";
    ViewBag.userInfo = ViewBag.userInfo ?? "{}";
}

@if (ViewBag.Html != null && (bool)ViewBag.Html == true)
{
    <div class="container-fluid" ng-init="ctrl.onInitView({userInfo: @ViewBag.userInfo,linkUrl:'@(Url.Content("~/"))'})" keyboard="ctrl.keys">
        <div class="panel panel-default">
            <div class="panel-heading">
                <div class="panel-title clearfix">
                    <span><i class="fa fa-fw fa-star-o"></i>Hàng hóa</span>
                    <div class="btn-group btn-group-sm pull-right">
                        <a class="btn btn-primary" data-toggle="collapse" data-target="#SearchCollapse"><i class="fa fa-fw fa-search"></i> Tìm kiếm (F3)</a>
                        <a class="btn btn-warning" data-toggle="collapse" data-target="#TuyChonCotPopup"><i class="fa fa-fw fa-cog"></i> Tùy chọn</a>
                    </div>
                </div>
            </div>

            <div class="collapse fade" id="SearchCollapse">
                <div class="panel-body">
                    <form class="form-horizontal">
                        <div class="row form-group form-group-sm">
                            <label class="control-label col-sm-2">Tìm kiếm nhanh</label>
                            <div class="col-sm-9">
                                <input class="form-control ng-pristine ng-valid ng-empty ng-touched" id="txtsearch" ng-model="ctrl.data.searchString" placeholder="mã hàng hóa, tên hàng hóa" ng-keypress="$event.keyCode===13?ctrl.action.getPage():0" autofocus="">
                            </div>
                        </div>
                        <div class="row form-group form-group-sm">
                            <label class="control-label col-sm-2">Nhóm</label>
                            <div class="col-sm-9">
                                <cbo-nhom-hang-hoa id="cbxNhomHangHoa" data-function-code="KD0019" data-value="ctrl.data.searchNhomHangHoaId" data-config="{userInfo:@(ViewBag.userInfo)}" template-url="~/nhomhanghoa/showcombobox?viewname=cbonhomhanghoa"></cbo-nhom-hang-hoa>
                            </div>
                        </div>
                        <div class="row form-group form-group-sm">
                            <label class="control-label col-sm-2">Loại</label>
                            <div class="col-sm-9">
                                <cbo-loai-hang-hoa id="cbxLoaiHangHoa" data-function-code="KD0019" data-value="ctrl.data.searchLoaiHangHoaId" data-config="{userInfo:@(ViewBag.userInfo)}" template-url="~/loaihanghoa/showcombobox?viewname=cboloaihanghoa"></cbo-loai-hang-hoa>
                            </div>
                        </div>
                    </form>
                </div>
                <div class="panel-footer">
                    <a class="btn btn-sm btn-primary" ng-click="ctrl.action.getPage()">Tìm kiếm (F8)</a>&nbsp;&nbsp;&nbsp;
                    <a class="btn btn-sm btn-default" ng-click="ctrl.action.reset()">Thiết lập lại</a>&nbsp;&nbsp;&nbsp;
                </div>
            </div>
            <!---->
            <div class="panel-body">
                <h3 class="text-center no-margin">Danh sách hàng hóa</h3>
            </div>

            <div class="table-container panel-body">
                <table class="table table-bordered table-condensed  table-hover " st-table="ctrl.data.listHangHoa" st-pipe="ctrl.action.getPage">
                    <thead class="bg-default text-primary">
                        <tr>
                            <th class="text-center" style="width:35px;" ng-click="ctrl.action.checkAll()">
                                <i class="fa fa-fw" ng-class="ctrl.status.isSelectedAll ? 'fa-check-square-o':'fa-square-o'"></i>
                            </th>
                            <th class="text-center"
                                style="width:{{cot.DoRong}}px;"
                                st-sort="{{cot.MaCot}}"
                                ng-repeat="cot in ctrl.data.listCot|filter:ctrl.action.checkCot">
                                <span ng-bind="cot.TenCot"></span>
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr ng-if="ctrl.data.error.code>0">
                            <td colspan="100" class="text-center danger" ng-bind="ctrl.data.error.message"></td>
                        </tr>
                        <tr ng-repeat="HangHoa in ctrl.data.listHangHoa" ng-click="ctrl.action.getPageDetail(HangHoa.HangHoaId)" id="row_{{HangHoa.HangHoaId}}">
                            <td class="text-center text-primary" st-select-row="HangHoa" st-select-mode="multiple" ng-click="ctrl.action.autoCheckAll()">
                                <i class="fa fa-fw" ng-class="HangHoa.isSelected ? 'fa-check-square-o':'fa-square-o'"></i>
                            </td>
                            <td ng-repeat="cot in ctrl.data.listCot|filter:ctrl.action.checkCot" ng-switch="cot.MaCot">
                                <a href="javascript:void(0)" ng-click="ctrl.action.edit(HangHoa.HangHoaId)"
                                   ng-switch-when="MaHangHoa,TenHangHoa" ng-switch-when-separator="," ng-bind="HangHoa[cot.MaCot]">
                                </a>
                                <span ng-switch-when="NgaySinh,NgayTao" ng-switch-when-separator=",">{{ HangHoa.NgaySinh | date : 'dd/MM/yyyy'}}</span>
                                <span ng-switch-default ng-bind="HangHoa[cot.MaCot]"></span>
                            </td>
                        </tr>
                    </tbody>
                    <tfoot>
                        <tr>
                            <td colspan="100" class="text-center hidden-print">
                                <div st-pagination="" st-items-by-page="10" st-template="~/Scripts/angular/shared/smart-table/template/pagination.custom.html"></div>
                            </td>
                        </tr>
                    </tfoot>
                </table>
            </div>
        </div>

        <tuy-chon-cot-list maform="FM0012"
                           config="{ctrlId:'TuyChonCotPopup'}"
                           on-confirm="ctrl.action.getListCot(data)"
                           template-url="~/tuychoncot/showcombobox?viewname=TuyChonCotList"></tuy-chon-cot-list>
    </div>

    <div class="panel panel-primary ui-draggable collapse fade" id="HangHoaEditPopup">
        <div class="panel-heading ui-draggable-handle clearfix">
            <span class="panel-title">Hàng hóa</span>
            <a class="btn btn-xs btn-primary pull-right" data-toggle="collapse" data-target="#HangHoaEditPopup"><i class="fa fa-fw fa-remove"></i></a>
        </div>
        <div class="panel-body" style="width: 600px;height:500px">
            <form class="form-horizontal">
               
                <div class="row form-group form-group-sm">
                    <label class="control-label col-sm-3">Mã mặt hàng</label>
                    <div class="col-sm-9">
                        <span type="text" class="form-control" id="txtMaHangHoa" ng-bind="ctrl.data.HangHoa.MaHangHoa" />
                    </div>
                </div>
                <div class="row form-group form-group-sm">
                    <label class="control-label col-sm-3">Tên mặt hàng</label>
                    <div class="col-sm-9">
                        <span type="text" class="form-control" id="txtTenHangHoa" ng-bind="ctrl.data.HangHoa.TenHangHoa"/>
                    </div>
                </div>
                <div class="row form-group form-group-sm">
                    <label class="control-label col-sm-3">Từ khóa</label>
                    <div class="col-sm-9">
                        <span type="text" class="form-control" id="txtTuKhoa" ng-bind="ctrl.data.HangHoa.TuKhoa"/>
                    </div>
                </div>
                <div class="row form-group form-group-sm" ng-class="{'has-error':ctrl.status.isInValidDonViTinh}">
                    <label class="control-label col-sm-3">Đơn vị tính (*)</label>
                    <div class="col-sm-9">
                        <span type="text" class="form-control" id="txtDonViTinh" ng-model="ctrl.data.HangHoa.DonViTinh" />
                    </div>
                </div>
                <div class="row form-group form-group-sm">
                    <label class="control-label col-sm-3">Giá mua</label>
                    <div class="col-sm-5">
                        <input type="text" class="form-control" id="txtGiaMua" ng-model="ctrl.data.HangHoa.GiaMua" number-format disabled/>
                    </div>
                    <div class="col-sm-4">
                        <label class="radio-inline"><input type="checkbox" ng-model="ctrl.data.HangHoa.ThueMua" value="Y" disabled> Đã có thuế GTGT</label>
                    </div>
                </div>
                <div class="row form-group form-group-sm">
                    <label class="control-label col-sm-3">Giá bán</label>
                    <div class="col-sm-5">
                        <input type="text" class="form-control" id="txtGiaBan" ng-model="ctrl.data.HangHoa.GiaBan" number-format disabled />
                    </div>
                    <div class="col-sm-4">
                        <label class="radio-inline"><input type="checkbox" ng-model="ctrl.data.HangHoa.ThueBan" value="Y" disabled> Đã có thuế GTGT</label>
                    </div>
                </div>
                <div class="row form-group form-group-sm">
                    <label class="control-label col-sm-3">Cấu hình</label>
                    <div class="col-sm-9">
                        <span type="text" class="form-control" id="txtCauHinh" ng-bind="ctrl.data.HangHoa.CauHinh" />
                    </div>
                </div>
                <div class="row form-group form-group-sm">
                    <label class="control-label col-sm-3">Hình ảnh</label>
                    <div class="col-sm-9">
                        <a href="@(Url.Content("~/content/upload/")){{ctrl.data.HangHoa.Hinh}}" target="_blank" ng-if="ctrl.data.HangHoa.Hinh">Xem hình</a>
                    </div>
                </div>
                <div class="row form-group form-group-sm">
                    <label class="control-label col-sm-3">Bảo hành (tháng)</label>
                    <div class="col-sm-9">
                        <input type="text" min="0" max="360" maxlength="3" class="form-control" id="txtBaoHanh" ng-model="ctrl.data.HangHoa.ThoiGianBaoHanh" number-format disabled>
                    </div>
                </div>
                <div class="row form-group form-group-sm" ng-class="{'has-error':ctrl.status.isInValidNhomHangHoa}">
                    <label for="txtKhachHang" class="control-label col-sm-3">Nhóm mặt hàng</label>
                    <div class="col-sm-9">
                            <span type="text" class="form-control" ng-bind="ctrl.data.HangHoa.TenNhom" />
                    </div>
                </div>
                <div class="row form-group form-group-sm" ng-class="{'has-error':ctrl.status.isInvalidLoaiHangHoa}">
                    <label for="txtKhachHang" class="control-label col-sm-3">Loại mặt hàng</label>
                    <div class="col-sm-9">
                        <span type="text" class="form-control" ng-bind="ctrl.data.HangHoa.TenLoai" />
                    </div>
                </div>
   
                <div class="row form-group form-group-sm" ng-class="{'has-error':ctrl.status.isInvalidHangSanXuat}">
                    <label for="txtKhachHang" class="control-label col-sm-3">Hãng sản xuất</label>
                    <div class="col-sm-9">
                        <span type="text" class="form-control" ng-bind="ctrl.data.HangHoa.TenHangSanXuat" />
                    </div>
                </div>
                <div class="row form-group form-group-sm" ng-class="{'has-error':ctrl.status.isInvalidNuocSanXuat}">
                    <label for="txtKhachHang" class="control-label col-sm-3">Nước sản xuất</label>
                    <div class="col-sm-9">
                        <span type="text" class="form-control" ng-bind="ctrl.data.HangHoa.TenNuoc" />
                    </div>
                </div>
            </form>
        </div>
        <div class="panel-footer">         
            <a class="btn btn-sm btn-default" data-toggle="collapse" data-target="#HangHoaEditPopup">Đóng</a>&nbsp;&nbsp;&nbsp;
        </div>

    </div>

    <div ui-view></div>
}
else if (ViewBag.ImportStyles != null && (bool)ViewBag.ImportStyles == true) { }
else if (ViewBag.SetupStyles != null && (bool)ViewBag.SetupStyles == true)
{
}
else if (ViewBag.ImportScripts != null && (bool)ViewBag.ImportScripts == true) { }
else if (ViewBag.SetupScripts != null && (bool)ViewBag.SetupScripts == true) { }
else if (ViewBag.ImportAngular != null && (bool)ViewBag.ImportAngular == true) { }
