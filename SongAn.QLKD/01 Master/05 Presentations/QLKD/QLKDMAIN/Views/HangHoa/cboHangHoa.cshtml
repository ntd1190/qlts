
@if (ViewBag.Html != null && (bool)ViewBag.Html == true)
{
    <ui-select ng-model="ctrl.data.HangHoa" data-ng-disabled="disabled" on-select="ctrl.action.onSelected()" theme="bootstrap" id="{{ctrl.NameId}}">
        <ui-select-match placeholder="{{$select.selected.TenHangHoa || 'Chọn hàng hóa'}}">{{$select.selected.TenHangHoa}}</ui-select-match>
        <ui-select-choices repeat="item in ctrl.data.HangHoaListDisplay | filter: $select.search" refresh="ctrl.action.search($select)" refresh-delay="200" position="down">
            <div style="border-bottom: #ccc 1px solid;">
                <b><span class="text-danger" ng-bind-html="item.MaHangHoa | highlight: $select.search"></span></b> <span ng-if="item.MaHangHoa">:</span> <b style="color:#000"><strong class="tt-highlight"><span ng-bind-html="item.TenHangHoa | highlight: $select.search"></span></strong></b>
                <br />
                <b>- Giá mua:</b> <span ng-bind-html="item.GiaMua|number:'':'':4"></span> đ
                <br />
                <b>- Giá bán:</b> <span ng-bind-html="item.GiaBan|number:'':'':4"></span> đ
            </div>
        </ui-select-choices>
    </ui-select>

}
