
@{
    ViewBag.Title = "List";
    ViewBag.userInfo = ViewBag.userInfo ?? "{}";
}

@if (ViewBag.Html != null && (bool)ViewBag.Html == true)
{
    <div class="container-fluid" ng-init="ctrl.onInitView({userInfo: @ViewBag.userInfo,linkUrl:'@(Url.Content("~/"))'})" keyboard="ctrl.keys">
        <div class="panel panel-default">
            <div class="panel-heading">
                <div class="panel-title clearfix">
                    <span><i class="fa fa-fw fa-star-o"></i>Chỉ tiêu</span>
                    <div class="btn-group btn-group-sm pull-right">
                        <form class="form-inline ng-pristine ng-valid">
                            <div class="form-group form-group-sm">
                                <div class="input-group input-group-sm">
                                    <input class="form-control ng-pristine ng-valid ng-empty ng-touched" id="txtsearch" ng-model="ctrl.data.searchString" ng-keypress="$event.keyCode===13?ctrl.action.getPage():0" autofocus="">
                                    <span class="input-group-btn">
                                        <button class="btn btn-sm btn-primary" ng-click="ctrl.action.getPage()"><i class="fa fa-fw fa-search"></i>Tìm kiếm (F3)</button>

                                    </span>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>

            <!---->
            <div class="panel-heading">
                <span ng-if="ctrl.data.showButtonNew">
                    <a class="btn btn-sm btn-primary" href="#!/chitieu/edit/0"><i class="fa fa-plus"></i> Mới (F2)</a>&nbsp;&nbsp;&nbsp;
                </span>
                <button class="btn btn-sm btn-danger" ng-if="ctrl.data.showButtonXoaChon" ng-click="ctrl.action.deleteSelected()"><i class="fa fa-trash-o"></i> Xóa chọn</button>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
            </div>
            <div class="table-container panel-body">
                <table class="table table-bordered table-condensed  table-hover " st-table="ctrl.data.listChiTieu" st-pipe="ctrl.action.getPage">
                    <thead class="bg-default text-primary">
                        <tr>
                            <th class="text-center" style="width:35px;" ng-click="ctrl.action.checkAll()">
                                <i class="fa fa-fw" ng-class="ctrl.status.isSelectedAll ? 'fa-check-square-o':'fa-square-o'"></i>
                            </th>
                            <th class="text-center"
                                style="width:{{cot.DoRong}}px;"
                                st-sort="{{cot.MaCot}}"
                                ng-repeat="cot in ctrl.data.listCot|filter:ctrl.action.checkCot">
                                <span ng-bind="cot.TenCot"></span>
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr ng-if="ctrl.data.error.code>0">
                            <td colspan="100" class="text-center danger" ng-bind="ctrl.data.error.message"></td>
                        </tr>
                        <tr ng-repeat="ChiTieu in ctrl.data.listChiTieu" ng-click="ctrl.action.getPageDetail(ChiTieu.ChiTieuId)" id="row_{{ChiTieu.ChiTieuId}}">
                            <td class="text-center text-primary" st-select-row="ChiTieu" st-select-mode="multiple" ng-click="ctrl.action.autoCheckAll()">
                                <i class="fa fa-fw" ng-class="ChiTieu.isSelected ? 'fa-check-square-o':'fa-square-o'"></i>
                            </td>
                            <td ng-repeat="cot in ctrl.data.listCot|filter:ctrl.action.checkCot" ng-switch="cot.MaCot">
                                <a ng-switch-when="Nam" ng-switch-when-separator="," href="#!/ChiTieu/edit/{{ChiTieu.ChiTieuId}}" ng-bind="ChiTieu[cot.MaCot]"></a>
                                <span style="display:block; text-align:center" ng-switch-when="NgayTao">{{ ChiTieu.NgayTao | date : 'dd/MM/yyyy'}}</span>
                                <span ng-switch-default ng-bind="ChiTieu[cot.MaCot]"></span>
                            </td>
                        </tr>
                    </tbody>
                    <tfoot>
                        <tr>
                            <td colspan="100" class="text-center hidden-print">
                                <div st-pagination="" st-items-by-page="10" st-template="~/Scripts/angular/shared/smart-table/template/pagination.custom.html"></div>
                            </td>
                        </tr>
                    </tfoot>
                </table>
            </div>
            <div class="panel-heading">
                <span>Thông tin chi tiết</span>
            </div>
            <div class="table-responsive  panel-body">
                <table st-table="ctrl.data.ChiTieuChiTietListDisplay" style="border: 1px solid #ddd;" class="table table-bordered table-condensed table-responsive table-hover ">
                    <thead class="bg-default text-primary">
                        <tr>
                            <th class="text-center" style="min-width: 50px;vertical-align:middle">STT</th>
                            <th class="text-center" style="min-width: 200px;vertical-align:middle">Nhân viên</th>
                            <th class="text-center" style="min-width: 100px;vertical-align:middle">Tháng 1</th>
                            <th class="text-center" style="min-width: 100px;vertical-align:middle">Tháng 2</th>
                            <th class="text-center" style="min-width: 100px;vertical-align:middle">Tháng 3</th>
                            <th class="text-center" style="min-width: 100px;vertical-align:middle">Tháng 4</th>
                            <th class="text-center" style="min-width: 100px;vertical-align:middle">Tháng 5</th>
                            <th class="text-center" style="min-width: 100px;vertical-align:middle">Tháng 6</th>
                            <th class="text-center" style="min-width: 100px;vertical-align:middle">Tháng 7</th>
                            <th class="text-center" style="min-width: 100px;vertical-align:middle">Tháng 8</th>
                            <th class="text-center" style="min-width: 100px;vertical-align:middle">Tháng 9</th>
                            <th class="text-center" style="min-width: 100px;vertical-align:middle">Tháng 10</th>
                            <th class="text-center" style="min-width: 100px;vertical-align:middle">Tháng 11</th>
                            <th class="text-center" style="min-width: 100px;vertical-align:middle">Tháng 12</th>
                            <th class="text-center" style="min-width: 110px;vertical-align:middle">Ngày cập nhật</th>

                        </tr>
                    </thead>
                    <tbody>
                        <tr ng-if="ctrl.status.isLoading">
                            <td colspan="100" class="text-center">
                                <i class="fa fa-fw fa-spin fa-spinner"></i>
                            </td>
                        </tr>
                        <tr ng-repeat="ChiTieuChitiet in ctrl.data.ChiTieuChiTietListDisplay" ng-class="(ChiTieuChitiet.isSelected==true)?'info':''">
                            <td class="text-center">{{$index + 1}}</td>
                            <td><span ng-bind="ChiTieuChitiet.TenNhanVien"></span></td>
                            <td class="text-right"><span ng-bind="ChiTieuChitiet.Thang1 |number"></span></td>
                            <td class="text-right"><span ng-bind="ChiTieuChitiet.Thang2 |number"></span></td>
                            <td class="text-right"><span ng-bind="ChiTieuChitiet.Thang3 |number"></span></td>
                            <td class="text-right"><span ng-bind="ChiTieuChitiet.Thang4 |number"></span></td>
                            <td class="text-right"><span ng-bind="ChiTieuChitiet.Thang5 |number"></span></td>
                            <td class="text-right"><span ng-bind="ChiTieuChitiet.Thang6 |number"></span></td>
                            <td class="text-right"><span ng-bind="ChiTieuChitiet.Thang7 |number"></span></td>
                            <td class="text-right"><span ng-bind="ChiTieuChitiet.Thang8 |number"></span></td>
                            <td class="text-right"><span ng-bind="ChiTieuChitiet.Thang9 |number"></span></td>
                            <td class="text-right"><span ng-bind="ChiTieuChitiet.Thang10 |number"></span></td>
                            <td class="text-right"><span ng-bind="ChiTieuChitiet.Thang11 |number"></span></td>
                            <td class="text-right"><span ng-bind="ChiTieuChitiet.Thang12|number"></span></td>
                            <td class="text-center"><span>{{ChiTieuChitiet.NgayCapNhat | date : 'dd/MM/yyyy'}}</span></td>
                        </tr>
                    </tbody>
                    <tfoot>
                        <tr>
                            <td colspan="100">
                                <p class="text-danger">Tổng số : {{ctrl.data.TongSo}}</p>
                            </td>
                        </tr>
                    </tfoot>
                </table>
            </div>
        </div>

    </div>
    <div ui-view></div>
}
else if (ViewBag.ImportStyles != null && (bool)ViewBag.ImportStyles == true) { }
else if (ViewBag.SetupStyles != null && (bool)ViewBag.SetupStyles == true)
{
}
else if (ViewBag.ImportScripts != null && (bool)ViewBag.ImportScripts == true) { }
else if (ViewBag.SetupScripts != null && (bool)ViewBag.SetupScripts == true) { }
else if (ViewBag.ImportAngular != null && (bool)ViewBag.ImportAngular == true) { }
