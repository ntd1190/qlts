@if (ViewBag.Html != null && (bool)ViewBag.Html == true)
{
    <ui-select ng-model="ctrl.data.objSelected" data-ng-disabled="disabled" on-select="ctrl.action.onSelected()" theme="bootstrap" id="{{ctrl.NameId}}">
        <ui-select-match placeholder="{{$select.selected.ThuatNgu || 'Chọn thuật ngữ'}}">{{$select.selected.ThuatNgu}}</ui-select-match>
        <ui-select-choices repeat="item in ctrl.data.listDisplay | filter: $select.search" refresh="ctrl.action.search($select)" refresh-delay="200" position="down">
            <span ng-bind-html="item.MaThuatNgu" class="text-danger"></span> <span ng-if="item.MaThuatNgu">:</span> <span ng-bind-html="item.ThuatNgu"></span>
        </ui-select-choices>
    </ui-select>
}
