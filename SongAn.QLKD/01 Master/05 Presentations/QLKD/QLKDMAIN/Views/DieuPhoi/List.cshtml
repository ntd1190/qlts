
@{
    ViewBag.Title = "List";
    ViewBag.userInfo = ViewBag.userInfo ?? "{}";
}

@if (ViewBag.Html != null && (bool)ViewBag.Html == true)
{
    <div class="container-fluid" ng-init="ctrl.onInitView({userInfo: @ViewBag.userInfo,linkUrl:'@(Url.Content("~/"))'})" keyboard="ctrl.keys">
        <div class="panel panel-default">
            <div class="panel-heading">
                <div class="panel-title clearfix">
                    <span><i class="fa fa-fw fa-star-o"></i>Điều phối</span>
                    <div class="btn-group btn-group-sm pull-right">
                        <a class="btn btn-primary" data-toggle="collapse" data-target="#SearchCollapse"><i class="fa fa-fw fa-search"></i> Tìm kiếm (F3)</a>
                        
                    </div>
                </div>
            </div>

            <div class="collapse fade" id="SearchCollapse">
                <div class="panel-body">
                    <form class="form-horizontal">
                        <div class="row form-group form-group-sm">
                            <label class="control-label col-sm-2">Ngày</label>
                            <div class="form-inline col-sm-9">
                                <input type="text" id="tungay" class="form-control datetimepicker date" placeholder="dd/mm/yyyy" ng-model="ctrl.data.startDate" /> ~
                                <input type="text" id="denngay" class="form-control datetimepicker date" placeholder="dd/mm/yyyy" ng-model="ctrl.data.endDate" />
                            </div>
                        </div>
                        <div class="row form-group form-group-sm">
                            <label class="control-label col-sm-2">Nhân viên điều phối</label>
                            <div class="col-sm-9">
                                <cbo-nhan-vien-by-phong-ban id="cbxNhanVien" data-function-code="KD0017" data-value="ctrl.data.searchNhanVienId" data-phongbanid="53" data-config="{userInfo:@(ViewBag.userInfo)}" template-url="~/NhanVien/showcombobox?viewname=cboNhanVienByPhongBan"></cbo-nhan-vien-by-phong-ban>
                            </div>
                        </div>
                    </form>
                </div>
                <div class="panel-footer">
                    <a class="btn btn-sm btn-primary" ng-click="ctrl.action.getPage()">Tìm kiếm (F8)</a>&nbsp;&nbsp;&nbsp;
                    <a class="btn btn-sm btn-default" ng-click="ctrl.action.reset()">Thiết lập lại</a>&nbsp;&nbsp;&nbsp;
                </div>
            </div>
            <!---->

            <div class="panel-heading">
                <span ng-if="ctrl.data.showButtonNew">
                    <a class="btn btn-sm btn-primary" href="#!/DieuPhoi/edit/0"><i class="fa fa-plus"></i> Mới (F2)</a>&nbsp;&nbsp;&nbsp;
                </span>
                <button class="btn btn-sm btn-danger" ng-if="ctrl.data.showButtonXoaChon" ng-click="ctrl.action.deleteSelected()"><i class="fa fa-trash-o"></i> Xóa chọn</button>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
            </div>
            <div class="table-container panel-body">
                <table class="table table-bordered table-condensed  table-hover " st-table="ctrl.data.listDieuPhoi" st-pipe="ctrl.action.getPage">
                    <thead class="bg-default text-primary">
                        <tr>
                            <th class="text-center" style="width:35px;" ng-click="ctrl.action.checkAll()">
                                <i class="fa fa-fw" ng-class="ctrl.status.isSelectedAll ? 'fa-check-square-o':'fa-square-o'"></i>
                            </th>
                            <th class="text-center"
                                style="width:{{cot.DoRong}}px;"
                                st-sort="{{cot.MaCot}}"
                                ng-repeat="cot in ctrl.data.listCot|filter:ctrl.action.checkCot">
                                <span ng-bind="cot.TenCot"></span>
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr ng-if="ctrl.data.error.code>0">
                            <td colspan="100" class="text-center danger" ng-bind="ctrl.data.error.message"></td>
                        </tr>
                        <tr ng-repeat="DieuPhoi in ctrl.data.listDieuPhoi" ng-click="ctrl.action.getPageDetail(DieuPhoi.DieuPhoiId)" id="row_{{DieuPhoi.DieuPhoiId}}">
                            <td class="text-center text-primary" st-select-row="DieuPhoi" st-select-mode="multiple" ng-click="ctrl.action.autoCheckAll()">
                                <i class="fa fa-fw" ng-class="DieuPhoi.isSelected ? 'fa-check-square-o':'fa-square-o'"></i>
                            </td>
                            <td ng-repeat="cot in ctrl.data.listCot|filter:ctrl.action.checkCot" ng-switch="cot.MaCot">
                                <a ng-switch-when="SoDonHang" href="#!/dieuphoi/edit/{{DieuPhoi.DieuPhoiId}}" ng-bind="DieuPhoi[cot.MaCot]"></a>
                                <span ng-switch-when="NgayDieuPhoi,NgayTao" ng-switch-when-separator="," ng-bind="DieuPhoi[cot.MaCot]| date : 'dd/MM/yyyy'" style="display:block;text-align:center"></span>
                                <span ng-switch-default ng-bind="DieuPhoi[cot.MaCot]"></span>
                            </td>
                        </tr>
                    </tbody>
                    <tfoot>
                        <tr>
                            <td colspan="100" class="text-center hidden-print">
                                <div st-pagination="" st-items-by-page="10" st-template="~/Scripts/angular/shared/smart-table/template/pagination.custom.html"></div>
                            </td>
                        </tr>
                    </tfoot>
                </table>
            </div>

            <div class="panel-heading">
                <span>Thông tin chi tiết</span>
            </div>
            <div class="table-responsive  panel-body">
                <table st-table="ctrl.data.DieuPhoiChiTietListDisplay" style="border: 1px solid #ddd;" class="table table-bordered table-condensed table-responsive table-hover ">
                    <thead class="bg-default text-primary">
                        <tr>
                            <th class="text-center" style="min-width: 40px;vertical-align:middle">STT</th>
                            <th class="text-center" style="min-width: 90px;vertical-align:middle">Mã hàng</th>
                            <th class="text-center" style="min-width: 250px;vertical-align:middle">Tên hàng</th>
                            <th class="text-center" style="min-width: 80px;vertical-align:middle">Số lượng</th>
                            <th class="text-center" style="min-width: 100px;vertical-align:middle">Đơn giá</th>
                            <th class="text-center" style="min-width: 110px;vertical-align:middle">Thành tiền</th>
                            <th class="text-center" style="min-width: 150px;vertical-align:middle">NVKD</th>
                            <th class="text-center" style="min-width: 150px;vertical-align:middle">Khách hàng</th>
                            <th class="text-center" style="min-width: 90px;vertical-align:middle">Đã chuyển</th>
                            <th class="text-center" style="min-width: 110px;vertical-align:middle">Người chuyển</th>
                            <th class="text-center" style="min-width: 150px;vertical-align:middle">Địa chỉ gửi</th>
                            <th class="text-center" style="min-width: 150px;vertical-align:middle">Địa chỉ nhận</th>
                            <th class="text-center" style="min-width: 150px;vertical-align:middle">Người nhận</th>
                            <th class="text-center" style="min-width: 100px;vertical-align:middle">Ngày nhận</th>
                            <th class="text-center" style="min-width: 100px;vertical-align:middle">Trạng thái</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr ng-if="ctrl.status.isLoading">
                            <td colspan="100" class="text-center">
                                <i class="fa fa-fw fa-spin fa-spinner"></i>
                            </td>
                        </tr>
                        <tr ng-repeat="DieuPhoiChitiet in ctrl.data.DieuPhoiChiTietListDisplay" ng-class="(DieuPhoiChitiet.isSelected==true)?'info':''">
                            <td class="text-center">{{$index + 1}}</td>
                            <td><span ng-bind="DieuPhoiChitiet.MaHangHoa"></span></td>
                            <td><span ng-bind="DieuPhoiChitiet.TenHangHoa"></span></td>
                            <td class="text-right"><span ng-bind="DieuPhoiChitiet.SoLuong|number"></span></td>
                            <td class="text-right"><span ng-bind="DieuPhoiChitiet.DonGia|number"></span></td>
                            <td class="text-right"><span ng-bind="DieuPhoiChitiet.ThanhTien|number"></span></td>
                            <td><span ng-bind="DieuPhoiChitiet.TenNhanVienKD"></span></td>
                            <td><span ng-bind="DieuPhoiChitiet.TenKhachHang"></span></td>
                            <td class="text-center"><span ng-bind="DieuPhoiChitiet.TenDaChuyen"></span></td>
                            <td><span ng-bind="DieuPhoiChitiet.NguoiChuyen"></span></td>
                            <td><span ng-bind="DieuPhoiChitiet.DiaChiGui"></span></td>
                            <td><span ng-bind="DieuPhoiChitiet.DiaChiNhan"></span></td>
                            <td><span ng-bind="DieuPhoiChitiet.NguoiNhan"></span></td>
                            <td class="text-center"><span>{{DieuPhoiChitiet.NgayNhan | date : 'dd/MM/yyyy'}}</span></td>
                            <td  class="text-center"><span ng-bind="DieuPhoiChitiet.TenTrangThai"></span></td>
                        </tr>
                    </tbody>
                    <tfoot>
                        <tr>
                            <td colspan="100">
                                <p class="text-danger">Tổng số : {{ctrl.data.TongSo}}</p>
                            </td>
                        </tr>
                    </tfoot>
                </table>
            </div>
        </div>

      

    </div>
    <div ui-view></div>
}
else if (ViewBag.ImportStyles != null && (bool)ViewBag.ImportStyles == true) { }
else if (ViewBag.SetupStyles != null && (bool)ViewBag.SetupStyles == true)
{
}
else if (ViewBag.ImportScripts != null && (bool)ViewBag.ImportScripts == true) { }
else if (ViewBag.SetupScripts != null && (bool)ViewBag.SetupScripts == true) { }
else if (ViewBag.ImportAngular != null && (bool)ViewBag.ImportAngular == true) { }
