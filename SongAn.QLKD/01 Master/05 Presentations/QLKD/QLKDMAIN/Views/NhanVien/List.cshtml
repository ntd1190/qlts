
@{
    ViewBag.Title = "List";
    ViewBag.userInfo = ViewBag.userInfo ?? "{}";
}
@if (ViewBag.Html != null && (bool)ViewBag.Html == true)
{
    <div class="container-fluid" ng-init="ctrl.onInitView({userInfo: @ViewBag.userInfo})" keyboard="ctrl.keys">
        <div class="panel panel-default">
            <div class="panel-heading">
                <div class="panel-title clearfix">
                    <span><i class="fa fa-fw fa-star-o"></i>Nhân viên</span>
                    <div class="pull-right">
                        <form class="form-inline ng-pristine ng-valid">
                            <div class="form-group form-group-sm">
                                <div class="input-group input-group-sm">
                                    <input class="form-control ng-pristine ng-valid ng-empty ng-touched" id="txtsearch" ng-model="ctrl.data.searchString" ng-keypress="$event.keyCode===13?ctrl.action.getPage():0" autofocus="">
                                    <span class="input-group-btn">
                                        <button class="btn btn-sm btn-primary" ng-click="ctrl.action.getPage()"><i class="fa fa-fw fa-search"></i>Tìm kiếm (F3)</button>

                                    </span>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
            <div class="panel-body">
                <h3 class="text-center no-margin">Danh sách nhân viên kinh doanh</h3>
            </div>
            <div class="table-container panel-body">
                <table class="table table-bordered table-condensed  table-hover " st-table="ctrl.data.listNhanVien" st-pipe="ctrl.action.getPage">
                    <thead class="bg-default text-primary">
                        <tr>
                            <th class="text-center" style="width:35px;" ng-click="ctrl.action.checkAll()">
                                <i class="fa fa-fw" ng-class="ctrl.status.isSelectedAll ? 'fa-check-square-o':'fa-square-o'"></i>
                            </th>
                            <th class="text-center"
                                style="width:{{cot.DoRong}}px;"
                                st-sort="{{cot.MaCot}}"
                                ng-repeat="cot in ctrl.data.listCot|filter:ctrl.action.checkCot">
                                <span ng-bind="cot.TenCot"></span>
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr ng-if="ctrl.data.error.code>0">
                            <td colspan="100" class="text-center danger" ng-bind="ctrl.data.error.message"></td>
                        </tr>
                        <tr ng-repeat="NhanVien in ctrl.data.listNhanVien" ng-click="ctrl.action.GetChiTiet(NhanVien.NhanVienId)"  id="row_{{NhanVien.NhanVienId}}" ng-class="(NhanVien.isSelected==true)?'info':''">
                            <td class="text-center text-primary" st-select-row="NhanVien" st-select-mode="multiple" ng-click="ctrl.action.autoCheckAll()">
                                <i class="fa fa-fw" ng-class="NhanVien.isSelected ? 'fa-check-square-o':'fa-square-o'"></i>
                            </td>
                            <td ng-repeat="cot in ctrl.data.listCot|filter:ctrl.action.checkCot" ng-switch="cot.MaCot">
                                <a ng-switch-when="Ma,HoTen" ng-switch-when-separator="," href="javascript:void(0)" ng-click="ctrl.action.xemNhanVien(NhanVien.NhanVienId)" ng-bind="NhanVien[cot.MaCot]"></a>
                                <a ng-switch-when="Detail" ng-switch-when-separator="," href="#!/nhanvien/edit/{{NhanVien.NhanVienId}}" style="display:block;text-align:center">Xem</a>
                                <span ng-switch-default ng-bind="NhanVien[cot.MaCot]"></span>
                            </td>
                        </tr>
                    </tbody>
                    <tfoot>
                        <tr>
                            <td colspan="100" class="text-center hidden-print">
                                <div st-pagination="" st-items-by-page="10" st-template="~/Scripts/angular/shared/smart-table/template/pagination.custom.html"></div>
                            </td>
                        </tr>
                    </tfoot>
                </table>
            </div>
            <div class="panel-heading">
                <span>Thông tin chi tiết</span>
            </div>
            <div class="table-containe panel-body">
                <table st-table="ctrl.data.NhanVienChiTietList" class="table table-bordered table-condensed  table-responsive table-hover ">
                    <thead class="bg-default text-primary">
                        <tr>
                            <th class="text-center" style="width: 200px;vertical-align:middle" st-sort="TenNhomKinhDoanh">Nhóm kinh doanh</th>
                            <th class="text-center" style="width: 300px;vertical-align:middle" st-sort="CachLamViec">Cách làm việc</th>
                            <th class="text-center" style="width: 300px;vertical-align:middle" st-sort="TinhCach">Tính cách</th>
                            <th class="text-center" style="width: 300px;vertical-align:middle" st-sort="SoThich">Sở thích</th>
                            <th class="text-center" style="width: 300px;vertical-align:middle" st-sort="GhiChu">Ghi chú</th>

                        </tr>
                    </thead>
                    <tbody>
                        <tr ng-repeat="ChiTiet in ctrl.data.NhanVienChiTietList">
                            <td><span ng-bind="ChiTiet.TenNhomKinhDoanh"></span></td>
                            <td><span ng-bind="ChiTiet.CachLamViec"></span></td>
                            <td><span ng-bind="ChiTiet.TinhCach"></span></td>
                            <td><span ng-bind="ChiTiet.SoThich"></span></td>
                            <td><span ng-bind="ChiTiet.GhiChu"></span></td>
                     </tr>
                   </tbody>
                </table>
            </div>
        </div>
        <div class="panel panel-primary ui-draggable collapse fade" id="NhanVienEditPopup">
            <div class="panel-heading ui-draggable-handle">
                <div class="panel-title">
                    <span>Chi tiết nhân viên</span>
                    <a class="btn btn-xs btn-primary pull-right" data-toggle="collapse" data-target="#NhanVienEditPopup"><i class="fa fa-remove"></i></a>
                </div>
            </div>
            <div style="width: 600px; padding-top: 15px;padding-right: 50px;">
                <form class="form-horizontal">
                    <div class="row form-group form-group-sm" ng-class="{'has-error':ctrl.status.isInValidNhomKinhDoanh}">
                        <label class="control-label col-sm-3">Nhóm kinh doanh</label>
                        <div class="col-sm-9">
                            <cbo-nhom-kinh-doanh id="cbxNhomKinhDoanh" data-function-code="KD0008" data-value="ctrl.data.objNhanVien.NhomKinhDoanhId" data-config="{userInfo:@(ViewBag.userInfo)}" template-url="~/nhomkinhdoanh/showcombobox?viewname=cbonhomkinhdoanh"></cbo-nhom-kinh-doanh>
                        </div>
                    </div>
                    <div class="row form-group form-group-sm" >
                        <label class="control-label col-sm-3">Cách làm việc</label>
                        <div class="col-sm-9">
                            <input type="text" class="form-control" id="txtCachLamViec" ng-model="ctrl.data.objNhanVien.CachLamViec" ng-keypress="ctrl.action.keyPress(ctrl.data.objNhanVien.CachLamViec,'txtCachLamViec','txtTinhCach',$event)" />
                        </div>
                    </div>
                    <div class="row form-group form-group-sm">
                        <label class="control-label col-sm-3">Tính cách</label>
                        <div class="col-sm-9">
                            <input type="text" class="form-control" id="txtTinhCach" ng-model="ctrl.data.objNhanVien.TinhCach"  ng-keypress="ctrl.action.keyPress(ctrl.data.objNhanVien.TinhCach,'txtTinhCach','txtSoThich',$event)"/>
                        </div>
                    </div>
                    <div class="row form-group form-group-sm">
                        <label class="control-label col-sm-3">Sở thích</label>
                        <div class="col-sm-9">
                            <input type="text" class="form-control" id="txtSoThich" ng-model="ctrl.data.objNhanVien.SoThich"  ng-keypress="ctrl.action.keyPress(ctrl.data.objNhanVien.SoThich,'txtSoThich','txtThoiQuen',$event)"/>
                        </div>
                    </div>
                    <div class="row form-group form-group-sm">
                        <label class="control-label col-sm-3">Thói quen</label>
                        <div class="col-sm-9">
                            <input type="text" class="form-control" id="txtThoiQuen" ng-model="ctrl.data.objNhanVien.ThoiQuen"  ng-keypress="ctrl.action.keyPress(ctrl.data.objNhanVien.ThoiQuen,'txtThoiQuen','txtGhiChu',$event)"/>
                        </div>
                    </div>
                    <div class="row form-group form-group-sm">
                        <label class="control-label col-sm-3">Ghi chú</label>
                        <div class="col-sm-9">
                            <textarea rows="2" type="text" class="form-control" id="txtGhiChu" ng-model="ctrl.data.objNhanVien.GhiChu" ng-keypress="ctrl.action.keyPress(ctrl.data.objNhanVien.GhiChu,'txtGhiChu','btnluu',$event)"/>
                        </div>
                    </div>
                </form>
            </div>
            <div class="panel-footer">
                <span ng-if="ctrl.action.checkQuyenTacVu('N')||ctrl.action.checkQuyenTacVu('M')">
                    <button type="button" class="btn btn-sm btn-primary" id="btnluu" ng-click="ctrl.action.save()"><i class="fa fa-save"></i> Lưu (F8)</button>&nbsp;&nbsp;&nbsp;
                </span>
                <button type="button" class="btn btn-sm btn-default" ng-click="ctrl.action.refresh()">Thiết lập lại</button>&nbsp;&nbsp;&nbsp;
                <a class="btn btn-sm btn-default" data-toggle="collapse" data-target="#NhanVienEditPopup">Đóng</a>&nbsp;&nbsp;&nbsp;
            </div>

        </div>
    </div>
    <div ui-view></div>
}
else if (ViewBag.ImportStyles != null && (bool)ViewBag.ImportStyles == true) { }
else if (ViewBag.SetupStyles != null && (bool)ViewBag.SetupStyles == true) { }
else if (ViewBag.ImportScripts != null && (bool)ViewBag.ImportScripts == true) { }
else if (ViewBag.SetupScripts != null && (bool)ViewBag.SetupScripts == true) { }
else if (ViewBag.ImportAngular != null && (bool)ViewBag.ImportAngular == true) { }
