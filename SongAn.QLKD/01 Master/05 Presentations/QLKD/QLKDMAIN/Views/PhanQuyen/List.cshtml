
@{
    ViewBag.Title = "Phân quyền vai trò";
}
@if (ViewBag.Html != null && (bool)ViewBag.Html == true)
{
<div class="container-fluid">
    <div class="panel panel-default" ng-init="Ctrl.onInitView({userInfo: @ViewBag.userInfo})">
        <div class="panel-heading clearfix">
            <div class="panel-title">
                <i class="fa fa-fw fa-star-o"></i>
                <span>Phân quyền vai trò</span>
            </div>
        </div>
        <div class="panel-body">
            <div class="panel-heading">
                <div class="row form-group form-group-sm">
                    <label for="txtKhachHang" class="control-label col-sm-1">Vai trò</label>
                    <div class="col-sm-5">
                        <cbo-vai-tro id="cbxVaiTro" data-function-code="CN0018" data-value="ctrl.data.VaiTroId" data-config="{userInfo:@(ViewBag.userInfo)}" template-url="~/vaitro/showcombobox?viewname=cbovaitro"
                                     on-selected="ctrl.action.getListChucNangByVaiTroId(data)"></cbo-vai-tro>
                    </div>
                </div>
            </div>
        </div>

        <div id="listabcd" class="table-container panel-body">
            <table class="table table-bordered table-condensed table-hover table-responsive table-striped">
                <caption class="text-center text-color" style="color:black;margin-top:-50px"> <h3>Danh sách chức năng</h3> </caption>
                <thead class="text-primary">
                    <tr>
                        <th class="text-center" style="width: 50px;">#</th>
                        <th class="text-center" style="width: 100px;">Mã CN</th>
                        <th class="text-center" style="width: 250px;">Chức năng</th>
                        <th class="text-center">Danh sách quyền</th>

                    </tr>
                </thead>
                <tbody id="tbdata"></tbody>
            </table>
        </div>
    </div>
</div>
<div ui-view></div>
}
