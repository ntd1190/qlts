
@{
    ViewBag.Title = "Hợp đồng";
    ViewBag.userInfo = ViewBag.userInfo ?? "{}";
}
@if (ViewBag.Html != null && (bool)ViewBag.Html == true)
{
    <div class="container-fluid" ng-init="ctrl.onInitView({userInfo:@(ViewBag.userInfo),linkUrl:'@(Url.Content("~/"))'})" keyboard="ctrl.keys">
        <div class="panel panel-default">
            <div class="panel-heading clearfix">
                <span class="panel-title"><i class="fa fa-fw fa-star-o"></i>@(ViewBag.Title)</span>
                <div class="btn-group btn-group-sm pull-right">
                    <button class="btn btn-primary" data-toggle="collapse" data-target="#panelTimkiemCollapse" aria-expanded="true"><i class="fa fa-fw fa-search"></i>Tìn kiếm (F3)</button>
                    <button class="btn btn-warning" data-toggle="collapse" data-target="#TuyChonCotPopup"><i class="fa fa-fw fa-cog"></i>Tùy chọn</button>
                </div>
            </div>
            <div class="collapse fade" id="panelTimkiemCollapse">
                <div class="panel-body">
                    <form class="form-horizontal">
                        <div class="row">
                            <div class="col-sm-6">
                                <div class="form-group form-group-sm">
                                    <label class="control-label col-sm-4">Tìm kiếm</label>
                                    <div class="col-sm-8">
                                        <input class="form-control" type="text" ng-model="ctrl.inputSearch.search"
                                               ng-keydown="ctrl.action.keyPress($event)" data-name="inputSearch_search" data-next="inputSearch_LoaiHopDongId" autofocus />
                                    </div>
                                </div>
                            </div>
                            <div class="col-sm-6">
                                <div class="form-group form-group-sm">
                                    <label class="control-label col-sm-4">Loại hợp đồng</label>
                                    <div class="col-sm-8">
                                        <cbo-loai-hop-dong ng-keydown="ctrl.action.keyPress($event)" data-name="inputSearch_LoaiHopDongId" data-next="inputSearch_startDateHopDong"
                                                           loaihopdongid="ctrl.inputSearch.LoaiHopDongId"
                                                           functioncode="{{ctrl.functionCode}}"
                                                           config="{userInfo:@(ViewBag.userInfo)}"
                                                           disabled="false"
                                                           template-url="~/loaihopdong/showcombobox?viewname=cboLoaiHopDong"></cbo-loai-hop-dong>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="row form-group form-group-sm">
                            <label class="control-label col-sm-2">Ngày hợp đồng</label>
                            <div class="col-sm-10 form-inline">
                                <input class="form-control datetimepicker date" type="text" ng-model="ctrl.inputSearch.startDateHopDong" placeholder="DD/MM/YYYY"
                                       ng-keydown="ctrl.action.keyPress($event)" data-name="inputSearch_startDateHopDong" data-next="inputSearch_endDateHopDong" />
                                <span>&nbsp;~&nbsp;</span>
                                <input class="form-control datetimepicker date" type="text" ng-model="ctrl.inputSearch.endDateHopDong" placeholder="DD/MM/YYYY"
                                       ng-keydown="ctrl.action.keyPress($event)" data-name="inputSearch_endDateHopDong" data-next="inputSearch_startDateHoaDon" />
                            </div>
                        </div>
                        <div class="row form-group form-group-sm">
                            <label class="control-label col-sm-2">Ngày hóa đơn</label>
                            <div class="col-sm-10 form-inline">
                                <input class="form-control datetimepicker date" type="text" ng-model="ctrl.inputSearch.startDateHoaDon" placeholder="DD/MM/YYYY"
                                       ng-keydown="ctrl.action.keyPress($event)" data-name="inputSearch_startDateHoaDon" data-next="inputSearch_endDateHoaDon" />
                                <span>&nbsp;~&nbsp;</span>
                                <input class="form-control datetimepicker date" type="text" ng-model="ctrl.inputSearch.endDateHoaDon" placeholder="DD/MM/YYYY"
                                       ng-keydown="ctrl.action.keyPress($event)" data-name="inputSearch_endDateHoaDon" data-next="inputSearch_TrangThai" />
                            </div>
                        </div>
                        <div class="row form-group form-group-sm">
                            <label class="control-label col-sm-2">Chi hoa hồng</label>
                            <div class="col-sm-10">
                                <label class="radio-inline">
                                    <input type="radio" ng-model="ctrl.inputSearch.TrangThai" value=""
                                           ng-keydown="ctrl.action.keyPress($event)" data-name="inputSearch_TrangThai" data-next="inputSearch_TrangThai" />
                                    tất cả
                                </label>
                                <label class="radio-inline">
                                    <input type="radio" ng-model="ctrl.inputSearch.TrangThai" value="Y"
                                           ng-keydown="ctrl.action.keyPress($event)" data-name="HopDong_Chi" data-next="HopDong_DuLieuId" />
                                    đã chi
                                </label>
                                <label class="radio-inline">
                                    <input type="radio" ng-model="ctrl.inputSearch.TrangThai" value="N"
                                           ng-keydown="ctrl.action.keyPress($event)" />
                                    chưa chi
                                </label>
                            </div>
                        </div>
                    </form>
                </div>
                <div class="panel-footer">
                    <button class="btn btn-sm btn-primary" ng-click="ctrl.action.search()"><i class="fa fa-fw fa-search"></i>Tìm kiếm (F8)</button>&nbsp;&nbsp;&nbsp;
                    <button class="btn btn-sm btn-default" ng-click="ctrl.action.resetFilter()">Thiết lặp lại</button>
                </div>
            </div>
        </div>
        <div class="panel panel-default">
            <div class="panel-body">
                <h3 class="text-center no-margin">Danh sách hợp đồng</h3>
            </div>
            <div class="panel-body">
                <div class="table-responsive" st-table="ctrl.data.listHopDong" st-pipe="ctrl.action.getPage">
                    <table class="table table-bordered table-condensed table-hover table-striped" style="min-width:800px;">
                        <thead class="text-primary">
                            <tr>
                                <th class="text-center" style="width:35px;" ng-click="ctrl.action.checkAll()">
                                    <i class="fa fa-fw" ng-class="ctrl.status.isSelectedAll ? 'fa-check-square-o':'fa-square-o'"></i>
                                </th>
                                <th class="text-center" st-sort="{{cot.MaCot}}" style="width:{{cot.DoRong}}px;" ng-repeat="cot in ctrl.data.listCot|filter:ctrl.action.checkCot">
                                    <span ng-bind="cot.TenCot"></span>
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr ng-if="ctrl.status.isLoading">
                                <td colspan="100" class="text-center">
                                    <i class="fa fa-fw fa-spinner fa-spin"></i>
                                </td>
                            </tr>
                            <tr ng-repeat="row in ctrl.data.listHopDong">
                                <td class="text-center text-primary" st-select-row="row" st-select-mode="multiple" ng-click="ctrl.action.autoCheckAll()">
                                    <i class="fa fa-fw" ng-class="row.isSelected ? 'fa-check-square-o':'fa-square-o'"></i>
                                </td>
                                <td ng-repeat="cot in ctrl.data.listCot|filter:ctrl.action.checkCot" ng-switch="cot.MaCot">
                                    <a href="~/#!/hopdong/edit/{{row.ID}}"
                                       ng-switch-when="MaHopDong,TenHopDong" ng-switch-when-separator="," ng-bind="row[cot.MaCot]"></a>
                                    <div class="text-center" ng-switch-when="NgayTao,NgayHopDong,NgayHoaDon,NgayThanhLy" ng-switch-when-separator="," ng-bind="row[cot.MaCot]|date:'dd/MM/yyyy'"></div>
                                    <div class="text-right" ng-switch-when="SoTien,ThanhToan" ng-switch-when-separator="," ng-bind="row[cot.MaCot]|number"></div>
                                    <div class="text-center" ng-switch-when="Chi" ng-switch-when-separator="," ng-bind="row[cot.MaCot]=='Y'?'Đã chi':row[cot.MaCot]=='N'?'Chưa chi':''"></div>
                                    <span ng-switch-default ng-bind="row[cot.MaCot]"></span>
                                </td>
                            </tr>
                        </tbody>
                        <tfoot>
                            <tr>
                                <td colspan="100" class="text-center">
                                    <div st-pagination="" st-items-by-page="10" st-template="~/Scripts/angular/shared/smart-table/template/pagination.custom.html"></div>
                                </td>
                            </tr>
                        </tfoot>
                    </table>
                </div>
            </div>

            <div class="panel-footer">
                <span ng-if="ctrl.action.checkQuyenTacVu('N')">
                    <a class="btn btn-sm btn-primary" href="~/#!/hopdong/edit/0"><i class="fa fa-fw fa-plus"></i>Mới (F2)</a>&nbsp;&nbsp;&nbsp;
                </span>
                <span ng-if="ctrl.action.checkQuyenTacVu('D')">
                    <a class="btn btn-sm btn-danger" href="javascript:void(0)" ng-click="ctrl.action.deleteList()"><i class="fa fa-fw fa-trash-o"></i>Xóa chọn</a>&nbsp;&nbsp;&nbsp;
                </span>
            </div>
        </div>
    </div><!-- /.container-fluid -->

    <div class="panel panel-primary ui-draggable collapse fade" id="HopDongEditPopup">
        <div class="panel-heading ui-draggable-handle clearfix">
            <span class="panel-title">Địa bàn</span>
            <a class="btn btn-xs btn-primary pull-right" data-toggle="collapse" data-target="#HopDongEditPopup"><i class="fa fa-fw fa-remove"></i></a>
        </div>
        <div class="panel-body" style="width: 600px;">
            <form class="form-horizontal">
                <div class="row form-group form-group-sm" ng-class="ctrl.error.HopDong_SoHopDong?'has-error':''">
                    <label class="control-label col-sm-3">Mã địa bàn</label>
                    <div class="col-sm-9">
                        <input class="form-control" type="text" ng-model="ctrl.data.HopDong.SoHopDong" autofocus
                               ng-keydown="ctrl.action.keyPress($event)" data-name="HopDong_SoHopDong" data-next="HopDong_TenHopDong" />
                    </div>
                </div>
                <div class="row form-group form-group-sm" ng-class="ctrl.error.HopDong_TenHopDong?'has-error':''">
                    <label class="control-label col-sm-3">Tên địa bàn</label>
                    <div class="col-sm-9">
                        <input class="form-control" type="text" ng-model="ctrl.data.HopDong.TenHopDong"
                               ng-keydown="ctrl.action.keyPress($event)" data-name="HopDong_TenHopDong" data-next="HopDong_DiaChi" />
                    </div>
                </div>
                <div class="row form-group form-group-sm" ng-class="ctrl.error.HopDong_DiaChi?'has-error':''">
                    <label class="control-label col-sm-3">Địa chỉ</label>
                    <div class="col-sm-9">
                        <input class="form-control" type="text" ng-model="ctrl.data.HopDong.DiaChi"
                               ng-keydown="ctrl.action.keyPress($event)" data-name="HopDong_DiaChi" data-next="btnSave" />
                    </div>
                </div>
            </form>
        </div>
        <div class="panel-footer">
            <span ng-if="ctrl.action.checkQuyenTacVuEdit('N')||ctrl.action.checkQuyenTacVuEdit('M')">
                <a class="btn btn-sm btn-primary" ng-click="ctrl.action.save()"><i class="fa fa-fw fa-save"></i>Lưu (F8)</a>&nbsp;&nbsp;&nbsp;
            </span>
            @*<span ng-if="ctrl.action.checkQuyenTacVuEdit('D')">
                    <a class="btn btn-sm btn-danger" href="javascript:void(0)" ng-click="ctrl.action.delete()"><i class="fa fa-fw fa-trash-o"></i>Xóa</a>&nbsp;&nbsp;&nbsp;
                </span>*@
            <a class="btn btn-sm btn-default" ng-click="ctrl.action.refresh()">Thiết lập lại</a>&nbsp;&nbsp;&nbsp;
            <a class="btn btn-sm btn-default" data-toggle="collapse" data-target="#HopDongEditPopup">Đóng</a>&nbsp;&nbsp;&nbsp;
        </div>

    </div>

    <tuy-chon-cot-list maform="FL0022"
                       config="{ctrlId:'TuyChonCotPopup'}"
                       on-confirm="ctrl.action.getListCot(data)"
                       template-url="~/tuychoncot/showcombobox?viewname=TuyChonCotList"></tuy-chon-cot-list>

                    <div ui-view></div>
}
else if (ViewBag.ImportStyles != null && (bool)ViewBag.ImportStyles == true) { }
else if (ViewBag.SetupStyles != null && (bool)ViewBag.SetupStyles == true) { }
else if (ViewBag.ImportScripts != null && (bool)ViewBag.ImportScripts == true) { }
else if (ViewBag.SetupScripts != null && (bool)ViewBag.SetupScripts == true) { }
else if (ViewBag.ImportAngular != null && (bool)ViewBag.ImportAngular == true) { }
