@using Nop.Web.Models.Catalog
@model TopMenuModel

<header>

    <div class="wrap-main">

        <a class="logo" title="Về trang chủ" href="/">
            <img src="~/Content/logo.png" />

            @*<img src="~/Content/logo.png" />*@
        </a>
        @using (Html.BeginRouteForm("ProductSearch", FormMethod.Get, new { id = "search-site", @*@class = "hidden-xs"*@ }))
        {



            <input class="topinput" id="search-keyword" name="q" type="search" placeholder="Bạn tìm gì..." autocomplete="off" onkeyup="SuggestSearch(event,this, 0);" maxlength="50">
            <button class="btntop" type="submit"><i class="fa fa-search"></i></button>


        }

        <nav class="hidden-sm hidden-xs">

            @foreach (var item in Model.Categories)
            {
                <object class="tablet">
                    <a href="/@item.SeName">
                        <i style="font-size:25px;" class="@item.Description"></i><br />@item.Name
                    </a>

                    <ul>
                        @foreach (var item1 in item.SubCategories)
                        {
                            <li style="cursor:pointer" onclick="location.href ='/@item1.SeName';">@item1.Name</li>
                        }
                    </ul>
                </object>


            }
            <a href="/cart" class="tablet" title="Giỏ hàng">
                <i style="font-size:25px;" class="fa fa-shopping-cart"></i><br />Giỏ Hàng
            </a>
