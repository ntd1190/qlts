<style>
    nav > object {
        display: table-cell;
        width: 75px;
        color: #fff;
        font-size: 11px;
        text-align: center;
        text-transform: uppercase;
        position: relative;
    }

    object:hover > ul {
        display: block;
    }

    object > ul {
        position: absolute;
        background-color: #37c0f4;
        padding: 8px;
        display: none;
        text-align: left;
        width: 150px;
    }

        object > ul li {
            padding: 11px;
            color: white;
        }

            object > ul li:hover {
                background-color: white;
                color: #e21c24;
                display: block;
            }
