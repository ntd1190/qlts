@model ProductOverviewModel
@using Nop.Core
@using Nop.Core.Domain.Catalog
@using Nop.Core.Domain.Orders
@using Nop.Core.Domain.Tax
@using Nop.Core.Infrastructure
@using Nop.Web.Models.Catalog;


<div>
    <div class="product" style="height:430px">
        @*36%*@
        @*<div class="triangle_dis">
                <span>-10%</span>
            </div>*@
        @*@if (Model.MarkAsNew)
            {
                <span class="indicator-product-status top-left-upcoming"></span>
            }*@
        @if (Model.ProductPrice.PriceDiscount != null)
        {
            @*<span class="indicator-product-status top-left-hot"></span>*@
            <div class="triangle_dis">
                <span>@Model.ProductPrice.PriceDiscount</span>
            </div>
        }

        <!-- begin tro chuot -->
        <div class="product-overlay animate" Modelscope Modeltype="http://schema.org/Product" title="@Model.Name">
            <a href="@Url.RouteUrl("Product", new { SeName = Model.SeName })" class="product-link" title="@Model.Name"></a>
            <h3 class="name" Modelprop="name">@Model.Name</h3>
            <div class="overlay-price"><span style="color: #232323; font-weight: normal;">Giá :</span> @Model.ProductPrice.Price</div>
            <div Modelprop="description" style="color:#96989b !important;">
                @Html.Raw(Model.ShortDescription)
            </div>
            <div class="product-config">
                <a href="@Url.RouteUrl("Product", new { SeName = Model.SeName })" title="Xem Hàng" class="btn-cart">
                    <i class="fa fa-shopping-cart" aria-hidden="true"></i> <span>Xem Hàng</span>
                </a>

            </div>
        </div>
        <!-- end tro chuot -->

        <div class="product-name-01">
            <div class="name-01">
                <a href="@Url.RouteUrl("Product", new { SeName = Model.SeName })" title="@Model.Name">
                    @Model.Name
                </a>
            </div>
        </div>
        <div>
            <div class="product-image" style="">
                <a href="@Url.RouteUrl("Product", new { SeName = Model.SeName })" title="@Model.Name">
                    <figure data-feedback="fb:likes, fb:comments">
                        <img class="lazy" Modelprop="image" data-original="@Model.DefaultPictureModel.ImageUrl" style="width:200px !important; max-height:180px !important">
                    </figure>
                </a>
            </div>
            <div class="product-short-description-v1">
                <div Modelprop="description" style="color:#535083 !important;">
                    @*@Html.Raw(item.ShortDescription)*@
                    <table class="tg">
                        <tr>
                            <td class="tg-baqh" style="border-right:1px solid #d2d2d2;border-bottom:1px solid #d2d2d2">
                                <div class="table-cell-inner">
                                    @Html.Raw(Model.Processor)
                                </div>
                            </td>
                            <td class="tg-baqh" style="border-right:1px solid #d2d2d2">
                                <div class="table-cell-inner">
                                    @Html.Raw(Model.RAM)
                                </div>
                            </td>
                            <td class="tg-baqh">
                                <div class="table-cell-inner">
                                    @Html.Raw(Model.Graphicss)
                                </div>
                            </td>
                        </tr>
                        <tr>
                            <td class="tg-baqh" colspan="3">
                                @Html.Raw(Model.Display)
                                <div>
                                    <img src="/Themes/DefaultClean/Content/images/diamond24.png" style="height:90%;">
                                </div>
                            </td>
                        </tr>
                    </table>
                </div>
            </div>
        </div>

        <div class="product-name-02" style="position:absolute;margin-top:10px">
            <div class="price arrow" Modelprop="offers" Modelscope Modeltype="http://schema.org/Offer">
                <meta Modelprop="priceCurrency" content="VND" />
                <div class="arrowLine">@Model.ProductPrice.Price</div>
                <div class="price-1 triangle_left"></div>
                @if (Model.GiftVoucher != null && !Model.GiftVoucher.Equals("0"))
                {
                    <div style="float: left; margin: 5px 6px; margin-bottom:-2px !important">
                        @if (Model.ProductPrice.PriceDiscount != null)
                        {
                            <div class="old-price-1">
                                @Model.ProductPrice.OldPrice
                            </div>
                        }
                        <img src="~/Themes/DefaultClean/Content/images/gift_red.png" style="float:left; margin-top:-8px;width:32px" />
                        <div class="voucher-quotes-ehis">
                            <span> Voucher @Model.GiftVoucher đ</span>
                            <img src="~/Themes/DefaultClean/Content/images/giftcard.png" style="float:left; margin-top:-4px;width:32px" />
                        </div>
                    </div>
                }
            </div>
            @*@if (Model.ProductPrice.PriceDiscount != null)
                {
                    <div class="old-price-1">
                        Giá cũ: @Model.ProductPrice.OldPrice
                    </div>
                }*@
        </div>
        @if (Model.PromotionDoc != null && !Model.PromotionDoc.Equals(""))
        {
            <div class="promotion">
                @*<p style="color:#333;position:relative;top:0">Khuyến mãi:</p>*@
                <div class="promotion-media">
                    @Html.Raw(Model.PromotionMedia)
                </div>
                <div class="promotion-doc">
                    @Html.Raw(Model.PromotionDoc)
                </div>
            </div>
        }
        @*<div class="product-sale ">
                <div class="clearfix">
                    @if (Model.ProductPrice.PriceDiscount != null)
                    {
                        <div class="product-sale-text">
                            <div class="price-1">Giá khuyến mãi : @Model.ProductPrice.Price</div>
                        </div>
                            <div class="clearfix"></div>
                    }
                </div>
            </div>*@

    </div>
</div>
