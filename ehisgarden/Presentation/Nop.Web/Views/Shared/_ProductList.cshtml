    <div class="product" style="height:250px">@*36%*@
        <div class="triangle_dis">
            <span>-10%</span>
        </div>
        @*@if (Model.MarkAsNew)
            {
                <span class="indicator-product-status top-left-upcoming"></span>
            }*@
        @if (Model.ProductPrice.PriceDiscount != null)
        {
            @*<span class="indicator-product-status top-left-hot"></span>*@
            <div class="triangle_dis">
                <span>-@Model.ProductPrice.PriceDiscount</span>
            </div>
        }
        @*<div class="product-overlay animate" Modelscope Modeltype="http://schema.org/Product" title="@Model.Name">
                <a href="@Url.RouteUrl("Product", new { SeName = Model.SeName })" class="product-link" title="@Model.Name"></a>
                <h3 class="name" Modelprop="name">@Model.Name - abc - @Model.SeName</h3>
                <div class="overlay-price"><span style="color: #232323; font-weight: normal;">Giá :</span> @Model.ProductPrice.Price</div>
                <div Modelprop="description" style="color:#96989b !important;">
                    @Html.Raw(Model.ShortDescription)
                </div>
                <div class="product-config">
                    <a href="@Url.RouteUrl("Product", new { SeName = Model.SeName })" title="Xem Hàng" class="btn-cart">
                        <i class="fa fa-shopping-cart" aria-hidden="true"></i> <span>Xem Hàng</span>
                    </a>

                </div>
            </div>*@
        <div class="product-name-01">
            <div class="name-01">
                <a href="@Url.RouteUrl("Product", new { SeName = Model.SeName })" title="@Model.Name">
                    @Model.Name
                </a>
            </div>
        </div>
        <div style="height:160px">
            <div class="product-image" style="float:left;width:35%">
                <a href="@Url.RouteUrl("Product", new { SeName = Model.SeName })" title="@Model.Name">
                    <figure data-feedback="fb:likes, fb:comments">
                        <img class="lazy" Modelprop="image" data-original="@Model.DefaultPictureModel.ImageUrl">
                    </figure>
                </a>
            </div>
            <div class="product-short-description">
                <div Modelprop="description" style="color:#535083 !important;">
                    @Html.Raw(Model.ShortDescription)
                </div>
            </div>
        </div>

        <div class="product-name-02" style="position:absolute">
            <div class="price arrow" Modelprop="offers" Modelscope Modeltype="http://schema.org/Offer">
                <meta Modelprop="priceCurrency" content="VND" />
                @if (Model.ProductPrice.PriceDiscount != null)
                {
                    <div class="arrowLine">@Model.ProductPrice.OldPrice</div>
                    <div class="price-2 triangle_left"></div>
                }
                else
                {
                    <div class="arrowLine">@Model.ProductPrice.Price</div>
                    <div class="price-1 triangle_left"></div>
                }
                <div style="float: left; margin: 5px 10px;">
                    <img src="~/Themes/DefaultClean/Content/images/gift_red.png" style="float:left; margin-top:-8px;width:32px" />
                    <div class="voucher-quotes-ehis">
                        <span> Voucher 100.000 đ</span>
                        <img src="~/Themes/DefaultClean/Content/images/giftcard.png" style="float:left; margin-top:-4px;width:32px" />
                    </div>
                </div>
            </div>
        </div>

        @*<div class="product-sale ">
                <div class="clearfix">
                    @if (Model.ProductPrice.PriceDiscount != null)
                    {
                        <div class="product-sale-text">
                            <div class="price-1">Giá khuyến mãi : @Model.ProductPrice.Price</div>
                        </div>
                            <div class="clearfix"></div>
                    }
                </div>
            </div>*@

    </div>
</div>
<style>
    .top-left-hot {
        text-indent: 0;
        background-color: #e81c24;
        padding: 10px;
        font-weight: bold;
    }

    .product-name-01 {
        font-weight: bold;
        color: black;
        width: 100%;
    }

    .name-01 {
        padding: 10px;
        margin-left: 20%;
    }

    .arrowLine {
        background-color: #00AEEF;
        border-bottom: 0 solid transparent;
        border-top: 0 solid transparent;
        height: 20px;
        width: 100px;
        float: left;
        color: white;
        font-weight: bold;
        letter-spacing: 2;
        font-family: "Times New Roman", Times, serif;
        padding: 0.25em 7px;
    }

    .triangle_left {
        height: 0px;
        width: 0px;
        border-left: 10px solid #00AEEF;
        border-top: 10px solid transparent;
        border-bottom: 10px solid transparent;
        float: left;
    }

    .triangle_right {
        height: 0px;
        width: 0px;
        float: left;
        border-right: 50px solid #00AEEF;
        border-top: 50px solid transparent;
        border-bottom: 50px solid transparent;
    }

    .triangle_dis {
        position: absolute;
        top: 0px;
        left: 0px;
        z-index: 200;
        /*----------------*/
        width: 0;
        height: 0;
        border-style: solid;
        border-width: 55px 55px 0 0;
        border-color: #ff0000 transparent transparent transparent;
    }

        .triangle_dis span {
            display: block;
            position: relative;
            top: -45px;
            color: white;
            font-weight: bold;
            padding: 0px 2px;
        }

    .product-short-description {
        float: left;
        width: 60%;
        margin-left: 10px;
        background: #F1F1F1;
        background: -webkit-linear-gradient(left, #E7E8E9, white);
        background: -o-linear-gradient(right, #E7E8E9, white);
        background: -moz-linear-gradient(right, #E7E8E9, white);
        background: linear-gradient(to right, #E7E8E9, white);
        line-height: 18px;
        border: 1px solid #e3e3e3;
        padding: 5px;
        overflow: hidden;
        max-height: 150px;
    }
    .voucher-quotes-ehis {
        /*width: 100%;*/
        background: -moz-linear-gradient(right, #E7E8E9, white);
        background: linear-gradient(to right, #E7E8E9, white);
        padding: 5px 5px 5px 1px;
        overflow: hidden;
        margin-left: 1px;
        margin-top: -7px;
        color: black !important;
        font-size: 11px;
    }
</style>