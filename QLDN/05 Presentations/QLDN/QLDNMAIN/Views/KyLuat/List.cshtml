
@{
    ViewBag.Title = "List";
}
<div class="container-fluid" ng-controller="MainCtrl as mainCtrl" ng-init="mainCtrl.onInitView()">
    <!-- panel tìm kiếm -->
    <div ng-controller="KyLuatListCtrl as ctrlList" keyboard="ctrlList.keys" ng-init="ctrlList.onInitView({userInfo: @ViewBag.userInfo})" >
        <div class="panel panel-default hidden-print">
            <div class="panel-heading">
                <div class="panel-title clearfix">
                    <span><i class="fa fa-fw fa-star-o"></i>Kỷ luật - Trừ tiền</span>
                    <div class="btn-group btn-group-sm pull-right">
                        <a class="btn btn-primary" data-toggle="collapse" data-target="#panelTimkiemCollapse"><i class="fa fa-fw fa-search"></i>Tìn kiếm (F3)</a>
                    </div>
                </div>
            </div>
            <div>
                <div class="collapse fade" id="panelTimkiemCollapse">
                    <div class="panel-body">
                        <form class="form">
                            <div class="row form-group form-group-sm">
                                <label for="txtNgay" class="control-label col-sm-2">Ngày</label>
                                <div class="col-sm-2">
                                    <input type="text" id="tungay" class="datetimepicker form-control  date" placeholder="__/__/____" />
                                </div>
                                <div style="width:5px!important;float:left">
                                    <label>~</label>
                                </div>
                                <div class="col-sm-2">
                                    <input type="text" id="denngay" class="datetimepicker form-control  date" placeholder="__/__/____" />
                                </div>
                            </div>
                            <div class="row form-group form-group-sm">
                                <label for="txtNhanVien" class="control-label col-sm-2">Nhân viên</label>
                                <div class="col-sm-10">
                                    <div class="form-control auto-height">
                                        <a class="pull-right" href="javascript:void(0);" ng-click="ctrlList.action.clearListNhanVien()"><i class="fa fa-fw fa-remove"></i></a>
                                        <a href="javascript:void(0);" data-toggle="collapse" data-target="#NhanVienListPopupSearch">
                                            <div>
                                                <i class="fa fa-fw fa-search"></i>
                                                <span class="" style="margin-right: 5px;" ng-bind="nhanvien.Ho+' '+nhanvien.Ten+','" ng-repeat="nhanvien in ctrlList.data.listNhanVienSearch"></span>
                                            </div>
                                           
                                        </a>
                                    </div>
                                </div>
                            </div>
                            <!-- search field -->
                            <div class="row form-group form-group-sm">
                                <label for="txtNhanVien" class="control-label col-sm-2">Hình thức</label>
                                <div class="form-inline col-sm-10">
                                    <div class="checkbox" style="margin-right: 15px;">
                                        <label>
                                            <input style="margin-right: 5px;" type="checkbox" ng-click="ctrlList.action.checkHinhThucTatCa()" ng-model="ctrlList.data.hinhThuc.tatCa" /><span>Tất cả</span>
                                        </label>
                                    </div>
                                    <div class="checkbox" style="margin-right: 5px;">
                                        <label>
                                            <input style="margin-right: 5px;" type="checkbox" ng-click="ctrlList.action.checkHinhThuc()" ng-model="ctrlList.data.hinhThuc.phatTien" /><span>Phạt tiền</span>
                                        </label>
                                    </div>
                                    <div class="checkbox" style="margin-right: 5px;">
                                        <label>
                                            <input style="margin-right: 5px;" type="checkbox" ng-click="ctrlList.action.checkHinhThuc()" ng-model="ctrlList.data.hinhThuc.canhCao" /><span>Cảnh cáo</span>
                                        </label>
                                    </div>
                                    <div class="checkbox" style="margin-right: 5px;">
                                        <label>
                                            <input style="margin-right: 5px;" type="checkbox" ng-click="ctrlList.action.checkHinhThuc()" ng-model="ctrlList.data.hinhThuc.vanBan" /><span>Văn bản</span>
                                        </label>
                                    </div>
                                </div>
                            </div>

                            <!-- search field -->
                        </form>
                        <!-- popup danh sách nhân viên -->
                        <div class="panel panel-primary ui-draggable collapse fade hidden-print" id="NhanVienListPopupSearch" ng-controller="NhanVienListCtrl as ctrl" ng-init="ctrl.onInitView({controllerId:mainCtrl.controllerId.NhanVienListPopupSearch,showList:true,userInfo: @ViewBag.UserInfo })">
                            <div class="panel-heading ui-draggable-handle">
                                <div class="panel-title clearfix">
                                    <span><i class="fa fa-fw fa-star-o"></i>Danh sách nhân viên</span>
                                    <a class="btn btn-xs btn-primary pull-right" data-toggle="collapse" data-target="#NhanVienListPopupSearch"><i class="fa fa-fw fa-remove"></i></a>
                                </div>
                            </div>
                            <div class="panel-body" style="width:auto;height:auto;">
                                <form class="form-inline">
                                    <div class="form-group form-group-sm">
                                        <span><i class="fa fa-fw fa-star-o"></i>Tìm kiếm nhân viên</span>
                                    </div>
                                    <div class="form-group form-group-sm">
                                        <div class="input-group input-group-sm">
                                            <input class="form-control" ng-model="ctrl.data.inputSearch.searchString" autofocus />
                                            <span class="input-group-btn">
                                                <button class="btn btn-sm btn-primary" ng-click="ctrl.action.search()"><i class="fa fa-fw fa-search"></i>Tìm kiếm</button>
                                            </span>
                                        </div>
                                    </div>
                                </form>
                            </div>
                            <div class="table-responsive" style="width:auto; height: auto;" ng-if="ctrl.data.showList">
                                <table class="table table-bordered table-condensed table-hover table-responsive table-striped" st-table="ctrl.data.listNhanVien" st-pipe="ctrl.action.getPage">
                                    <thead>
                                        <tr>
                                            <th class="text-center" style="width: 50px;"></th>
                                            <th class="text-center" ng-repeat="cot in ctrl.data.listCot|filter:cot.HienThiYN=true" ng-bind="::cot.TenCot"></th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <tr ng-if="ctrl.data.isLoading">
                                            <td colspan="100" class="text-center info">
                                                <i class="fa fa-fw fa-spinner fa-pulse"></i>
                                            </td>
                                        </tr>
                                        <tr ng-if="ctrl.data.error.code>0">
                                            <td colspan="100" class="text-center danger" ng-bind="ctrl.data.error.message"></td>
                                        </tr>
                                        <tr ng-repeat="nhanvien in ctrl.data.listNhanVien" ng-class="(nhanvien.isSelected==true)?'info':''">
                                            <td class="text-primary text-center" st-select-row="nhanvien" st-select-mode="multiple"><i class="fa fa-fw" ng-class="nhanvien.isSelected==true?'fa-check-square-o':'fa-square-o'"></i></td>
                                            <td ng-repeat="cot in ctrl.data.listCot|filter:cot.HienThiYN=true" ng-switch="cot.MaCot">
                                                <a href="javascript:void(0)" ng-click="ctrl.action.xemNhanVien(nhanvien.NhanVienId)" ng-switch-when="Ten" ng-bind="::nhanvien['Ho']+' '+nhanvien[cot.MaCot]"></a>
                                                <a href="javascript:void(0)" ng-click="ctrl.action.xemNhanVien(nhanvien.NhanVienId)" ng-switch-when="Ma" ng-bind="::nhanvien[cot.MaCot]"></a>
                                                <span ng-switch-when="NgayTuyenDung" ng-bind="ctrl.action.convertDateFormat(nhanvien[cot.MaCot],'YYYY-MM-DD','DD/MM/YYYY')"></span>
                                                <span ng-switch-default ng-bind="::nhanvien[cot.MaCot]"></span>
                                            </td>
                                        </tr>
                                    </tbody>
                                    <tfoot>
                                        <tr>
                                            <td colspan="100" class="text-center hidden-print">
                                                <div st-pagination="" st-items-by-page="10" st-template="~/Scripts/angular/shared/smart-table/template/pagination.custom.html"></div>
                                            </td>
                                        </tr>
                                    </tfoot>
                                </table>
                            </div>
                            <div class="panel-footer hidden-print">
                                <a class="btn btn-sm btn-primary" ng-click="ctrl.action.apDung()">Áp dụng</a>
                                <a class="btn btn-sm btn-default" ng-click="ctrl.action.getPage()">Thiết lập lại</a>
                                <a class="btn btn-sm btn-default" data-toggle="collapse" data-target="#NhanVienListPopupSearch">Đóng</a>
                            </div>
                        </div>
                        <!-- /popup danh sách nhân viên -->
                    </div>

                    <div class="panel-footer">
                        <a class="btn btn-sm btn-primary" ng-click="ctrlList.action.search()">Tìm kiếm (F8)</a>&nbsp;&nbsp;&nbsp;
                        <a class="btn btn-sm btn-default" ng-click="ctrlList.action.reset()">Thiết lặp lại</a>
                    </div>
                </div>

            </div>
        </div>
        <div class="panel panel-default">
        
            <div class="panel-body">
                <h3 class="text-center no-margin">Danh sách kỷ luật - Trừ tiền</h3>
            </div>

            <table st-table="ctrlList.data.KyLuatListDisplay" st-pipe="ctrlList.action.getPage" class="table table-bordered table-condensed table-responsive table-hover ">
                <thead class="bg-default text-primary">
                    <tr>
                        <th class="text-center" style="width: 50px;">Chọn</th>
                        <th class="text-center">Ngày</th>
                        <th class="text-center">Nhân viên</th>
                        <th class="text-center">Hình thức</th>
                        <th class="text-center">Tiền phạt</th>
                        <th class="text-center">Văn bản số</th>
                        <th class="text-center">Lý do</th>
                    </tr>
                </thead>
                <tbody>
                    <tr ng-if="ctrlList.status.isLoading">
                        <td colspan="100" class="text-center">
                            <i class="fa fa-fw fa-spin fa-spinner"></i>
                        </td>
                    </tr>
                    <tr ng-repeat="kyluat in ctrlList.data.KyLuatListDisplay" ng-class="(kyluat.isSelected==true)?'info':''">
                        <td st-select-row="kyluat" st-select-mode="multiple" class="text-center"><i class="fa fa-fw text-primary" ng-class="(kyluat.isSelected==true)?'fa-check-square-o':'fa-square-o'"></i></td>
                        <td><span> {{ kyluat.Ngay | date : 'dd/MM/yyyy'}}</span> </td>
                        <td><a ng-bind="kyluat.HoTen" href="javascript:void(0);" ng-click="ctrlList.action.edit(kyluat)"></a></td>
                        <td><span ng-bind="kyluat.HinhThuc"></span></td>
                        <td style="text-align:right"><span>{{ kyluat.Tien | number}}</span></td>
                        <td><span ng-bind="kyluat.VanBanSo"></span></td>
                        <td><span ng-bind="kyluat.LyDo"></span></td>

                    </tr>
                </tbody>
                <tfoot>
                    <tr>
                        <td colspan="100" class="text-center hidden-print">
                            <div st-pagination="" st-items-by-page="10" st-template="~/Scripts/angular/shared/smart-table/template/pagination.custom.html"></div>
                        </td>
                    </tr>
                </tfoot>
            </table>

            <div class="panel-footer hidden-print">
                <a class="btn btn-sm btn-primary" data-toggle="collapse" ng-if="ctrlList.data.showButtonNew"  data-target="#popupThongTinKyLuat" ng-click="ctrlList.action.add()">Mới (F2)</a>&nbsp;&nbsp;&nbsp;
                <button class="btn btn-sm btn-default" ng-if="ctrlList.data.showButtonXoaChon" ng-click="ctrlList.action.deleteSelected('')">Xóa chọn</button>
            </div>
        </div>
        <!-- popup cập nhật kỷ luật -->
        <div class="panel panel-primary ui-draggable collapse fade hidden-print" id="popupThongTinKyLuat" ng-controller="KyLuatEditCtrl as ctrl" keyboard="ctrl.keys" ng-init="ctrl.onInitView({userInfo: @ViewBag.userInfo})">
            <div class="panel-heading ui-draggable-handle">
                <div class="panel-title">
                    <span>Kỷ luật -  Trừ tiền</span>
                    <a class="btn btn-xs btn-primary pull-right" data-toggle="collapse" ng-click="ctrl.action.closeEdit()">
                        <i class="fa fa-fw fa-remove">
                        </i>
                    </a>
                    <i class="fa fa-fw fa-pulse text-primary pull-right fa-spinner" ng-if="ctrl.status.isLoading"></i>
                </div>
            </div>
            <div style="width: 600px; padding-top: 15px;padding-right: 50px;">
                <form class="form-horizontal">
                    <div class="row form-group form-group-sm" ng-class="{'has-error':ctrl.status.isInValidNgay}">
                        <label class="control-label col-sm-4">Ngày</label>
                        <div class="col-sm-8">
                            <input class="datetimepicker form-control date" id="txtNgay" ng-model="ctrl.data.objKyLuat.Ngay" ng-keypress="ctrl.action.keyPress(ctrl.data.objKyLuat.Ngay,'txtNgay','txtNhanVien',$event)" placeholder="__/__/____" />
                        </div>
                    </div>
                    <div class="row form-group form-group-sm" ng-class="{'has-error':ctrl.status.isInValidNhanVien}">
                        <label for="txtNhanVien" class="control-label col-sm-4">Nhân viên</label>
                        <div class="col-sm-8">
                            <div class="form-control auto-height">
                                <a class="pull-right" href="javascript:void(0);" ng-click="ctrl.action.clearListNhanVien()"><i class="fa fa-fw fa-remove"></i></a>
                                <a href="javascript:void(0);" data-toggle="collapse" data-target="#NhanVienListPopup">
                                    <div>
                                        <i class="fa fa-fw fa-search"></i>
                                        <span class="" style="margin-right: 5px;" ng-bind="nhanvien.Ho+' '+nhanvien.Ten+','" ng-repeat="nhanvien in ctrl.data.listNhanVien"></span>
                                    </div>
                                   
                                </a>
                            </div>
                        </div>
                    </div>
                    <div class="row form-group form-group-sm" ng-class="{'has-error':ctrl.status.isInValidTien}">
                        <label class="control-label col-sm-4">Tiền phạt</label>
                        <div class="col-sm-8">
                            <input class="form-control" type="text"  id="txtTienPhat" ng-model="ctrl.data.objKyLuat.Tien" ng-keypress="ctrl.action.keyPress(ctrl.data.objKyLuat.Tien,'txtTienPhat','txtBangChu',$event)" pattern="[0-9]+([\,][0-9]+)*" number-format />
                        </div>
                    </div>
                    <div class="row form-group form-group-sm">
                        <label class="control-label col-sm-4">Bằng chữ</label>
                        <div class="col-sm-8">
                            <input class="form-control" type="text" id="txtBangChu" ng-model="ctrl.data.objKyLuat.BangChu" ng-keypress="ctrl.action.keyPress(ctrl.data.objKyLuat.BangChu,'txtBangChu','txtLyDo',$event)" />
                        </div>
                    </div>
                    <div class="row form-group form-group-sm" ng-class="{'has-error':ctrl.status.isInValidLyDo}">
                        <label class="control-label col-sm-4">Lý do</label>
                        <div class="col-sm-8">
                            <input class="form-control" id="txtLyDo" ng-model="ctrl.data.objKyLuat.LyDo" ng-keypress="ctrl.action.keyPress(ctrl.data.objKyLuat.LyDo,'txtLyDo','txtPhatTien',$event)" />
                        </div>
                    </div>
                    <div class="row form-group form-group-sm" ng-class="{'has-error':ctrl.status.isInValidHinhThuc}">
                        <label class="control-label col-sm-4">Hình thức</label>
                        <div class="col-sm-1" style="padding-right:0px!important;width:5.333333%">
                            <input type="radio" name="hinhthuc" class="radio" value="1" ng-checked="ctrl.data.PhatTien" ng-click="ctrl.action.CheckPhatTien()" ng-model="ctrl.data.objKyLuat.HinhThuc" id="txtPhatTien" ng-keypress="ctrl.action.keyPress(ctrl.data.objKyLuat.HinhThuc,'txtPhatTien','txtCanhCao',$event)" />
                        </div>
                        <div class="col-sm-2" style="padding-left:0px!important">
                            <label class="control-label" style="float:left">Phạt tiền</label>
                        </div>
                        <div class="col-sm-1" style="padding-right:0px!important;width:5.333333%">
                            <input type="radio" name="hinhthuc" checked value="2" ng-checked="ctrl.data.CanhCao" class="radio" ng-click="ctrl.action.CheckCanhCao()" ng-model="ctrl.data.objKyLuat.HinhThuc" id="txtCanhCao" ng-keypress="ctrl.action.keyPress(ctrl.data.objKyLuat.HinhThuc,'txtCanhCao','txtVanBan',$event)" />
                        </div>
                        <div class="col-sm-2" style="padding-left:0px!important">
                            <label class="control-label" style="float:left">Cảnh cáo</label>
                        </div>
                        <div class="col-sm-1" style="padding-right:0px!important;width:5.333333%">
                            <input type="radio" name="hinhthuc" class="radio" value="3" ng-checked="ctrl.data.Vanban" ng-click="ctrl.action.CheckCanhCao()" ng-model="ctrl.data.objKyLuat.HinhThuc" id="txtVanBan" ng-keypress="ctrl.action.keyPress(ctrl.data.objKyLuat.HinhThuc,'txtVanBan','txtVanBanSo',$event)" />
                        </div>
                        <div class="col-sm-2" style="padding-left:0px!important">
                            <label class="control-label" style="float:left">Văn bản</label>
                        </div>

                    </div>
                    <div class="row form-group form-group-sm">
                        <label class="control-label col-sm-4">Văn bản số (chứng từ)</label>
                        <div class="col-sm-8">
                            <input class="form-control" type="number" ng-model="ctrl.data.objKyLuat.VanBanSo" id="txtVanBanSo" ng-keypress="ctrl.action.keyPress(ctrl.data.objKyLuat.VanBanSo,'txtVanBanSo','btnluu',$event)" />
                        </div>
                    </div>

                </form>
            </div>
            <div class="panel-footer">
                <button type="button" class="btn btn-sm btn-primary" id="btnluu" ng-if="ctrl.data.showButtonSave" ng-click="ctrl.action.save()">Lưu (F8)</button>&nbsp;&nbsp;&nbsp;
                <button type="button" class="btn btn-sm btn-default" ng-click="ctrl.action.refresh()">Thiết lập lại</button>&nbsp;&nbsp;&nbsp;
                <a class="btn btn-sm btn-default" data-toggle="collapse" ng-click="ctrl.action.closeEdit()">Đóng</a>&nbsp;&nbsp;&nbsp;
                <button type="button" id="btnXoaId" class="btn  btn-sm btn-default" ng-click="ctrlList.action.deleteSelected(ctrl.data.objKyLuat.KyLuatId)" ng-if="ctrl.data.objKyLuat.KyLuatId!=0 && ctrl.data.showButtonSave">Xóa</button>&nbsp;&nbsp;&nbsp;
                <button type="button" id="btnH" class="btn btn-sm btn-default" ng-click="ctrlList.action.GetListLuocSu(ctrl.data.objKyLuat.KyLuatId)">H</button>
            </div>
        </div>
        <!-- /popup cập nhật -->
        <!-- popup danh sách nhân viên -->
        <div class="panel panel-primary ui-draggable collapse fade hidden-print" id="NhanVienListPopup" ng-controller="NhanVienListCtrl as ctrl" ng-init="ctrl.onInitView({controllerId:mainCtrl.controllerId.NhanVienListPopup,showList:true,userInfo: @ViewBag.UserInfo })">
            <div class="panel-heading ui-draggable-handle">
                <div class="panel-title clearfix">
                    <span><i class="fa fa-fw fa-star-o"></i>Danh sách nhân viên</span>
                    <a class="btn btn-xs btn-primary pull-right" data-toggle="collapse" data-target="#NhanVienListPopup"><i class="fa fa-fw fa-remove"></i></a>
                </div>
            </div>
            <div class="panel-body" style="width:auto;height:auto;">
                <form class="form-inline">
                    <div class="form-group form-group-sm">
                        <span><i class="fa fa-fw fa-star-o"></i>Tìm kiếm nhân viên</span>
                    </div>
                    <div class="form-group form-group-sm">
                        <div class="input-group input-group-sm">
                            <input class="form-control" ng-model="ctrl.data.inputSearch.searchString" autofocus />
                            <span class="input-group-btn">
                                <button class="btn btn-sm btn-primary" ng-click="ctrl.action.search()"><i class="fa fa-fw fa-search"></i>Tìm kiếm</button>
                            </span>
                        </div>
                    </div>
                </form>
            </div>
            <div class="table-responsive" style="width:auto; height: auto;" ng-if="ctrl.data.showList">
                <table class="table table-bordered table-condensed table-hover table-responsive table-striped" st-table="ctrl.data.listNhanVien" st-pipe="ctrl.action.getPage">
                    <thead>
                        <tr>
                            <th class="text-center" style="width: 50px;"></th>
                            <th class="text-center" ng-repeat="cot in ctrl.data.listCot|filter:cot.HienThiYN=true" ng-bind="::cot.TenCot"></th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr ng-if="ctrl.data.isLoading">
                            <td colspan="100" class="text-center info">
                                <i class="fa fa-fw fa-spinner fa-pulse"></i>
                            </td>
                        </tr>
                        <tr ng-if="ctrl.data.error.code>0">
                            <td colspan="100" class="text-center danger" ng-bind="ctrl.data.error.message"></td>
                        </tr>
                        <tr ng-repeat="nhanvien in ctrl.data.listNhanVien" ng-class="(nhanvien.isSelected==true)?'info':''">
                            <td class="text-primary text-center" ng-hide="IsSelectAll" st-select-row="nhanvien" st-select-mode="multiple"><i class="fa fa-fw" ng-class="nhanvien.isSelected==true?'fa-check-square-o':'fa-square-o'"></i></td>
                            <td class="text-primary text-center" ng-show="IsSelectAll" st-select-row="nhanvien" st-select-mode="single"><i class="fa fa-fw" ng-class="nhanvien.isSelected==true?'fa-check-square-o':'fa-square-o'"></i></td>
                            <td ng-repeat="cot in ctrl.data.listCot|filter:cot.HienThiYN=true" ng-switch="cot.MaCot">
                                <a href="javascript:void(0)" ng-click="ctrl.action.xemNhanVien(nhanvien.NhanVienId)" ng-switch-when="Ten" ng-bind="::nhanvien['Ho']+' '+nhanvien[cot.MaCot]"></a>
                                <a href="javascript:void(0)" ng-click="ctrl.action.xemNhanVien(nhanvien.NhanVienId)" ng-switch-when="Ma" ng-bind="::nhanvien[cot.MaCot]"></a>
                                <span ng-switch-when="NgayTuyenDung" ng-bind="ctrl.action.convertDateFormat(nhanvien[cot.MaCot],'YYYY-MM-DD','DD/MM/YYYY')"></span>
                                <span ng-switch-default ng-bind="::nhanvien[cot.MaCot]"></span>
                            </td>
                        </tr>
                    </tbody>
                    <tfoot>
                        <tr>
                            <td colspan="100" class="text-center hidden-print">
                                <div st-pagination="" st-items-by-page="10" st-template="~/Scripts/angular/shared/smart-table/template/pagination.custom.html"></div>
                            </td>
                        </tr>
                    </tfoot>
                </table>
            </div>
            <div class="panel-footer hidden-print">
                <a class="btn btn-sm btn-primary" ng-click="ctrl.action.apDung()">Áp dụng</a>
                <a class="btn btn-sm btn-default" ng-click="ctrl.action.getPage()">Thiết lập lại</a>
                <a class="btn btn-sm btn-default" data-toggle="collapse" data-target="#NhanVienListPopup">Đóng</a>
            </div>
        </div>
        <!-- /popup danh sách nhân viên -->
       
    </div>
</div>
@section ImportScripts{}
@section SetupScripts{}
@section ImportAngular{
<script src="~/Scripts/angular/KyLuat/controller/KyLuatEditCtrl.js"></script>
<script src="~/Scripts/angular/KyLuat/controller/KyLuatListCtrl.js"></script>
<script src="~/Scripts/angular/KyLuat/service/KyLuatService.js"></script>
<script src="~/Scripts/angular/app/models/keyCodes.js"></script>
