
@{
    ViewBag.Title = "List";
}
<div class="container-fluid">
    @*<h3 class="page-header">Danh sách chức năng</h3>*@

    <div ng-controller="ChucNangListCtrl as ctrl" class="panel panel-default">
        <div class="panel-heading">
            <div class="panel-title clearfix">
                <span><i class="fa fa-fw fa-star-o"></i> Danh sách chức năng</span>
                <div class="pull-right">
                    <form class="form-inline">
                        <div class="form-group form-group-sm">
                            <div class="input-group input-group-sm">
                                <input class="form-control" ng-model="ctrl.data.searchString" autofocus />
                                <span class="input-group-btn">
                                    <button class="btn btn-sm btn-primary" ng-click="ctrl.action.getPage()"><i class="fa fa-fw fa-search"></i>Tìm kiếm</button>
                                </span>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
        <table st-table="ctrl.data.ChucNangListDisplay" st-pipe="ctrl.action.getPage" class="table table-bordered table-condensed table-hover table-responsive table-striped">
            <thead class="bg-primary">
                <tr>
                    <th class="text-center" style="width: 50px;">Chọn</th>
                    <th class="text-center" style="width: 100px;" st-sort="MaChucNang">Mã</th>
                    <th class="text-center" style="width: 300px" st-sort="TenChucNang">Tên</th>
                    <th class="text-center" st-sort="MoTa">Mô tả</th>
                </tr>
            </thead>
            <tbody>
                <tr ng-if="ctrl.status.isLoading">
                    <td colspan="100" class="text-center">
                        <i class="fa fa-fw fa-spin fa-spinner"></i>
                    </td>
                </tr>
                <tr ng-repeat="chucnang in ctrl.data.ChucNangListDisplay" ng-class="(chucnang.isSelected==true)?'info':''">
                    <td st-select-row="chucnang" st-select-mode="multiple" class="text-center"><i class="fa fa-fw text-primary" ng-class="(chucnang.isSelected==true)?'fa-check-square-o':'fa-square-o'"></i></td>
                    <td><a ng-bind="chucnang.MaChucNang" ng-click="ctrl.action.edit(chucnang.ChucNangId)" href="javascript:void(0);"></a></td>
                    <td><span ng-bind="chucnang.TenChucNang"></span></td>
                    <td><span ng-bind="chucnang.MoTa"></span></td>
                </tr>
            </tbody>
            <tfoot>
                <tr>
                    <td colspan="100" class="text-center">
                        <div st-pagination="" st-items-by-page="10" st-template="~/Scripts/angular/shared/smart-table/template/pagination.custom.html"></div>
                    </td>
                </tr>
            </tfoot>
        </table>

        <div class="panel-footer">
            <button class="btn btn-sm btn-primary" ng-click="ctrl.action.add()">Mới</button>
            <button class="btn btn-sm btn-default" ng-click="ctrl.action.deleteSelected()">Xóa chọn</button>
            <button class="btn btn-sm btn-default" ng-click="ctrl.action.getPage()">thiết lập lại</button>
        </div>
    </div>
</div>

<div ng-controller="ChucNangEditCtrl as ctrl" class="panel panel-primary ui-draggable collapse fade" id="ChucNangEditPopup">
    <div class="panel-heading ui-draggable-handle">
        <h2 class="panel-title">
            <span>Thông tin chức năng</span>
            <a class="btn btn-xs btn-primary pull-right" data-toggle="collapse" data-target="#ChucNangEditPopup">
                <i class="fa fa-fw fa-remove"></i>
            </a>
            <i class="fa fa-fw fa-pulse text-primary pull-right fa-spinner" ng-if="ctrl.status.isLoading"></i>
        </h2>
    </div>
    <div class="panel-body" style="width: 600px; height: 400px;">
        <form class="form-horizontal">
            <div class="row form-group form-group-sm" ng-class="{'has-error':ctrl.validate.MaChucNang}">
                <label class="control-label col-sm-3">Mã chức năng</label>
                <div class="col-sm-9">
                    <input class="form-control" type="text" ng-model="ctrl.data.objChucNang.MaChucNang" />
                    <span class="help-block" ng-if="ctrl.validate.MaChucNang" ng-bind="ctrl.validate.MaChucNang"></span>
                </div>
            </div>

            <div class="row form-group form-group-sm" ng-class="{'has-error':ctrl.validate.TenChucNang}">
                <label class="control-label col-sm-3">Tên chức năng</label>
                <div class="col-sm-9">
                    <input class="form-control" type="text" ng-model="ctrl.data.objChucNang.TenChucNang" />
                    <span class="help-block" ng-if="ctrl.validate.TenChucNang" ng-bind="ctrl.validate.TenChucNang"></span>
                </div>
            </div>
            <div class="row form-group form-group-sm" ng-class="{'has-error':ctrl.validate.MoTa}">
                <label class="control-label col-sm-3">Mô tả</label>
                <div class="col-sm-9">
                    <input class="form-control" type="text" ng-model="ctrl.data.objChucNang.MoTa" />
                    <span class="help-block" ng-if="ctrl.validate.MoTa" ng-bind="ctrl.validate.MoTa"></span>
                </div>
            </div>
        </form>
    </div>
    <div class="panel-footer">
        <button type="button" class="btn btn-xs btn-primary" ng-click="ctrl.action.save()">Lưu</button>
        <button type="button" class="btn btn-xs btn-default" ng-click="ctrl.action.refresh()">Thiết lập lại</button>
    </div>
</div>

@section ImportStyles{}
@section SetupStyles{
    <style type="text/css">
        .st-sort-ascent:before {
            content: '\25B2';
        }

        .st-sort-descent:before {
            content: '\25BC';
        }

        .select-page {
            width: 50px;
            text-align: center;
        }

        .pagination li a input {
            padding: 0;
            margin: -5px 0;
        }
    </style>
}
@section ImportScripts{}
@section SetupScripts{}
@section ImportAngular{
    <script src="~/Scripts/angular/ChucNangList/service/ChucNangService.js"></script>
    <script src="~/Scripts/angular/ChucNangList/controller/ChucNangListCtrl.js"></script>
    <script src="~/Scripts/angular/ChucNangList/controller/ChucNangEditCtrl.js"></script>

}
