
@{
    ViewBag.Title = "List";
}
<div class="container-fluid" ng-controller="MainCtrl as mainCtrl" ng-init="mainCtrl.onInitView()">
    <!-- panel tìm kiếm -->
    <div class="panel panel-default hidden-print" ng-controller="KhoSoDuTonKhoFilterCtrl as ctrl" ng-init="ctrl.onInitView('KhoSoDuTonKhoFilterCtrl')" keyboard="ctrl.keys">
        <div class="panel-heading">
            <div class="panel-title clearfix">
                <span><i class="fa fa-fw fa-star-o"></i>Số dư hàng tồn kho</span>
                <div class="btn-group btn-group-sm pull-right">
                    <a class="btn btn-primary" data-toggle="collapse" data-target="#panelTimkiemCollapse"><i class="fa fa-fw fa-search"></i>Tìm kiếm (F3)</a>
                </div>
            </div>
        </div>
        <div>
            <div class="collapse fade" id="panelTimkiemCollapse">
                <div class="panel-body">
                    <form class="form">
                        <div class="row form-group form-group-sm">
                            <label for="txtNgay" class="control-label col-sm-2">Ngày</label>
                            <div class="form-inline col-sm-10">
                                <p hidden>
                                    <input type="text" id="tungay"  class="form-control datetimepicker date" placeholder="__/__/____" />
                                    <span>~</span></p>
                                    <input type="text" id="denngay" class="form-control datetimepicker date" placeholder="__/__/____" />
</div>
                        </div>
                        <div class="row form-group form-group-sm">
                            <label class="control-label col-sm-2">Kho hàng hóa</label>
                            <div class="col-sm-10">
                                <div class="form-control auto-height">
                                    <a class="pull-right" href="javascript:void(0)" ng-click="ctrl.action.clearListKhoKhoHang()"><i class="fa fa-fw fa-remove"></i></a>
                                    <a href="javascript:void(0)" data-toggle="collapse" data-target="#{{mainCtrl.controllerId.KhoKhoHangListPopup}}">
                                        <div>
                                            <i class="fa fa-fw fa-search"></i>
                                            <span style="margin-right: 5px;" ng-repeat="kho in ctrl.data.listKhoKhoHang" ng-bind="kho.TenKho+','"></span>
                                        </div>
                                    </a>
                                </div>
                            </div>
                        </div>

                        <div class="row form-group form-group-sm">
                            <label for="txtKhachHang" class="control-label col-sm-2">Hàng hóa</label>
                            <div class="col-sm-10">
                                <div class="form-control auto-height">

                                    <a class="pull-right" href="javascript:void(0);" ng-click="ctrl.action.ClearlistKhoHangHoa()"><i class="fa fa-fw fa-remove"></i></a>
                                    <a href="javascript:void(0);" data-toggle="collapse" data-target="#KhoHangHoaListPopup">
                                        <div>
                                            <i class="fa fa-fw fa-search"></i>
                                            <span ng-repeat="hanghoa in ctrl.data.listKhoHangHoa" ng-bind="hanghoa.TenHangHoa+','" style="margin-right: 5px;"></span>
                                        </div>
                                             </a>
                                </div>
                            </div>
                        </div>

                    </form>
                </div>

                <div class="panel-footer">
                    <a class="btn btn-sm btn-primary" ng-click="ctrl.action.search()">Tìm kiếm (F8)</a>&nbsp;&nbsp;&nbsp;
                    <a class="btn btn-sm btn-default" ng-click="ctrl.action.reset()">Thiết lặp lại</a>
                </div>
            </div>

        </div>
    </div>
    <!-- /panel tìm kiếm -->
    <!-- popup danh sách hàng hóa -->
    <div class="panel panel-primary hidden-print collapse fade ui-draggable" ng-controller="KhoHangHoaListPopCtrl as ctrl" id="KhoHangHoaListPopup" ng-init="ctrl.onInitView({controllerId:mainCtrl.controllerId.KhoHangHoaListPopup})">
        <div class="panel-heading ui-draggable-handle">
            <div class="panel-title">
                <span>Danh sách hàng hóa</span>
                <a class="btn btn-xs btn-primary pull-right" data-toggle="collapse" data-target="#KhoHangHoaListPopup"><i class="fa fa-fw fa-remove"></i></a>
            </div>
        </div>
        <div class="panel-body" style="width:auto; height:auto;">
            <form class="form-inline">
                <div class="form-group form-group-sm">
                    <span><i class="fa fa-fw fa-star-o"></i>Tìm kiếm hàng hóa</span>
                </div>
                <div class="form-group form-group-sm">
                    <div class="input-group input-group-sm">
                        <input class="form-control" ng-model="ctrl.data.searchString" autofocus />
                        <span class="input-group-btn">
                            <button class="btn btn-sm btn-primary" ng-click="ctrl.action.getPage()"><i class="fa fa-fw fa-search"></i>Tìm kiếm</button>
                        </span>
                    </div>
                </div>
            </form>
        </div>
        <div class="table-responsive">
            <table st-table="ctrl.data.listKhoHangHoa" st-pipe="ctrl.action.getPage" class="table table-bordered table-condensed table-responsive table-hover ">
                <thead class="bg-default text-primary">
                    <tr>
                        <th class="text-center" style="width: 50px;">Chọn</th>
                        <th class="text-center" style="width: 100px;" st-sort="MaHangHoa">Mã</th>
                        <th class="text-center" style="width: 300px" st-sort="TenHangHoa">Tên</th>
                    </tr>
                </thead>
                <tbody>
                    <tr ng-if="ctrl.status.isLoading">
                        <td colspan="100" class="text-center">
                            <i class="fa fa-fw fa-spin fa-spinner"></i>
                        </td>
                    </tr>
                    <tr ng-repeat="nsx in ctrl.data.listKhoHangHoa" ng-class="(nsx.isSelected==true)?'info':''">
                        <td st-select-row="nsx" st-select-mode="multiple" class="text-center"><i class="fa fa-fw text-primary" ng-class="(nsx.isSelected==true)?'fa-check-square-o':'fa-square-o'"></i></td>
                        <td><a ng-bind="nsx.MaHangHoa" ng-click="ctrl.action.edit(nsx.HangHoaId)" href="javascript:void(0);"></a></td>
                        <td><a ng-bind="nsx.TenHangHoa" ng-click="ctrl.action.edit(nsx.HangHoaId)" href="javascript:void(0);"></a></td>
                    </tr>
                </tbody>
                <tfoot>
                    <tr>
                        <td colspan="100" class="text-center">
                            <div st-pagination="" st-items-by-page="10" st-template="~/Scripts/angular/shared/smart-table/template/pagination.custom.html"></div>
                        </td>
                    </tr>
                </tfoot>
            </table>
        </div>
        <div class="panel-footer">
            <button class="btn btn-sm btn-primary" ng-click="ctrl.action.apDung()">Áp dụng</button>
            <button class="btn btn-sm btn-default" data-toggle="collapse" data-target="#KhoHangHoaListPopup">Đóng</button>
        </div>
    </div>
    <!-- /popup danh sách -->
    <!-- popup danh sách kho hang hoa -->
    @{Html.RenderPartial("~/views/KhoKhoHang/_KhoKhoHangListPopup.cshtml", new ViewDataDictionary { { "Html", true }, { "onInitView", "{controllerId:mainCtrl.controllerId.KhoKhoHangListPopup,showTable:true,userInfo:" + ViewBag.userInfo + "}" } });}
    <!-- /popup danh sách -->

    <div ng-controller="KhoSoDuTonKhoListCtrl as ctrlList" keyboard="ctrlList.keys">
        <div class="panel panel-default" ng-init="ctrlList.onInitView({controllerId:mainCtrl.controllerId.KhoSoDuTonKhoList, loadListCot:true, showList:true,userInfo: @ViewBag.userInfo})">
            <div class="panel-body">
                <h3 class="text-center no-margin">Số dư hàng tồn kho</h3>
            </div>
            <div class="panel-body">
                <i style="float:right">{{ctrlList.data.NgayKiemKho}}</i>
            </div>
                <div id="tableToExport" class="list-margin">
                    <div class="table-responsive" style="width:auto; height: auto;" ng-if="ctrlList.data.showList">
                        <table class="table table-bordered table-condensed table-responsive table-hover " st-table="ctrlList.data.listKhoSoDuTonKho" st-pipe="ctrlList.action.getPage">
                            <thead class="bg-default text-primary">
                                <tr>
                                    <th class="text-center" style="width: 50px;">#</th>
                                    <th class="text-center" st-sort="MaHangHoa">Mã hàng</th>
                                    <th class="text-center" st-sort="TenHangHoa">Tên hàng</th>
                                    <th class="text-center" st-sort="GIANHAP">Giá nhập</th>
                                    <th class="text-center" st-sort="LOHANG">Lô</th>
                                    <th class="text-center" st-sort="TonKho">Tồn kho</th>
                                    <th class="text-center" st-sort="{{cot.TenKho}}" ng-repeat="cot in ctrlList.data.listKhoHang|filter:cot.KhoHangId" ng-bind="::cot.TenKho"></th>
                                </tr>
                            </thead>
                            <tbody>

                                <tr ng-repeat="tonkho in ctrlList.data.listKhoSoDuTonKho">
                                    <td class="text-center">{{$index +1}}</td>
                                    <td><a href="/QLDNKHO/khothekho/Chitiet?id={{tonkho.HangHoaId}}&dt={{tonkho.ngay}}" ng-bind="tonkho.MaHangHoa"></a></td>
                                    <td><a href="/QLDNKHO/khothekho/Chitiet?id={{tonkho.HangHoaId}}&dt={{tonkho.ngay}}" ng-bind="tonkho.TenHangHoa"></a></td>
                                    <td style="text-align:right"><span ng-bind="tonkho.GIANHAP*1|number:'':'':2"></span></td>
                                    <td style="text-align:right"><span ng-bind="tonkho.LOHANG"></span></td>
                                    <td style="text-align:right"><span ng-bind="tonkho.TonKho"></span></td>
                                    <td style="text-align:right" ng-repeat="cot in ctrlList.data.listKhoHang|filter:cot.KhoHangId" ng-switch="cot.TenKho">
                                        <span ng-switch-default ng-bind="::tonkho[cot.TenKho]"></span>
                                    </td>
                                </tr>
                            </tbody>
                            <tfoot>
                                <tr>
                                    <td colspan="100" class="text-center hidden-print">
                                        <div st-pagination="" st-items-by-page="10" st-template="~/Scripts/angular/shared/smart-table/template/pagination.custom.html">
                                        </div>
                                        <div ng-if="ctrlList.data.listKhoSoDuTonKho.length >= 2" class="form-inline">Page size&nbsp;<input type="number" min="0" style="width:70px" ng-click="ctrlList.action.getPage()" ng-keypress="$event.keyCode===13?ctrlList.action.getPage():0" ng-model="ctrlList.data.pagesize" class="form-control" /></div>
                                    </td>
                                </tr>
                            </tfoot>
                        </table>
                    </div>
                </div>
                <div class="panel-footer hidden-print">
                    <!--<a class="btn btn-sm btn-primary" ng-click="ctrlList.action.print('tableToExport');">In</a>&nbsp;&nbsp;&nbsp; -->
                    <a class="btn btn-sm btn-primary" href="javascript:void(0)" ng-click="ctrlList.action.In()"><i class="fa fa-fw fa-print"></i> In</a>&nbsp;&nbsp;&nbsp;
                    @*<a class="btn btn-sm btn-default" ng-click="ctrlList.action.excel('#tableToExport');">Excel</a> *@

                </div>
            </div>

            <!-- report SoDuHangTonKho-->
            <div class="modal fade bs-example-modal-full" id="reportmodal" data-backdrop="static" data-keyboard="false">
                <div class="modal-dialog modal-full" style="margin: 0px; width:90%">
                    <div class="modal-content">
                        <div class="modal-header">
                            <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                            <h4 class="modal-title" id="myLargeModalLabel">Số dư hàng tồn kho</h4>
                        </div>
                        <div class="modal-body">
                            <iframe src="" width="100%" height="1000px"></iframe>
                        </div>
                    </div>
                </div>
            </div>

        </div>




</div>
@section ImportScripts{}
@section SetupScripts{}
@section ImportAngular{
    <script src="~/Scripts/angular/app/models/keyCodes.js"></script>
    <script src="~/Scripts/angular/shared/smart-table/service/smart-table-helper.js"></script>
    <script src="~/Scripts/angular/KhoHangHoa/service/KhoHangHoaService.js"></script>
    <script src="~/Scripts/angular/KhoHangHoa/controller/KhoHangHoaListPopCtrl.js"></script>
    <script src="~/Scripts/angular/TuyChonFormCot/controller/TuyChonCotListCtrl.js"></script>
    <script src="~/Scripts/angular/TuyChonFormCot/service/TuyChonCotService.js"></script>
    <script src="~/Scripts/angular/KhoSoDuTonKho/controller/KhoSoDuTonKhoFilterCtrl.js"></script>
    <script src="~/Scripts/angular/KhoSoDuTonKho/controller/KhoSoDuTonKhoListCtrl.js"></script>
    <script src="~/Scripts/angular/KhoSoDuTonKho/controller/MainCtrl.js"></script>
    <script src="~/Scripts/angular/KhoSoDuTonKho/service/KhoSoDuTonKhoService.js"></script>
<script src="~/Scripts/angular/shared/service/ExcelExport.js"></script>  
@{Html.RenderPartial("~/views/KhoKhoHang/_KhoKhoHangListPopup.cshtml", new ViewDataDictionary { { "ImportAngular", true } });}
}