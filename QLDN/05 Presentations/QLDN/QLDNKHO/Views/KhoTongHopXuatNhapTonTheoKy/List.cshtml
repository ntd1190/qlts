
@{
    ViewBag.Title = "Báo cáo tông hợp xuất nhập tồn theo kỳ";
    ViewBag.userInfo = ViewBag.userInfo ?? "{ }";
}
<div class="container-fluid" ng-controller="MainCtrl as mainCtrl" ng-init="mainCtrl.onInitView({ userInfo: @ViewBag.userInfo})" keyboard="mainCtrl.keys">
    <!-- panel tìm kiếm -->
    <div class="panel panel-default hidden-print">
        <div class="panel-heading">
            <div class="panel-title clearfix">
                <span><i class="fa fa-fw fa-star-o no-margin"></i>Tổng hợp xuất nhập tồn theo kỳ</span>
                <div class="btn-group btn-group-sm pull-right">
                    <a class="btn btn-primary" data-toggle="collapse" data-target="#panelTimkiemCollapse"><i class="fa fa-fw fa-search"></i>Tìm kiếm (F3)</a>
                </div>
            </div>
        </div>

        <div class="collapse fade" id="panelTimkiemCollapse" ng-controller="TongHopXuatNhapTonTheoKyFilterCtrl as ctrl" ng-init="ctrl.onInitView({controllerId:'TongHopXuatNhapTonTheoKyFilterCtrl',userInfo: @ViewBag.userInfo})">
            <div class="panel-body">
                <form class="form-horizontal">
                    <!-- search field -->
                    <div class="row form-group form-group-sm">
                        <label for="txtNhanVien" class="control-label col-sm-2">Từ ngày</label>
                        <div class="form-inline col-sm-10">
                            <input type="text" id="tungay" class="form-control datetimepicker date" placeholder="dd/mm/yyyy" ng-model="ctrl.data.ngayTu" />
                            <span>~</span>
                            <input type="text" id="denngay" class="form-control datetimepicker date" placeholder="dd/mm/yyyy" ng-model="ctrl.data.ngayDen" />
                        </div>
                    </div>

                    <!-- search field -->
                    <div class="row form-group form-group-sm">
                        <label for="txtNhanVien" class="control-label col-sm-2">Trạng thái</label>
                        <div class="form-inline col-sm-10">
                            <div class="checkbox" style="margin-right: 15px;">
                                <label>
                                    <input style="margin-right: 5px;" type="checkbox" ng-click="ctrl.action.checkLoaiBaoCaoTatCa()" ng-model="ctrl.data.LoaiBaoCao.tatCa" /><span>Tất cả</span>
                                </label>
                            </div>
                            <div class="checkbox" style="margin-right: 5px;">
                                <label>
                                    <input style="margin-right: 5px;" type="checkbox" ng-click="ctrl.action.checkLoaiBaoCao('t')" ng-model="ctrl.data.LoaiBaoCao.hangThang" /><span>Hằng tháng</span>
                                </label>
                            </div>
                            <div class="checkbox" style="margin-right: 5px;">
                                <label>
                                    <input style="margin-right: 5px;" type="checkbox" ng-click="ctrl.action.checkLoaiBaoCao('q')" ng-model="ctrl.data.LoaiBaoCao.hangQuy" /><span>Hằng quý</span>
                                </label>
                            </div>
                            <div class="checkbox" style="margin-right: 5px;">
                                <label>
                                    <input style="margin-right: 5px;" type="checkbox" ng-click="ctrl.action.checkLoaiBaoCao('n')" ng-model="ctrl.data.LoaiBaoCao.hangNam" /><span>Hằng năm</span>
                                </label>
                            </div>
                        </div>
                    </div>

                </form>
            </div>

            <div class="panel-footer">
                <a class="btn btn-sm btn-primary" ng-click="ctrl.action.search()">Tìm kiếm (F8)</a> &nbsp;&nbsp;&nbsp;
                <a class="btn btn-sm btn-default" ng-click="ctrl.action.reset()">Thiết lặp lại</a>
            </div>
        </div>
    </div><!-- / panel tìm kiếm -->
    <!-- panel Danh sách kỳ -->
    <div class="panel panel-default" ng-controller="TongHopXuatNhapTonTheoKyListCtrl as ctrl" ng-init="ctrl.onInitView({controllerId:'TongHopXuatNhapTonTheoKyListCtrl',loadListCot:true,userInfo: @ViewBag.userInfo})">


        <div class="panel-body">
            <h3 class="text-center no-margin">Danh sách tổng hợp xuất nhập tồn theo kỳ</h3>
        </div>


        <div class="table-responsive">
            <table class="table table-bordered table-condensed table-responsive table-hover " st-table="ctrl.data.listTongHopXuatNhapTonTheoKy" st-pipe="ctrl.action.getPage">
                <thead class="bg-default text-primary">
                    <tr>
                        <th style="width: 50px;text-align:center">#</th>
                        <th class="text-center" st-sort="{{cot.MaCot}}" ng-repeat="cot in ctrl.data.listCot|filter:cot.HienThiYN=true" style="width:{{cot.DoRong}}">{{cot.TenCot}}</th>
                    </tr>
                </thead>
                <tbody>
                    <tr ng-if="ctrl.data.isLoading">
                        <td colspan="100" class="text-center info">
                            <i class="fa fa-fw fa-spinner fa-pulse"></i>
                        </td>
                    </tr>
                    <tr ng-if="ctrl.data.error.code>0">
                        <td colspan="100" class="text-center danger">
                            <span ng-bind="{{ctrl.data.error.message}}"></span>
                        </td>
                    </tr>
                    <tr ng-repeat="nhaptonky in ctrl.data.listTongHopXuatNhapTonTheoKy" ng-class="(nhaptonky.isSelected==true)?'info':''">
                        <td style="display:none" class="text-primary text-center" st-select-row="nhaptonky" st-select-mode="multiple"><i class="fa fa-fw" ng-class="nhaptonky.isSelected==true?'fa-check-square-o':'fa-square-o'"></i></td>
                        <td class="text-primary text-center" ng-bind="$index+1"></td>
                        <td ng-repeat="cot in ctrl.data.listCot|filter:cot.chon=true" ng-switch="cot.MaCot" ng-class="(ctrl.action.checkInValid(nhaptonky[cot.MaCot], 'isNumber')==true)?'text-left':'text-right'">
                            <a href="javascript:void(0)" ng-click="ctrl.action.xemKy(nhaptonky.KyId)" ng-switch-when="Ten" ng-bind="::nhaptonky[cot.MaCot]"></a>
                            @*<a href="javascript:void(0)" ng-click="ctrl.action.callTinhToan(nhaptonky.KyId)" ng-switch-when="TinhToan" ng-bind="::nhaptonky[cot.MaCot]"></a>*@
                            <a ng-switch-when="Xem" ng-switch-when-separator="," href="~/khotonghopxuatnhaptontheoky/edit?id={{nhaptonky.KyId}}&type=0" ng-bind="nhaptonky[cot.MaCot]"></a>
                            <a ng-if="ctrl.data.showButtonXoaChon" ng-switch-when="TinhToan" ng-switch-when-separator="," href="~/khotonghopxuatnhaptontheoky/edit?id={{nhaptonky.KyId}}&type=1" ng-bind="nhaptonky[cot.MaCot]"></a>
                            <a href="javascript:void(0)" ng-if="ctrl.data.showButtonXoaChon" ng-click="ctrl.action.deleteOne(nhaptonky)" ng-switch-when="XoaYN" ng-bind="::nhaptonky[cot.MaCot]"></a>
                            <a ng-if="ctrl.data.showButtonXoaChon" ng-switch-when="Import" ng-switch-when-separator="," href="~/khoimportexceldauky/list/{{nhaptonky.KyId}}" target="_blank" ng-bind="nhaptonky[cot.MaCot]"></a>
                            <span ng-switch-default ng-bind="::nhaptonky[cot.MaCot]"></span>                            
                        </td>
                    </tr>
                </tbody>
                <tfoot>
                    <tr>
                        <td colspan="100" class="text-center hidden-print">
                            <div st-pagination="" st-items-by-page="10" st-template="~/Scripts/angular/shared/smart-table/template/pagination.custom.html"></div>
                        </td>
                    </tr>
                </tfoot>
            </table>
        </div>

        <div class="panel-footer hidden-print">
            <a class="btn btn-sm btn-primary" ng-if="ctrl.data.showButtonNew" data-toggle="collapse" data-target="#TongHopXuatNhapTonTheoKyEditPopup" ng-click="ctrl.action.add()">Mới (F2)</a> &nbsp;&nbsp;&nbsp;
        </div>
    </div><!-- /panel danh sách kỳ -->

    <!-- popup cập nhật kỳ -->
    <div class="panel panel-primary ui-draggable collapse fade hidden-print" id="TongHopXuatNhapTonTheoKyEditPopup" ng-controller="TongHopXuatNhapTonTheoKyEditCtrl as ctrl" ng-init="ctrl.onInitView({controllerId:mainCtrl.controllerId.TongHopXuatNhapTonTheoKyEditCtrl,userInfo: @ViewBag.userInfo})">
        <div class="panel-heading ui-draggable-handle">
            <div class="panel-title">
                <span>Thông tin xuất nhập tồn theo kỳ</span>
                <a class="btn btn-xs btn-primary pull-right" data-toggle="collapse" data-target="#TongHopXuatNhapTonTheoKyEditPopup" ng-click="ctrl.action.closeEdit()">
                    <i class="fa fa-fw fa-remove">
                    </i>
                </a>
            </div>
        </div>
        <div class="panel-body" style="width: 600px;height: 350px;">
            <form class="form-horizontal">

                <!-- Input row Loại kỳ-->
                <div class="row form-group form-group-sm">
                    <label class="control-label col-sm-3">Loại</label>
                    <div class="col-sm-9">
                        <label class="radio-inline">
                            <input style="margin-right: 5px;" type="radio" ng-model="ctrl.data.objTongHopKy.LoaiBaoCao" value="THANG" name="LoaiBaoCao" /><span>Hằng tháng</span>
                        </label>
                        <label class="radio-inline">
                            <input style="margin-right: 5px;" type="radio" ng-model="ctrl.data.objTongHopKy.LoaiBaoCao" value="QUY" name="LoaiBaoCao" /><span>Hằng quý</span>
                        </label>
                        <label class="radio-inline">
                            <input style="margin-right: 5px;" type="radio" ng-model="ctrl.data.objTongHopKy.LoaiBaoCao" value="NAM" name="LoaiBaoCao" /><span>Hằng năm</span>
                        </label>
                    </div>
                </div>

                <!-- Input row Tháng/Năm -->
                <div style="display:none" class="row form-group form-group-sm" ng-class="{'has-error':ctrl.status.isInValidThangNam}">
                    <label class="control-label col-sm-3">Tháng/Năm</label>
                    <div class="form-inline col-sm-9">
                        <input type="text" id="thangnamedit" class="form-control input-month-year" ng-model="ctrl.data.objTongHopKy.ThangNam" />
                    </div>
                </div>

                <!-- Input row Thời gian phát sinh-->
                <div class="row form-group form-group-sm" ng-class="{'has-error':ctrl.status.isInValidThoiGianPhatSinh}">
                    <label class="control-label col-sm-3">Thời gian phát sinh</label>
                    <div class="form-inline col-sm-9">
                        <input type="text" id="tungayedit" class="form-control datetimepicker date" placeholder="dd/mm/yyyy" ng-model="ctrl.data.objTongHopKy.NgayBatDau" />
                        <span>~</span>
                        <input type="text" id="denngayedit" class="form-control datetimepicker date" placeholder="dd/mm/yyyy" ng-model="ctrl.data.objTongHopKy.NgayKetThuc" />
                    </div>
                </div>


                <!-- Input row Tên kỳ -->
                <div class="row form-group form-group-sm" ng-class="{'has-error':ctrl.status.isInValidTenKy}">
                    <label class="control-label col-sm-3">Tên kỳ</label>
                    <div class="col-sm-9">
                        <input id="txtTenKy" class="form-control" ng-model="ctrl.data.objTongHopKy.Ten" />
                    </div>
                </div>

                <div class="row form-group form-group-sm" ng-class="ctrl.error.TenKhoXem?'has-error':''">
                    <label class="control-label col-sm-3">Kho hàng</label>
                    <div class="col-sm-9">
                        <div class="form-control auto-height">
                            <a class="pull-right" href="javascript:void(0)" tabindex="-1" ng-click="ctrl.action.clearListKhoHang()"><i class="fa fa-fw fa-remove"></i></a>
                            <a href="javascript:void(0)" data-target="#{{mainCtrl.controllerId.KhoKhoHangListPopup}}" data-toggle="collapse">
                                <div>
                                    <i class="fa fa-fw fa-search"></i>
                                    <span style="margin-right: 5px;" ng-bind="ctrl.data.KhoSelected.TenKhoXem"></span>
                                </div>
                            </a>
                        </div>
                    </div>
                </div>

                <div class="row form-group form-group-sm" ng-class="ctrl.error.TenKyXem?'has-error':''">
                    <label class="control-label col-sm-3">Kỳ trước</label>
                    <div class="col-sm-9">
                        <div class="form-control auto-height">
                            <a class="pull-right" href="javascript:void(0)" tabindex="-1" ng-click="ctrl.action.clearListKy()"><i class="fa fa-fw fa-remove"></i></a>
                            <a href="javascript:void(0)" data-target="#{{mainCtrl.controllerId.KhoKyListPopup}}" data-toggle="collapse">
                                <div>
                                    <i class="fa fa-fw fa-search"></i>
                                    <span style="margin-right: 5px;" ng-bind="ctrl.data.KySelected.TenKyXem"></span>
                                </div>
                            </a>
                        </div>
                    </div>
                </div>

                <div class="row form-group form-group-sm" ng-class="{'has-error':ctrl.status.isInValidGhiChu}">
                    <label class="control-label col-sm-3">Ghi chú</label>
                    <div class="col-sm-9">
                        <input id="txtGhiChu" class="form-control" ng-model="ctrl.data.objTongHopKy.GhiChu" />
                    </div>
                </div>

                <!-- Input row Trang thai-->
                <div class="row form-group form-group-sm">
                    <label class="control-label col-sm-3">Trạng thái</label>
                    <div class="col-sm-9">
                        <label class="radio-inline">
                            <input style="margin-right: 5px;" type="radio" ng-model="ctrl.data.objTongHopKy.MaTrangThai" value="BCK_KN" name="MaTrangThai" /><span>Kiểm nghiệm</span>
                        </label>
                        <label class="radio-inline">
                            <input style="margin-right: 5px;" type="radio" ng-model="ctrl.data.objTongHopKy.MaTrangThai" value="BCK_HT" name="MaTrangThai" /><span>Hoàn thành</span>
                        </label>
                    </div>
                </div>
            </form>
        </div>
        <div class="panel-footer">
            <a class="btn btn-sm btn-primary" ng-click="ctrl.action.save()" ng-if="ctrl.data.showButtonSave">Lưu (F8)</a> &nbsp;&nbsp;&nbsp;
            <a class="btn btn-sm btn-default" ng-click="ctrl.action.refresh()">Thiết lập lại</a> &nbsp;&nbsp;&nbsp;
            <a class="btn btn-sm btn-default" data-toggle="collapse" data-target="#TongHopXuatNhapTonTheoKyEditPopup" ng-click="ctrl.action.closeEdit()">Đóng</a> &nbsp;&nbsp;&nbsp;
            <button type="button" id="btnXoaId" class="btn  btn-sm btn-default" ng-click="ctrl.action.deleteOne(ctrl.data.objTongHopKy)" ng-if="ctrl.data.objTongHopKy.KyId!=0 && ctrl.data.showButtonXoa">Xóa</button>&nbsp;&nbsp;&nbsp;
        </div>
    </div><!-- /popup cập nhật kỳ -->

    @{Html.RenderPartial("~/views/KhoKhoHang/_KhoKhoHangListPopup.cshtml", new ViewDataDictionary { { "Html", true }, { "onInitView", "{controllerId:mainCtrl.controllerId.KhoKhoHangListPopup,isSelectOne:true,showTable:true,userInfo:" + ViewBag.userInfo + "}" } });}
    @{Html.RenderPartial("~/views/KhoTongHopXuatNhapTonTheoKy/_KhoKyListPopup.cshtml", new ViewDataDictionary { { "Html", true }, { "onInitView", "{controllerId:mainCtrl.controllerId.KhoKyListPopup,isSelectOne:true,showTable:true}" } });}
</div>


@section ImportStyles{}
@section SetupStyles{}
@section ImportScripts{}
@section SetupScripts{}
@section ImportAngular{

    <!-- Ky controller -->
    <script src="~/Scripts/angular/KhoTongHopXuatNhapTonTheoKy/controller/MainCtrl.js"></script>
    <script src="~/Scripts/angular/KhoTongHopXuatNhapTonTheoKy/controller/KhoTongHopXuatNhapTonTheoKyFilterCtrl.js"></script>
    <script src="~/Scripts/angular/KhoTongHopXuatNhapTonTheoKy/controller/KhoTongHopXuatNhapTonTheoKyListCtrl.js"></script>
    <script src="~/Scripts/angular/KhoTongHopXuatNhapTonTheoKy/service/KhoTongHopXuatNhapTonTheoKyService.js"></script>
    <script src="~/Scripts/angular/KhoTongHopXuatNhapTonTheoKy/controller/KhoTongHopXuatNhapTonTheoKyEditCtrl.js"></script>
    <!-- Nhan Vien Popup controller -->
    <script src="~/Scripts/angular/NhanVien/List/service/NhanVienService.js"></script>
    <script src="~/Scripts/angular/NhanVien/List/controller/NhanVienListCtrl.js"></script>
    <script src="~/Scripts/angular/TuyChonFormCot/service/TuyChonCotService.js"></script>
    <script src="~/Scripts/angular/TuyChonFormCot/controller/TuyChonCotListCtrl.js"></script>
    <script src="~/Scripts/angular/app/models/utility.js"></script>
    <!-- Utility -->
    <script src="~/Scripts/angular/app/models/keyCodes.js"></script>

    @{Html.RenderPartial("~/views/KhoKhoHang/_KhoKhoHangListPopup.cshtml", new ViewDataDictionary { { "ImportAngular", true } });}
    @{Html.RenderPartial("~/views/KhoTongHopXuatNhapTonTheoKy/_KhoKyListPopup.cshtml", new ViewDataDictionary { { "ImportAngular", true } });}
    <script src="~/Scripts/angular/KhoHangHoa/controller/KhoHangHoaListPopCtrl.js"></script>
    <script src="~/Scripts/angular/KhoHangHoa/service/KhoHangHoaService.js"></script>


}

